@model TradeSuiteApp.Web.Areas.SNOP.Models.SalesForecastModel
@{
    ViewBag.Title = "SalesForecast";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@SNOP.SalesForecast</h1>
            <span class="uk-text-upper uk-text-small">@SNOP.SalesForecastList</span>
        </div>
        <div class="heading_actions">
                 @if (Model.ID != 0)
                    { 
                        @ActionAuthorization.IsAuthorized("Details", Html.ActionLink(Common.Create, "Details", "SaleForecast", new { Area = "SNOP", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn" }))
                    }
                 else
                 {
                    @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "SaleForecast", new { Area = "SNOP"}, new { @class = "md-btn" }))
                 }
                <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table class="uk-table" id="sales-forecast-list" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>
                                @SNOP.TransNo
                            </th>
                            <th>
                                @SNOP.TransDate
                            </th>
                            <th>
                                @SNOP.Month
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>
                                @SNOP.TransNo
                            </th>
                            <th>
                                @SNOP.TransDate
                            </th>
                            <th>
                                @SNOP.Month
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/SalesForecast")
<script type="text/javascript">
    SalesForecast.list();
</script>