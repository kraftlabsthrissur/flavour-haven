@model TradeSuiteApp.Web.Areas.SNOP.Models.SalesForecastModel
@{
    ViewBag.Title = "SalesForecast Details";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@SNOP.SalesForecastDetails</h1>
            <span class="uk-text-upper uk-text-small">@SNOP.SalesForecast</span>
        </div>
        <div class="heading_actions">
            @Html.ActionLink(Common.Close, "Index", "SaleForecast", new { Area = "SNOP" }, new { @class = "md-btn " })
            @if (Model.IsFinalize == false)
            {
                @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "SaleForecast", new { Area = "SNOP", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn" }))
            }
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="gatepass form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/SNOP/Views/SaleForecast/View.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/SalesForecast")
<script type="text/javascript">
    SalesForecast.init();
</script>
