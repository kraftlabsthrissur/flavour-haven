@model IEnumerable<TradeSuiteApp.Web.Areas.Manufacturing.Models.JobWorkIssueViewModel>
@{
    ViewBag.Title = "Job Work Issue  ";

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>Job Work Issue</h1>
            <span class="uk-text-upper uk-text-small">Job Work Issue</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "JobWorkIssue", new { Area = "Manufacturing" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <div id="page_content_inner">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="JobWork-issue-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-10">@Common.SerialNo</th>
                            <th class="width-20">@Manufacturing.IssueNo</th>
                            <th class="width-30">@Manufacturing.IssueDate</th>
                            <th class="width-120">@Manufacturing.IssuedItem</th>
                           
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-10">@Common.SerialNo</th>
                            <th class="width-20">@Manufacturing.IssueNo</th>
                            <th class="width-30">@Manufacturing.IssueDate</th>
                            <th class="width-120">@Manufacturing.IssuedItem</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr class="@item.value.Status">
                                <td>
                                    @Html.DisplayFor(model => (item.i))
                                    @Html.HiddenFor(model => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>@item.value.IssueNo</td>
                                <td>@item.value.IssueDate</td>
                                <td>@item.value.Supplier</td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/JobWorkIssue")
<script type="text/javascript">
    JobWorkIssue.list();
</script>