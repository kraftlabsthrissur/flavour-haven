@model IEnumerable<TradeSuiteApp.Web.Areas.Manufacturing.Models.ProductionProcessViewModel>
@{
    ViewBag.Title = "Production Process ";

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <div class="heading_actions">
            <a href="#" data-uk-tooltip="{pos:'bottom'}" title="Print"><i class="md-icon material-icons">&#xE8AD;</i></a>
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a href="#">@Common.Action</a></li>

                    </ul>
                </div>
            </div>
        </div>
        <h1>@Manufacturing.ProductionProcess</h1>
        <span class="uk-text-upper uk-text-small">@Manufacturing.ProductionProcess</span>
    </div>
    <div id="page_content_inner" class="list-view production">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="md-card-toolbar">

                    @Html.ActionLink(Common.Create, "Create", "ProductionProcess", new { Area = "Manufacturing" }, new { @class = "md-btn" })
                </div>
                <table id="production-process-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-10">@Common.SerialNo</th>
                            <th class="width-20">@Manufacturing.ItemName</th>
                               <th class="width-120">@Manufacturing.BatchNo</th>
                            <th class="width-30">@Manufacturing.Batchsize</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-10">@Common.SerialNo</th>
                            <th class="width-20">@Manufacturing.ItemName</th>
                              <th class="width-120">@Manufacturing.BatchNo</th>
                            <th class="width-30">@Manufacturing.Batchsize</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => (item.i))
                                    @Html.HiddenFor(model => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>@item.value.ItemName</td>
                                 <td>@item.value.BatchNo</td>
                                <td>@item.value.BatchSize</td>


                            </tr>

                        }
                    </tbody>
                </table>
                <div id="color-indicator">
                    <span class="draft">
                        <i class="uk-icon-stop"></i>
                        Draft
                    </span>
                    <span class="processed">
                        <i class="uk-icon-stop"></i>
                        Processed
                    </span>
                    <span class="cancelled">
                        <i class="uk-icon-stop"></i>
                        Cancelled
                    </span>
                </div>
                <br />
                <div class="md-card-toolbar md-card-toolbar-bottom">
                    @Html.ActionLink(Common.Create, "Create", "ProductionProcess", new { Area = "Manufacturing" }, new { @class = "md-btn" })
                </div>

            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/ProductionProcess")



