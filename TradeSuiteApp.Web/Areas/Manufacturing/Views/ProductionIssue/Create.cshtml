@model TradeSuiteApp.Web.Areas.Manufacturing.Models.ProductionIssueViewModel

@{
    ViewBag.Title = "Create Production Issue";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Manufacturing.ProductionIssue</h1>
            <span class="uk-text-upper uk-text-small">@Manufacturing.CreateProductionIssue</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveASDraft'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("Complete", "<a class='md-btn btnCompleted'>" + Common.Complete + "</a>")
           
            @Html.ActionLink(Common.Close, "Index", "ProductionIssue", new { Area = "Manufacturing" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="page_content_inner" class="production form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("_form", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/ProductionIssue")
@Scripts.Render("~/Js/Page/Item")
<script type="text/javascript">
    ProductionIssue.init();
</script>