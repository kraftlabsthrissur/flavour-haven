@model  TradeSuiteApp.Web.Areas.Manufacturing.Models.PreProcessReceiptViewModel
@{

    ViewBag.Title = "Edit Material Purification Receipt";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Manufacturing.MaterialPurification</h1>
            <span class="uk-text-upper uk-text-small">@Manufacturing.EditMaterialPurification</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("SaveAsDraft", "<a class='md-btn btnSaveASDraft'>" + Common.SaveAsDraft + "</a>")
           
            @Html.HiddenFor(m => m.ID)
            <a class="md-btn cancel"> Cancel</a>
            @Html.ActionLink(Common.Close, "Index", "PreProcessReceipt", new { Area = "Manufacturing" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Manufacturing/Views/PreProcessReceipt/_form.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/PreProcessReceipt")
<script type="text/javascript">
    PreProcessReceipt.init();
</script>