@model TradeSuiteApp.Web.Areas.Manufacturing.Models.RepackingViewModel

@{
    ViewBag.Title = "Repacking Details";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Manufacturing.Repacking</h1>
            <span class="uk-text-upper uk-text-small">@Manufacturing.Repacking</span>
        </div>
        <div class="heading_actions">
            @if (Model.IsDraft)
            {
                @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "Repacking", new { Area = "Manufacturing", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn edit" }))
                
                @Html.HiddenFor(m => m.ID)
                @ActionAuthorization.IsAuthorized("Cancel", "<a class='md-btn cancel'>" + Common.Cancel + "</a>")
                
            }
            @Html.ActionLink(Common.Close, "Index", "Repacking", new { Area = "Manufacturing" }, new { @class = "md-btn " })

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Manufacturing/Views/Repacking/View.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Repacking")

<script type="text/javascript">
    Repacking.details();
</script>