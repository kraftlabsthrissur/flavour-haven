@model TradeSuiteApp.Web.Areas.Manufacturing.Models.PreProcessIssueViewModel

@{
    ViewBag.Title = Manufacturing.MaterialPurificationIssueDetails;
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Manufacturing.MaterialPurificationIssue</h1>
            <span class="uk-text-upper uk-text-small">@Manufacturing.MaterialPurificationIssueDetails</span>
        </div>
        <div class="heading_actions">
            @if (Model.IsDraft && !Model.IsCancelled)
            {
                @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "PreProcessIssue", new { Area = "Manufacturing", id = Model.ID }, new { @class = "md-btn edit" }))
                
                @Html.HiddenFor(m => m.ID)
                @ActionAuthorization.IsAuthorized("Cancel", "<a class='md-btn cancel'>" + Common.Cancel + "</a>")
                

            }
           
            @Html.ActionLink(Common.Back, "Index", "PreProcessIssue", new { Area = "Manufacturing" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="page_content_inner">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Manufacturing/Views/PreProcessIssue/View.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/PreProcessIssue")
<script type="text/javascript">
    PreProcessIssue.bind_events();
</script>