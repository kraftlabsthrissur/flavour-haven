        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <ul class="uk-tab" data-uk-tab="{connect:'#tabs-qc-content',animation:'slide-horizontal'}" id="tabs-qc">
                    <li class="uk-active" data-tab="pending-qc"><a>@Manufacturing.PedingQC</a></li>
                    <li data-tab="on-going-qc"><a>@Manufacturing.OnGoingQC</a></li>
                    <li data-tab="completed-qc"><a>@Manufacturing.CompletedQC</a></li>
                </ul>
                <ul id="tabs-qc-content" class="uk-switcher uk-margin">
                    <li>
                        <table id="pending-qc-items-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Manufacturing.ProductionNo
                                    </th>
                                    <th class="width-80">
                                        @Manufacturing.RecieptDate
                                    </th>
                                    <th>
                                        @Manufacturing.Item
                                    </th>
                                    <th class="width-80">
                                        @Manufacturing.BatchNo
                                    </th>
                                    <th class="width-40">
                                        @Manufacturing.Unit
                                    </th>
                                    <th class="width-80">
                                        @Manufacturing.Batchsize
                                    </th>
                                    <th class="width-80">
                                        @Manufacturing.RecieptQuantity
                                    </th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Manufacturing.ProductionNo
                                    </th>
                                    <th class="width-80">
                                        @Manufacturing.RecieptDate
                                    </th>
                                    <th>
                                        @Manufacturing.Item
                                    </th>
                                    <th class="width-80">
                                        @Manufacturing.BatchNo
                                    </th>
                                    <th class="width-40">
                                        @Manufacturing.Unit
                                    </th>
                                    <th class="width-80">
                                        @Manufacturing.Batchsize
                                    </th>
                                    <th class="width-80">
                                        @Manufacturing.RecieptQuantity
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.pendingQCList)
                                {
                                    <tr>
                                        <td>
                                            @(1 + @Model.pendingQCList.IndexOf(item) )
                                            @Html.HiddenFor(a => item.ID, new { @class = "ID" })
                                        </td>
                                        <td>
                                            @Html.DisplayFor(a => item.ReferenceNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(a => item.ProductionDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(a => item.ItemName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(a => item.BatchNo)
                                        </td>
