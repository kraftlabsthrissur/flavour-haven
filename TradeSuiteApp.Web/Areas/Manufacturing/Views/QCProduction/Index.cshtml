@model  TradeSuiteApp.Web.Areas.Manufacturing.Models.QCItemViewModel
@{
    ViewBag.Title = "Quality Analysis of Finished Goods";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>Quality Analysis of Finished Goods</h1>
            <span class="uk-text-upper uk-text-small">@Manufacturing.QAItemList</span>
        </div>
        <div class="heading_actions">
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

