@model TradeSuiteApp.Web.Areas.Manufacturing.Models.JobWorkReceiptViewModel

@{
    ViewBag.Title = "Create Job Work Receipt";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Manufacturing.JobWorkReceipt</h1>
            <span class="uk-text-upper uk-text-small">@Manufacturing.CreateJobWorkReceipt</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveASDraft'>" + Common.SaveAsDraft + "</a>")
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveNew'>" + Common.SaveAndNew + "</a>")
                       @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Close, "Index", "JobWorkReceipt", new { Area = "Manufacturing" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Manufacturing/Views/JobWorkReceipt/Form.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/Masters/Views/Item/StockableItemsList.cshtml")
@Html.Partial("~/Areas/Masters/Views/Supplier/PartialList.cshtml")
@Html.Partial("~/Areas/Manufacturing/Views/JobWorkIssue/PartialList.cshtml")
@Scripts.Render("~/Js/Page/Item")
@Scripts.Render("~/Js/Page/Supplier")
@Scripts.Render("~/Js/Page/JobWorkReceipt")
@Scripts.Render("~/Js/Page/JobWorkIssue")
<script type="text/javascript">
    JobWorkReceipt.init();
</script>