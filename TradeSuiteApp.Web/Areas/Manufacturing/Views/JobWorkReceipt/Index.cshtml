@model List<TradeSuiteApp.Web.Areas.Manufacturing.Models.JobWorkReceiptViewModel>
@{
    ViewBag.Title = "Job Work Receipt ";

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Manufacturing.JobWorkReceipt</h1>
            <span class="uk-text-upper uk-text-small">@Manufacturing.JobWorkReceipt</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "JobWorkReceipt", new { Area = "Manufacturing" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="page_content_inner">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="receipt-list-table" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th>@Manufacturing.TransNo</th>
                            <th>@Manufacturing.TransDate</th>
                            <th>@Manufacturing.Supplier</th>
                            <th>@Manufacturing.IssueNo</th>
                            
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th>@Manufacturing.TransNo</th>
                            <th>@Manufacturing.TransDate</th>
                            <th>@Manufacturing.Supplier</th>
                            <th>@Manufacturing.IssueNo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr class="@item.value.Status">
                                <td>
                                    @Html.DisplayFor(model => (item.i))
                                    @Html.HiddenFor(model => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>@item.value.TransNo</td>
                                <td>@item.value.TransDate</td>
                                <td>@item.value.Supplier</td>
                                <td>@item.value.TransDate</td>

                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/JobWorkReceipt")
<script type="text/javascript">
    JobWorkReceipt.list();
</script>


