@model TradeSuiteApp.Web.Areas.Manufacturing.Models.PackingViewModel

@{
    ViewBag.Title = "Production Packing Details";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Manufacturing.ProductionPacking</h1>
            <span class="uk-text-upper uk-text-small">@Manufacturing.ProductionPackingDetails</span>
        </div>
        <div class="heading_actions">
            @if (Model.IsDraft)
            {
                @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "ProductionPacking", new { Area = "Manufacturing", id = Model.ID }, new { @class = "md-btn " }))
                @ActionAuthorization.IsAuthorized("Cancel", "<a class='md-btn cancel'>" + Common.Cancel + "</a>")
                
            }
            @Html.HiddenFor(m => m.ID)
        
            @Html.ActionLink(Common.Back, "Index", "ProductionPacking", new { Area = "Manufacturing" }, new { @class = "md-btn " })

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="detail-view production">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Manufacturing/Views/ProductionPacking/View.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/ProductionPacking")
<script type="text/javascript">
    ProductionPacking.details();
    ProductionPacking.bind_events();
</script>