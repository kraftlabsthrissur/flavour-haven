@model TradeSuiteApp.Web.Areas.Stock.Models.StockAdjustmentModel
@{
    ViewBag.Title = "Detail Stock Adjustment";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <div class="heading_title">
            <h1>@Stock.StockAdjustment</h1>
            <span class="uk-text-upper uk-text-small">@Stock.StockAdjustmentDetail</span>
        </div>
        <div class="heading_actions">
            @if (Model.IsDraft)
            {
                @ActionAuthorization.IsAuthorized("EditV3", Html.ActionLink(Common.Edit, "EditV3", "StockAdjustment", new { Area = "Stock", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn edit" }))


            }
            @Html.ActionLink(Common.Back, "IndexV3", "StockAdjustment", new { Area = "Stock" }, new { @class = "md-btn " })


            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>@Common.Action</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Stock/Views/StockAdjustment/viewV3.cshtml", Model); }

            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/StockAdjustmentV3")

<script type="text/javascript">
    stockadjustment.details();
</script>


