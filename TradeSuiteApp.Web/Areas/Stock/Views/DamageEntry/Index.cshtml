@model IEnumerable<TradeSuiteApp.Web.Areas.Stock.Models.DamageEntryModel>
@{
    ViewBag.Title = "Index";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Stock.DamageEntry</h1>
            <span class="uk-text-upper uk-text-small">@Stock.DamageEntryList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "DamageEntry", new { Area = "Stock" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">

                <table id="damage-entry-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Common.SerialNo
                            </th>
                            <th>
                                @Stock.TransNo
                            </th>
                            <th>
                                @Stock.Date
                            </th>
                            <th>
                                @Stock.Store
                            </th>

                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>
                                @Common.SerialNo
                            </th>
                            <th>
                                @Stock.TransNo
                            </th>
                            <th>
                                @Stock.Date
                            </th>
                            <th>
                                @Stock.Store
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr class="@item.value.Status">
                                <td>
                                    @item.i
                                    @Html.HiddenFor(model => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @item.value.TransNo
                                </td>
                                <td>
                                    @item.value.Date
                                </td>
                                <td>
                                    @item.value.Warehouse
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/DamageEntry")
<script type="text/javascript">
    DamageEntry.list();
</script>