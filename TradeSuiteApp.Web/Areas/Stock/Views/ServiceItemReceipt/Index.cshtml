@model IEnumerable<TradeSuiteApp.Web.Areas.Stock.Models.StockReceiptViewModel>
@{
    ViewBag.Title = @Stock.ServiceItemReceiptList;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <div class="heading_title">
            <h1>@Stock.ServiceItemReceipt</h1>
            <span class="uk-text-upper uk-text-small">@Stock.ServiceItemReceiptList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "ServiceItemReceipt", new { Area = "Stock" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>@Common.Action</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="stock-receipt-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-20">
                                @Common.SerialNo
                            </th>
                            <th class="width-80">
                                @Stock.TransNo
                            </th>
                            <th class="width-80">
                                @Stock.TransDate
                            </th>
                            <th>
                                @Stock.IssueLocation
                            </th>
                            <th>
                                @Stock.IssuePremise
                            </th>
                            <th>
                                @Stock.ReceiptLocation
                            </th>
                            <th>
                                @Stock.ReceiptPremise
                            </th>
                            <th>
                                @Stock.Amount
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-20">
                                @Common.SerialNo
                            </th>
                            <th class="width-80">
                                @Stock.TransNo
                            </th>
                            <th class="width-80">
                                @Stock.TransDate
                            </th>
                            <th>
                                @Stock.IssueLocation
                            </th>
                            <th>
                                @Stock.IssuePremise
                            </th>
                            <th>
                                @Stock.ReceiptLocation
                            </th>
                            <th>
                                @Stock.ReceiptPremise
                            </th>
                            <th>
                                @Stock.Amount
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/ServiceItemReceipt")
<script type="text/javascript">
    ServiceItemReceipt.list();
</script>