
@model TradeSuiteApp.Web.Areas.Stock.Models.StockConsumptionModel
@{
    ViewBag.Title = "Edit Stock Consumption";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <div class="heading_title">
            <h1>@Stock.StockConsumption</h1>
            <span class="uk-text-upper uk-text-small">@Stock.EditStockConsumption</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("SaveAsDraft", "<a class='md-btn btnSavedraft'>" + Common.SaveAsDraft + "</a>")
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveNew'>" + Common.SaveAndNew + "</a>")
            @Html.ActionLink(Common.Close, "Index", "StockConsumption", new { Area = "Stock" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>@Common.Action</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Stock/Views/StockConsumption/_form.cshtml", Model); }

            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/Masters/Views/Item/ItemList.cshtml")


@Scripts.Render("~/Js/Page/Item")

@Scripts.Render("~/Js/Page/StockConsumption")


<script type="text/javascript">
    stockconsumption.init();
</script>
