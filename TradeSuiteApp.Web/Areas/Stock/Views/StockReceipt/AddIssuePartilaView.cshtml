
@model   IEnumerable<TradeSuiteApp.Web.Areas.Stock.Models.StockIssueViewModel>

<div class="uk-modal" id="add-issue" aria-hidden="true" style="display: none; overflow-y: scroll;">
    <div class="uk-modal-dialog uk-modal-dialog" style="">
        <div class="uk-modal-header">
            <h3 class="uk-modal-title">Select Stock Issue<i class="material-icons" data-uk-tooltip="{pos:'top'}" title="headline tooltip"></i></h3>
        </div>
        <br />

        <table id="itempopup-list" class="uk-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="width-30">@Common.SerialNo</th>
                    <th class="width-20"></th>

                    <th class="width-40">@Stock.IssueNo</th>
                    <th class="width-40">@Stock.IssueDate</th>
                    <th class="width-40">@Stock.FromLocation</th>
                    <th class="width-40">@Stock.ToLoaction</th>

                </tr>
            </thead>
            <thead class="search">
                <tr>

                    <th class="width-30">@Common.SerialNo</th>
                    <th class="width-20"></th>

                    <th class="width-40">@Stock.IssueNo</th>
                    <th class="width-40">@Stock.IssueDate</th>
  <th class="width-40">@Stock.FromLocation</th>
                    <th class="width-40">@Stock.ToLoaction</th>

                </tr>

            </thead>
            <tbody>
                @if (Model != null)
                {
                    if (Model != null)
                    {
                        foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {


                            <tr>
                                <td class="uk-text-center">
                                    <input type="hidden" class="IssueID" value="@item.value.ID" />
                                    @item.i
                                </td>

                                <td class="uk-text-center spclCheck" data-md-icheck><input type="checkbox" name="inputissueno" id="issueno-id" class="spclCheckItem" value="@item.value.ID" /></td>

                                <td class="uk-text-right">@item.value.IssueNo</td>

                                <td class="uk-text-right"> @item.value.Date</td>
                                <td class="uk-text-right"> @item.value.FromLocationName</td>
                                <td class="uk-text-right"> @item.value.ToLocationName</td>

                            </tr>
                        }
                    }
                }

            </tbody>
        </table>
        <div class="uk-modal-footer uk-text-right">
            <button type="button" class="md-btn md-btn-flat uk-modal-close">Close</button>
            <button type="button" class="md-btn md-btn-flat uk-modal-close" id="btnOkStockRequisitionList">Ok</button>
        </div>
    </div>
</div>




