@model TradeSuiteApp.Web.Areas.AHCMS.Models.PatientDiagnosisModel
<input type="button" id="show-all-medicine" data-uk-modal="{target:'#all-medicine', center:false}" />
<div class="uk-modal" id="all-medicine" aria-hidden="true" style="display: none; overflow-y: scroll;">
    <div class="uk-modal-dialog" style="">
        <div class="uk-modal-header">
            <h3 class="uk-modal-title">Add Medicine<i class="material-icons"></i></h3>
        </div>
        <div class="uk-modal-content">
            <div class="uk-form-row">
                <div>
                    <table id="add_all_medicine_list" class="uk-table " cellspacing="0" width=100">
                        <thead>
                            <tr>
                                <th class="width-20"></th>
                                <th class="width-20"></th>
                                <th class="width-100">@AHCMS.Medicine</th>
                                <th class="width-20">@AHCMS.Unit</th>
                                <th class="width-20">@AHCMS.Quantity</th>
                                <th class="width-20">@AHCMS.Instructions</th>
                                <th class="width-20">@AHCMS.NoOfTimes</th>
                                <th class="width-20">@AHCMS.StartDate</th>
                                <th class="width-20">@AHCMS.EndDate</th>
                                <th class="width-10"></th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="uk-modal-footer uk-text-right">
                <button type="button" class="md-btn  uk-modal-close">@Common.Close</button>
                <button type="button" class="md-btn md-btn-primary" id="btnAllMadicine">Add</button>
 
            </div>
        </div>
    </div>
</div>