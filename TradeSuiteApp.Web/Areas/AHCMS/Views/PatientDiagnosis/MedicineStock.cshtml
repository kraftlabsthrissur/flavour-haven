<input type="button" id="medicinestock" data-uk-modal="{target:'#show-medicinestock', center:false}" />
<div class="uk-modal" id="show-medicinestock" aria-hidden="true" style="display: none; overflow-y: scroll;">
    <div class="uk-modal-dialog" style="">
        <div class="uk-modal-header">
            <h3 class="uk-modal-title">Medicine Stock<i class="material-icons"></i></h3>
        </div>
        <div class="uk-form-row">
            <div>
                <table id="medicine-stock-list" class="uk-table" cellspacing="0">
                    <thead>
                        <tr>
                            @*<th class="width-10">@Common.SerialNo</th>*@
                            <th class="width-120">@AHCMS.ItemName</th>
                            <th class="width-50">@Masters.ProductionGroup</th>
                            <th class="width-10">@Sales.Unit</th>
                            <th class="width-10">@Sales.Stock</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <div class="uk-modal-footer uk-text-right">
            <button type="button" class="md-btn" id="btn_stock_modal_close">@Common.Close</button>
        </div>
    </div>
</div>
