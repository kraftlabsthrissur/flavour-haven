

@{
    ViewBag.Title = AHCMS.Xray;
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@AHCMS.Xray</h1>
            <span class="uk-text-upper uk-text-small">@AHCMS.XrayList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("CreateInvoice", Html.ActionLink(Common.Create, "CreateInvoice", "Xray", new { Area = "AHCMS" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">

                <table id="LabTest-list" class="uk-table">
                    <thead>
                        <tr>
                            <th width="30">
                                @Common.SerialNo
                            </th>
                            <th class="width-100">
                                @AHCMS.Date
                            </th>
                            <th class="width-100">
                                @AHCMS.PatientCode
                            </th>
                            <th>
                                @AHCMS.Patient
                            </th>
                            <th>
                                @AHCMS.Xray
                            </th>
                            <th class="width-100">
                                @AHCMS.Doctor
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>
                                @Common.SerialNo
                            </th>
                            <th>
                                @AHCMS.Date
                            </th>
                            <th>
                                @AHCMS.PatientCode
                            </th>
                            <th>
                                @AHCMS.Patient
                            </th>
                            <th>
                                @AHCMS.Xray
                            </th>
                            <th>
                                @AHCMS.Doctor
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Xray")
<script type="text/javascript">
    Xray.list();
</script>



