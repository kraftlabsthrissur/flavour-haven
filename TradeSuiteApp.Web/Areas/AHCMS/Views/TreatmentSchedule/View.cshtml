
@model TradeSuiteApp.Web.Areas.AHCMS.Models.TreatmentScheduleModel
@{
    ViewBag.Title = "view";
}
<div class="uk-form-row">
    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-medium-1-1">
            <div class="uk-form-row">
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-8">
                        <label>@AHCMS.FromDate</label>
                        @Html.TextBoxFor(m => m.FromDate, new { @class = "md-input", @disabled = "disabled", @id = "FromDate" })
                    </div>
                    <div class="uk-width-medium-1-8">
                        <label>@AHCMS.ToDate</label>
                        @Html.TextBoxFor(m => m.ToDate, new { @class = "md-input", @disabled = "disabled", @id = "ToDate" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="uk-form-row">
        <div>

            <table id="TreatmentSchedule-items-list" class="uk-table " cellspacing="0" width=100">
                <thead>
                    <tr>
                        <th class="width-10">@Common.SerialNo</th>
                        <th class="width-80">@AHCMS.Patient</th>
                        <th class="width-80">@AHCMS.Doctor</th>
                        <th class="width-80">@AHCMS.Treatment</th>
                        <th class="width-10">@AHCMS.NoOfTimes</th>
                        <th class="width-40">@AHCMS.TreatmentRoom</th>
                        <th class="width-10">@AHCMS.StartTime</th>
                        <th class="width-50">@AHCMS.Duration</th>
                        <th class="width-50">@AHCMS.Therapist</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items.Select((value, i) => new { i = (i + 1), value }))
                    {
                        <tr>
                            <td class="uk-text-center">@(1 + @Model.Items.IndexOf(item.value))</td>
                            <td> @item.value.PatientName</td>
                            <td> @item.value.DoctorName</td>
                            <td> @item.value.TreatmentName</td>
                            <td> @item.value.NoOfTreatment</td>
                            <td> @item.value.TreatmentRoom</td>
                            <td> @item.value.StartTime</td>
                            <td> @item.value.Duration</td>
                            <td> @item.value.TherapistName</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

    </div>
</div>


