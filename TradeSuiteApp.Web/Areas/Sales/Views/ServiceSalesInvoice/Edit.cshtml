@model TradeSuiteApp.Web.Areas.Sales.Models.SalesInvoiceModel

@{
    ViewBag.Title = "Edit Service Sales Invoice";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Sales.ServiceSalesInvoice</h1>
            <span class="uk-text-upper uk-text-small">@Sales.EditServiceSalesInvoice</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("SaveAsDraft", "<a class='md-btn btnSaveASDraft'>" + Common.SaveAsDraft + "</a>")
            @Html.HiddenFor(m => m.ID)
            @ActionAuthorization.IsAuthorized("Cancel", "<a class='md-btn cancel uk-hidden'>" + Common.Cancel + "</a>")
            @Html.ActionLink(Common.Close, "Index", "ServiceSalesInvoice", new { Area = "Sales" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="sales form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("Form", Model); }
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/Customer")
@Scripts.Render("~/Js/Page/Item")
@Scripts.Render("~/Js/Page/ServiceSalesInvoice")
<script type="text/javascript">
    ServiceSalesInvoice.init();
</script>