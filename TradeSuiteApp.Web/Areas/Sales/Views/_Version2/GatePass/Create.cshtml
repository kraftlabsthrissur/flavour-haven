@model TradeSuiteApp.Web.Areas.Sales.Models.GatePassModel
@{
    ViewBag.Title = Sales.CreateNewGatePass;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Sales.GatePass</h1>
            <span class="uk-text-upper uk-text-small">@Sales.CreateNewGatePass</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn save-draft-gatepass'>" + Common.SaveAsDraft + "</a>")
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn save-gatepass-new'>" + Common.SaveAndNew + "</a>")
            
            @Html.ActionLink(Common.Close, "Index", "GatePass", new { Area = "Sales" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="gatepass form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Sales/Views/GatePass/Form.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/GatePass")
<script type="text/javascript">
    GatePass.init();
    GatePass.bind_evnts();
</script>