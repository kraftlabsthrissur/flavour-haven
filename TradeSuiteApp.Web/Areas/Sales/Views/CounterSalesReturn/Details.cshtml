@model TradeSuiteApp.Web.Areas.Sales.Models.CounterSalesReturnModel

@{
    ViewBag.Title = "Counter Sales Return Details";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Sales.CounterSalesReturn</h1>
            <span class="uk-text-upper uk-text-small">@Sales.CounterSalesReturnDetails</span>
        </div>
        <div class="heading_actions">
            @if (Model.IsDraft)
            {
                @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "CounterSalesReturn", new { Area = "Sales", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn " }))

            }
            @Html.HiddenFor(m => m.ID)
            @ActionAuthorization.IsAuthorized("CounterSalesReturnPrintPdf", " <a class='md-btn printpdf'>PRINT PDF</a>")
            @Html.ActionLink(Common.Back, "Index", "CounterSalesReturn", new { Area = "Sales" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="page_content_inner" class="sales returnd_details-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Sales/Views/CounterSalesReturn/View.cshtml", Model); }
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/CounterSalesReturn")

<script type="text/javascript">
    CounterSalesReturn.details();
</script>