@model TradeSuiteApp.Web.Areas.Sales.Models.SalesReturnModel

@{
    ViewBag.Title = "Edit Sales Return";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <div class="heading_title">
            <h1>@Sales.SalesReturn</h1>
            <span class="uk-text-upper uk-text-small">@Sales.EditSalesReturn</span>
        </div>
        <div class="heading_actions">
            @*<a class="md-btn update"> Update</a>
            <a class="md-btn updateasdraft"> Save As Draft</a>*@
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("SaveAsDraft", "<a class='md-btn btnSaveASDraft'>" + Common.SaveAsDraft + "</a>")
            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Close, "Index", "SalesReturn", new { Area = "Sales" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="sales form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Sales/Views/SalesReturn/Form.cshtml", Model); }
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/SalesReturn")
@Scripts.Render("~/Js/Page/Customer")
@Scripts.Render("~/Js/Page/Item")

<script type="text/javascript">
    SalesReturn.init();
</script>