@model TradeSuiteApp.Web.Areas.Sales.Models.SalesOrderModel

@{
    ViewBag.Title = "Create Sales Order";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }" class="uk-text-right">
        <div class="heading_title">
            <h1>@Sales.SalesOrder</h1>
            <span class="uk-text-upper uk-text-small">@Sales.CreateSalesOrder</span>
        </div>
        <div class="uk-width-medium-1-8">
            <label>@Sales.PrintWithItemCode</label>&nbsp;&nbsp;

            @if (Model.PrintWithItemCode == true)
            {
                <input type="checkbox" id="PrintWithItemCode" data-md-icheck checked />
            }
            else
            {
                <input type="checkbox" id="PrintWithItemCode" data-md-icheck />
            }
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("SaveAsDraft", "<a class='md-btn btnSaveASDraft'>" + Common.SaveAsQuotation + "</a>")
            @Html.ActionLink(Common.Close, "Index", "SalesOrder", new { Area = "Sales" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="sales form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Sales/Views/SalesOrder/Form.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render(System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Js/Page/Customer"))
@Scripts.Render(System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Js/Page/Item"))
@Scripts.Render(System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Js/Page/SalesOrder"))
<script type="text/javascript">
    SalesOrder.init();
</script>