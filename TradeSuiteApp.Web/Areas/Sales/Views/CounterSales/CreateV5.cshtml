@model TradeSuiteApp.Web.Areas.Sales.Models.CounterSalesModel

@{
    ViewBag.Title = Sales.CreateCounterSalesInvoice;
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Sales.CounterSalesInvoice</h1>
            <span class="uk-text-upper uk-text-small">@Sales.CreateCounterSalesInvoice</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.SaveAndPrint + "</a>")
            @ActionAuthorization.IsAuthorized("SaveAsDraft", "<a class='md-btn btnSaveASDraft'>" + Common.SaveAsDraft + "</a>")
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveAndNew'>" + Common.SaveAndNew + "</a>")
            @Html.HiddenFor(m => m.ID)
            @Html.HiddenFor(m => m.EmployeeCategoryID)
            @Html.ActionLink(Common.Close, "IndexV5", "CounterSales", new { Area = "Sales" }, new { @class = "md-btn btnClose" })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="sales form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("Form", Model); }
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.IsThermalPrint)
    @Html.HiddenFor(m => m.IsDotMatrixPrint)
</div>
@Html.Partial("~/Areas/Sales/Views/CounterSales/_batchWithStock.cshtml")
@Html.Partial("~/Areas/Masters/Views/Item/PartialList.cshtml")
@Html.Partial("~/Areas/Masters/Views/Employee/DoctorList.cshtml")
@Html.Partial("~/Areas/Masters/Views/Doctor/DoctorPartialList.cshtml")
@Html.Partial("~/Areas/Masters/Views/Patient/PatientPartialList.cshtml")
@Html.Partial("~/Areas/Sales/Views/CounterSales/_addPatient.cshtml", Model)
@Html.Partial("~/Areas/Masters/Views/Employee/PartialList.cshtml")
@Html.Partial("~/Areas/Sales/Views/_Version3/CounterSales/AppointmentProcessList.cshtml")
@Html.Partial("~/Areas/Sales/Views/_Version3/CounterSales/EmployeeList.cshtml")
@Scripts.Render("~/Js/Page/Item")
@Scripts.Render("~/Js/Page/Supplier")
@Scripts.Render("~/Js/Page/Patient")
@Scripts.Render("~/Js/Page/Employee")
@Scripts.Render("~/Js/Page/CounterSalesV5")
@Scripts.Render("~/Js/Page/Sales")
@Scripts.Render("~/Js/SignalR")
<script src="~/signalr/Hubs"></script>
<script type="text/javascript">
    CounterSales.init();
    SignalRClient.init();
</script>