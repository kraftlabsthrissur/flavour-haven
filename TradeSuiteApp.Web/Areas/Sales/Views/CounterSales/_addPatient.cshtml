@model TradeSuiteApp.Web.Areas.Sales.Models.CounterSalesModel
<input type="button" id="show-add-patient" data-uk-modal="{target:'#add-patient', center:false}" />
<div class="uk-modal" id="add-patient" aria-hidden="true" style="display: none; overflow-y: scroll;">
    <div class="uk-modal-dialog" style="">
        <div class="uk-modal-header">
            <h3 class="uk-modal-title">Add Patient<i class="material-icons"></i></h3>
        </div>
        <div class="uk-modal-content">
            <div class="uk-form-row">
                <div class="uk-grid" data-uk-grid-margin="">
                    <div class="uk-width-medium-1-5">
                        <label>@Masters.PatientCode<span>*</span></label>
                        @Html.TextBoxFor(model => model.PatientCode, "", new { @class = "md-input label-fixed ",@disabled="disabled"})
                    </div>
                    <div class="uk-width-medium-2-5">
                        <label>@Masters.PatientName<span>*</span></label>
                        @Html.TextBox("PartyName", "", new { @class = "md-input label-fixed" })
                    </div>
                    <div class="uk-width-medium-2-5">
                        <div class="uk-autocomplete " id="add-doctor-autocomplete">
                            <div class="uk-input-group">
                                <label for="uk_dp_start">@Sales.DrName</label>
                                @Html.TextBox("addDoctorName", "", new { @class = "md-input label-fixed " })
                                @*<span class="uk-input-group-addon">
                                    <a data-uk-modal="{target:'#select-doctor',center:false}">
                                        <i class="uk-input-group-icon uk-icon-search"></i>
                                    </a>
                                </span>*@
                                <script type="text/autocomplete">
                                    <ul class="uk-nav uk-nav-autocomplete uk-autocomplete-results">
                                        {{~items}}
                                        <li data-value="{{ $item.Name }}"
                                            data-id="{{$item.ID}}">
                                            <a>
                                                {{ $item.Name }}
                                            </a>
                                        </li>
                                        {{/items}}
                                    </ul>
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="uk-form-row">
                <div class="uk-grid" data-uk-grid-margin="">
                    <div class="uk-width-medium-1-5">
                        <label>@Masters.Age</label>
                        @Html.TextBox("Age", "", new { @class = "md-input label-fixed" })
                    </div>
                    <div class="uk-width-medium-1-5">
                        <label>@Masters.DOB</label>
                        <div class="uk-input-group">
                            <input class="md-input label-fixed past-date date" type="text" id="DOB" value="@DateTime.Now.ToString(" dd-MM-yyyy")">
                            <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar past-date"></i></span>
                        </div>
                    </div>
                    <div class="uk-width-medium-1-5">
                        <label>@Masters.Gender</label>
                        @Html.DropDownListFor(Model => Model.Sex, Model.PatientSexList, new { @class = "md-input label-fixed",@Id= "Sex" })
                    </div>
                    <div class="uk-width-medium-2-5">
                        <label>@Masters.MobileNo</label>
                        @Html.TextBox("MobileNo", "", new { @class = "md-input label-fixed" })
                    </div>
                </div>
            </div>
            <div class="uk-form-row">
                <div class="uk-grid" data-uk-grid-margin="">
                    <div class="uk-width-medium-1-3">
                        <label>@Masters.Email</label>
                        @Html.TextBox("Email", "", new { @class = "md-input label-fixed" })
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>@Masters.Address1</label>
                        @Html.TextBox("Address1", "", new { @class = "md-input label-fixed" })
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>@Masters.Address2</label>
                        @Html.TextBox("Address2", "", new { @class = "md-input label-fixed" })
                    </div>
                    
                </div>
            </div>
            <div class="uk-form-row">
                <div class="uk-grid" data-uk-grid-margin="">
                    <div class="uk-width-medium-1-3">
                        <label>@Masters.Place</label>
                        @Html.TextBox("Place", "", new { @class = "md-input label-fixed" })
                    </div>
                    <div class="uk-width-medium-1-3">
                        <label>@Masters.PIN</label>
                        @Html.TextBox("PinCode", "", new { @class = "md-input label-fixed" })
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-modal-footer uk-text-right">
            <button type="button" class="md-btn  uk-modal-close">@Common.Close</button>
            <button type="button" class="md-btn md-btn-primary" id="btnOkAddPatient">@Common.Save</button>
        </div>
    </div>
</div>
