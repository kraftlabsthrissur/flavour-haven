@{
    ViewBag.Title = @Sales.CounterSalesList;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Sales.CounterSales</h1>
            <span class="uk-text-upper uk-text-small">@Sales.CounterSalesList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "CreateV5", "CounterSales", new { Area = "Sales" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <ul class="uk-tab hai" data-uk-tab="{connect:'#tabs-modules-content',animation:'slide-horizontal'}" id="tabs-counter-sales">

                    <li class="uk-active" data-tab="saved-counter-sales"><a>@Sales.SavedCounterSales</a></li>
                    <li class="" data-tab="draft"><a>@Sales.Draft</a></li>
                    <li class="" data-tab="cancelled"><a>@Sales.Cancelled</a></li>
                </ul>
                <ul id="tabs-modules-content" class="uk-switcher uk-margin">

                    <li>
                        <table id="saved-counter-sales" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-40">@Common.SerialNo</th>
                                    <th class="width-80">@Sales.TransNo</th>
                                    <th class="width-80">@Sales.TransDate</th>
                                    <th class="width-80">@Sales.SalesType</th>
                                    <th>@Sales.PartyName</th>
                                    <th class="width-80">@Sales.NetAmount</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th>@Common.SerialNo</th>
                                    <th>@Sales.TransNo</th>
                                    <th>@Sales.TransDate</th>
                                    <th>@Sales.SalesType</th>
                                    <th>@Sales.PartyName</th>
                                    <th>@Sales.NetAmount</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                    <li>
                        <table id="draft-counter-sales" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-40">@Common.SerialNo</th>
                                    <th class="width-80">@Sales.TransNo</th>
                                    <th class="width-80">@Sales.TransDate</th>
                                    <th class="width-80">@Sales.SalesType</th>
                                    <th>@Sales.PartyName</th>
                                    <th class="width-80">@Sales.NetAmount</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th>@Common.SerialNo</th>
                                    <th>@Sales.TransNo</th>
                                    <th>@Sales.TransDate</th>
                                    <th>@Sales.SalesType</th>
                                    <th>@Sales.PartyName</th>
                                    <th>@Sales.NetAmount</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                    <li>
                        <table id="cancel-counter-sales" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-40">@Common.SerialNo</th>
                                    <th class="width-80">@Sales.TransNo</th>
                                    <th class="width-80">@Sales.TransDate</th>
                                    <th class="width-80">@Sales.SalesType</th>
                                    <th>@Sales.PartyName</th>
                                    <th class="width-80">@Sales.NetAmount</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th>@Common.SerialNo</th>
                                    <th>@Sales.TransNo</th>
                                    <th>@Sales.TransDate</th>
                                    <th>@Sales.SalesType</th>
                                    <th>@Sales.PartyName</th>
                                    <th>@Sales.NetAmount</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/CounterSalesV5")
<script type="text/javascript">
    CounterSales.list();
</script>