    @model TradeSuiteApp.Web.Areas.Accounts.Models.BRSModel

@{
    ViewBag.Title = Accounts.EditBRS;
}
@Html.HiddenFor(model => model.ID)
@Html.HiddenFor(model => model.FilePath)
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Accounts.BankReconciliationStatement</h1>
            <span class="uk-text-upper uk-text-small">@Accounts.EditBRS</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveAsDraft'>" + Common.SaveAsDraft + "</a>")
           
            @Html.ActionLink(Common.Close, "Index", "BRS", new { Area = "Accounts" }, new { @class = "md-btn " })  
            @Html.HiddenFor(m => m.AttachmentID)
            @Html.HiddenFor(m => m.FilePath)
            @Html.HiddenFor(m => m.FileName)        
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="bank-form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Accounts/Views/BRS/Form.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/BRS")
<select class="status-template uk-hidden">
    @foreach (var item in ViewBag.StatusTemplate.Items)
    {
        <option value="@item.Value">@item.Text</option>
    }
</select>




