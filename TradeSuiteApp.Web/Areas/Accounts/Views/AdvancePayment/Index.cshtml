@model IEnumerable<TradeSuiteApp.Web.Areas.Accounts.Models.AdvancePaymentModel>
@{
    ViewBag.Title = "Advance Payment";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Accounts.AdvancePaymentTitle</h1>
            <span class="uk-text-upper uk-text-small">@Accounts.AdvancePaymentTitle</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "AdvancePayment", new { Area = "Accounts" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <ul class="uk-tab hai" data-uk-tab="{connect:'#tabs-advance-payment',animation:'slide-horizontal'}" id="tabs-AdvancePayment">
                    <li class="uk-active" data-tab="draft"><a>@Accounts.Draft</a></li>
                    <li class="" data-tab="advance-payment"><a>@Accounts.SavedAdvancePayment</a></li>
                </ul>
                <ul id="tabs-advance-payment" class="uk-switcher uk-margin">
                    <li>
                        <table id="draft-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-80">@Accounts.AdvancePaymentNo</th>
                                    <th class="width-80">@Accounts.AdvancePaymentDate </th>
                                    <th class="width-80">@Accounts.Category</th>
                                    <th>@Accounts.Name</th>
                                    <th class="width-80">@Accounts.Amount</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-80">@Accounts.AdvancePaymentNo</th>
                                    <th class="width-80">@Accounts.AdvancePaymentDate </th>
                                    <th class="width-80">@Accounts.Category</th>
                                    <th>@Accounts.Name</th>
                                    <th class="width-80">@Accounts.Amount</th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                    <li>
                        <table id="advance-payment-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-80">@Accounts.AdvancePaymentNo</th>
                                    <th class="width-80">@Accounts.AdvancePaymentDate </th>
                                    <th class="width-80">@Accounts.Category</th>
                                    <th>@Accounts.Name</th>
                                    <th class="width-80">@Accounts.Amount</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-80">@Accounts.AdvancePaymentNo</th>
                                    <th class="width-80">@Accounts.AdvancePaymentDate </th>
                                    <th class="width-80">@Accounts.Category</th>
                                    <th>@Accounts.Name</th>
                                    <th class="width-80">@Accounts.Amount</th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/AdvancePayment")

<script type="text/javascript">
    advance_payment.list();
</script>