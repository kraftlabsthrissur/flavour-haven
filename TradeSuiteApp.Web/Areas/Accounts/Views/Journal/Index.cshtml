@model IEnumerable<TradeSuiteApp.Web.Areas.Accounts.Models.JournalModel>
@{
    ViewBag.Title = Accounts.JournalList;
}


<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Accounts.Journal</h1>
            <span class="uk-text-upper uk-text-small">@Accounts.JournalList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "Journal", new { Area = "Accounts" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <ul class="uk-tab" data-uk-tab="{connect:'#tabs-journal-content',animation:'slide-horizontal'}" id="tabs-journal">
                    <li class="uk-active" data-tab="draft"><a>@Accounts.Draft</a></li>
                    <li class="" data-tab="saved-journal"><a>@Accounts.SavedJournal</a></li>
                </ul>
                <ul id="tabs-journal-content" class="uk-switcher uk-margin">
                    <li>
                        <table id="draft-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.VoucherNumber
                                    </th>
                                    <th class="width-80">
                                        @Accounts.Date
                                    </th>
                                    <th>
                                        @Accounts.DebitAccountName
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TotalDebitAmount
                                    </th>
                                    <th>
                                        @Accounts.CreditAccountName
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TotalCreditAmount
                                    </th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.VoucherNumber
                                    </th>
                                    <th class="width-80">
                                        @Accounts.Date
                                    </th>
                                    <th>
                                        @Accounts.DebitAccountName
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TotalDebitAmount
                                    </th>
                                    <th>
                                        @Accounts.CreditAccountName
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TotalCreditAmount
                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>

                    <li>
                        <table id="saved-journal-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.VoucherNumber
                                    </th>
                                    <th class="width-80">
                                        @Accounts.Date
                                    </th>
                                    <th>
                                        @Accounts.DebitAccountName
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TotalDebitAmount
                                    </th>
                                    <th>
                                        @Accounts.CreditAccountName
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TotalCreditAmount
                                    </th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.VoucherNumber
                                    </th>
                                    <th class="width-80">
                                        @Accounts.Date
                                    </th>
                                    <th>
                                        @Accounts.DebitAccountName
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TotalDebitAmount
                                    </th>
                                    <th>
                                        @Accounts.CreditAccountName
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TotalCreditAmount
                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Journal")




