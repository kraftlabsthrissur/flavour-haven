@model TradeSuiteApp.Web.Areas.Accounts.Models.CustomerReturnVoucherModel

@{
    ViewBag.Title = "Create Customer Return Voucher";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Accounts.CustomerReturnVoucher</h1>
            <span class="uk-text-upper uk-text-small">@Accounts.CreateCustomerReturnVoucher</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("SaveAsDraft", "<a class='md-btn btnSaveAsDraft'>" + Common.SaveAsDraft + "</a>")
            @Html.ActionLink(Common.Close, "Index", "CustomerReturnVoucher", new { Area = "Accounts" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Accounts/Views/CustomerReturnVoucher/Form.cshtml", Model); }
            </div>
        </div>
    </div>

</div>
@Scripts.Render("~/Js/Page/CustomerReturnVoucher")
@Scripts.Render("~/Js/Page/Customer")

<script type="text/javascript">
    CustomerReturnVoucher.init();
</script>