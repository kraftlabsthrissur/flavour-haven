<input class="" type="text" id="ReceiptVoucherID" value="">

<input type="button" id="show-reconciled-date" data-uk-modal="{target:'#reconciled-date', center:false}" />
<div class="uk-modal" id="reconciled-date" aria-hidden="true" style="display: none; overflow-y: scroll;">
    <div class="uk-modal-dialog" style="">
        <div class="uk-modal-header">
            <h3 class="uk-modal-title">Update Reconciled Date<i class="material-icons"></i></h3>
        </div>
        <div class="uk-modal-content">
            <div class="uk-form-row">
                <div class="uk-grid" data-uk-grid-margin="">

                    <div class="uk-width-medium-1-4">
                        <div class="uk-input-group">
                            <label>@Accounts.ReconciledDate<span>*</span></label>
                            @Html.TextBox("ReconciledDate", "", new { @class = "md-input label-fixed  past-date date", @ID = "ReconciledDate" })
                            <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar past-date "></i></span>
                        </div>
                    </div>

                    <div class="uk-width-medium-1-4">
                        <div class="uk-input-group">
                            <label>@Accounts.ReferenceNumber</label>
                            @Html.TextBox("ReferenceNumber", "", new { @class = "md-input label-fixed", @ID = "ReferenceNumber" })
                        </div>
                    </div>

                    <div class="uk-width-medium-1-4">
                        <div class="uk-input-group">
                            <label>@Accounts.Remarks</label>
                            @Html.TextBox("Remarks", "", new { @class = "md-input label-fixed", @ID = "Remarks" })
                        </div>
                    </div>

                    <div class="uk-width-medium-1-4 uk-hidden">
                        <div class="uk-input-group">
                            <label>@Accounts.BankName<span>*</span></label>
                            @Html.TextBox("BankName", "", new { @class = "md-input label-fixed", @ID = "BankName",@disabled="disabled" })
                        </div>
                    </div>


                    
                </div>
            </div>
        </div>

        <div class="uk-modal-footer uk-text-right">
            <button type="button" class="md-btn  uk-modal-close reconciled-date-modal-close">@Common.Close</button>
            <button type="button" class="md-btn md-btn-primary" id="btnSaveReconciledDate">@Common.Save</button>
        </div>
    </div>
</div>