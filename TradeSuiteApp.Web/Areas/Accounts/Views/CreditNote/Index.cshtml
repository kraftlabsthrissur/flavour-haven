
@model IEnumerable<TradeSuiteApp.Web.Areas.Accounts.Models.CreditNoteModel>
@{
    ViewBag.Title = "Credit Note";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <div class="heading_title">
            <h1>@Accounts.CreditNote</h1>
            <span class="uk-text-upper uk-text-small">@Accounts.CreditNoteList</span>
        </div>
        <div class="heading_actions">

            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "CreditNote", new { Area = "Accounts" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>@Common.Action</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <ul class="uk-tab hai" data-uk-tab="{connect:'#tabs-credit-note',animation:'slide-horizontal'}" id="tabs-CreditNote">
                    <li class="uk-active" data-tab="draft"><a>@Accounts.Draft</a></li>
                    <li class="" data-tab="creditnote"><a>@Accounts.CreditNote</a></li>
                </ul>
                <ul id="tabs-credit-note" class="uk-switcher uk-margin">
                    <li>
                        <table id="draft-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-10">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TransDate
                                    </th>
                                    <th class="width-80">
                                        @Accounts.DebitAccount
                                    </th>
                                    <th class="width-80">
                                        @Accounts.CreditAccount
                                    </th>
                                    <th class="width-80">
                                        @Accounts.Amount
                                    </th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-10">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TransDate
                                    </th>
                                    <th class="width-80">
                                        @Accounts.DebitAccount
                                    </th>
                                    <th class="width-80">
                                        @Accounts.CreditAccount
                                    </th>
                                    <th class="width-80">
                                        @Accounts.Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                    <li>
                        <table id="credit-note-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-10">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TransDate
                                    </th>
                                    <th class="width-80">
                                        @Accounts.DebitAccount
                                    </th>
                                    <th class="width-80">
                                        @Accounts.CreditAccount
                                    </th>
                                    <th class="width-80">
                                        @Accounts.Amount
                                    </th>


                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-10">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Accounts.TransDate
                                    </th>
                                    <th class="width-80">
                                        @Accounts.DebitAccount
                                    </th>
                                    <th class="width-80">
                                        @Accounts.CreditAccount
                                    </th>
                                    <th class="width-80">
                                        @Accounts.Amount
                                    </th>

                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/Js/Page/CreditNote")
