@model TradeSuiteApp.Web.Areas.Accounts.Models.CreditNoteModel

@{
    ViewBag.Title = Accounts.CreditNoteDetail;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Accounts.CreditNote</h1>
            <span class="uk-text-upper uk-text-small">@Accounts.CreditNoteDetail</span>
        </div>
        <div class="heading_actions">
            @if (Model.IsDraft == true)
            {
                @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "CreditNote", new { Area = "Accounts", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn" }))
            }
            @Html.ActionLink(Common.Close, "Index", "CreditNote", new { Area = "Accounts" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="creditnote form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Accounts/Views/CreditNote/View.cshtml", Model); }
                @Html.HiddenFor(model => model.ID)
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    CreditNote.init();
</script>



