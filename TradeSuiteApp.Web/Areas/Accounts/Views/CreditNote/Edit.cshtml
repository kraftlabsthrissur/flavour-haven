@model TradeSuiteApp.Web.Areas.Accounts.Models.CreditNoteModel

@{
    ViewBag.Title = Accounts.EditCreditNote;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Accounts.CreditNote</h1>
            <span class="uk-text-upper uk-text-small">@Accounts.EditCreditNote</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("SaveAsDraft", "<a class='md-btn btnSavedraft'>" + Common.SaveAsDraft + "</a>")
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveNew'>" + Common.SaveAndNew + "</a>")
            @Html.ActionLink(Common.Close, "Index", "CreditNote", new { Area = "Accounts" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="creditnote form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Accounts/Views/CreditNote/Form.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/CreditNote")
@Scripts.Render("~/Js/Page/AccountHead")
@Html.Partial("~/Areas/Masters/Views/AccountHead/DebitAccountList.cshtml")
@Html.Partial("~/Areas/Masters/Views/AccountHead/CreditAccountList.cshtml")

<script type="text/javascript">
    CreditNote.init();
    CreditNote.edit();
</script>



