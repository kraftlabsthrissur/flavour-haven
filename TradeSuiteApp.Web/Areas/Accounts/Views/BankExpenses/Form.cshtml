                        <div class="uk-width-medium-1-8">
                            <label>@Accounts.InstrumentNumber</label>
                            @Html.TextBoxFor(m => m.TransactionNumber, new { @class = "md-input  label-fixed" })
                        </div>
                        <div class="uk-width-medium-1-8">
                            <div class="uk-input-group">
                                <label for="uk_dp_start">@Accounts.InstrumentDate</label>
                                @Html.TextBoxFor(m => m.TransactionDate, new { @class = "md-input label-fixed current-date date" })
                                <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar past-date"></i></span>
                            </div>
                        </div>
                        <div class="uk-width-medium-1-8">
                            <label>@Accounts.ItemName<span>*</span></label>
                            @Html.DropDownListFor(Model => Model.ItemID, Model.ItemList, "Select", new { @class = "md-input label-fixed", })
                        </div>
                        <div class="uk-width-medium-1-8">
                            <label>@Accounts.ModeOfPayment<span>*</span></label>
                            @Html.DropDownListFor(Model => Model.ModeOfPaymentID, Model.ModeOfPaymentList, "Select", new { @class = "md-input label-fixed", })
                        </div>
                        <div class="uk-width-medium-1-8">
                            <label>@Accounts.Amount<span>*</span></label>
                            @Html.TextBoxFor(m => m.Amount, new { @class = "md-input  label-fixed mask-currency" })
                        </div>
                        <div class="uk-width-medium-1-8">
                            <label>@Accounts.ReferenceNumber</label>
                            @Html.TextBoxFor(m => m.ReferenceNo, new { @class = "md-input label-fixed" })

                        </div>
                        <div class="uk-width-medium-1-8">
                            <label>@Accounts.Remarks</label>
                            @Html.TextBoxFor(m => m.Remarks, new { @class = "md-input  label-fixed" })
                        </div>
                        <div class="uk-width-medium-1-10">
                            <div class="md-input-wrapper md-input-filled">
                                <label>&nbsp;</label>
                                <button class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light" id="btnAddItem">@Common.Add</button>
