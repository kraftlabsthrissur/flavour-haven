</div>
<div class="section-group">
    <div class="uk-form-row">
        <table id="bank-expenses-item-list" class="uk-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="width-10">@Common.SerialNo</th>
                    <th class="width-100">@Accounts.InstrumentNumber</th>
                    <th class="width-40">@Accounts.InstrumentDate</th>
                    <th class="width-80">@Accounts.ItemName</th>
                    <th class="width-60">@Accounts.ModeOfPayment</th>
                    <th class="width-80">@Accounts.Amount</th>
                    <th class="width-80">@Accounts.Remarks</th>
                    <th class="width-80">@Accounts.ReferenceNumber</th>
                    <th class="width-10"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null)
                {
                    foreach (var itm in Model.Items.Select((value, i) => new { i = (i + 1), value }))
                    {
                        <tr>
                            <td class="uk-text-center">@itm.i</td>
                            <td class="TransactionNumber">@itm.value.TransactionNumber</td>
                            <td class="TransactionDate">@itm.value.TransactionDate</td>
                            <td class="ItemName">
                                <input type="hidden" class="ItemID" value="@itm.value.ItemID" />
                                <input type="hidden" class="ModeOfPaymentID" value="@itm.value.ModeOfPaymentID" />
                                @itm.value.ItemName
                            </td>
                            <td class="ModeOfPayment">@itm.value.ModeOfPayment</td>
                            <td class="Amount mask-currency">@itm.value.Amount</td>
                            <td class="Remarks">@itm.value.Remarks</td>
                            <td class="ReferenceNo">@itm.value.ReferenceNo</td>
                            <td class="uk-text-center"><a class="remove-item"><i class="uk-icon-remove"></i></a></td>
                        </tr>;
                    }
                }

            </tbody>
        </table>
    </div>
</div>