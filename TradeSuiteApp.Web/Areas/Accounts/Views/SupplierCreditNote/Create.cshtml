@model TradeSuiteApp.Web.Areas.Accounts.Models.SupplierCreditNoteModel
@{
    ViewBag.Title = Accounts.CreateSupplierCreditNote;

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Accounts.SupplierCreditNote</h1>
            <span class="uk-text-upper uk-text-small">@Accounts.CreateSupplierCreditNote</span>
        </div>
        <div class="heading_actions">
            
            @*<a class="md-btn btnSaveAsDraft">@Common.SaveAsDraft</a> // for future use*@
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveCn'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("SaveAsDraft", "<a class='md-btn btnSaveAsDraft'>" + Common.SaveAsDraft + "</a>")
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveCnNew'>" + Common.SaveAndNew + "</a>")           
            @Html.ActionLink(Common.Close, "Index", "SupplierCreditNote", new { Area = "Accounts" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="creditnote form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Accounts/Views/SupplierCreditNote/Form.cshtml", Model); }
            </div>
        </div>
    </div>
</div> 
@Scripts.Render("~/Js/Page/SupplierCreditNote")
@Scripts.Render("~/Js/Page/Supplier")
@Scripts.Render("~/Js/Page/Item")
@Html.Partial("~/Areas/Masters/Views/Item/ItemList.cshtml")
@Html.Partial("~/Areas/Masters/Views/Supplier/PartialList.cshtml")
<script type="text/javascript">
    SupplierCreditNote.init();
</script>