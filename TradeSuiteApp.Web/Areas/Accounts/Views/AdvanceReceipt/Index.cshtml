@model IEnumerable<TradeSuiteApp.Web.Areas.Accounts.Models.AdvanceReceiptModel>
@{
    ViewBag.Title = "Index";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Accounts.AdvanceReceiptList</h1>
            <span class="uk-text-upper uk-text-small">@Accounts.AdvanceReceiptList</span>
        </div>
        <div class="heading_actions">
            @Html.ActionLink(Common.Create, "Create", "AdvanceReceipt", new { Area = "Accounts" }, new { @class = "md-btn" })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="advance-Receipt-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-10">@Common.SerialNo</th>
                            <th class="width-20">@Accounts.AdvanceReceiptNo</th>
                            <th class="width-30">@Accounts.AdvanceReceiptDate </th>
                            <th class="width-120">@Accounts.Name</th>
                            <th class="width-30">@Accounts.Amount</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-10">@Common.SerialNo</th>
                            <th class="width-20">@Accounts.AdvanceReceiptNo</th>
                            <th class="width-30">@Accounts.AdvanceReceiptDate </th>
                            <th class="width-120">@Accounts.Name</th>
                            <th class="width-30">@Accounts.Amount</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr class="@item.value.Status">
                                <td>
                                    @Html.DisplayFor(model => (item.i))
                                    @Html.HiddenFor(model => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>@item.value.AdvanceReceiptNo</td>
                                <td>@item.value.AdvanceReceiptDate</td>
                                <td>@item.value.CustomerName</td>
                                <td class="mask-currency">@item.value.NetAmount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/AdvanceReceipt")

<script type="text/javascript">
    advance_receipt.list();
</script>

