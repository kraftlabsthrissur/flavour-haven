@inherits System.Web.Mvc.WebViewPage
<div class="md-card" data-uk-grid-margin="">
    <div class="md-card-content uk-row-first">
        <div class="heading_a uk-margin-bottom">Category Wise Stock - @DateTime.Now.ToString("MMMM")</div>
        <div class="Category-Wise">
            <div class="uk-width-1-1">
                <ul class="uk-tab" data-uk-tab="{connect:'#category-wise-stock'}" id="stock-category-tab">
                    <li class="uk-active" id="tky-stock-tab"><a>VOS TKY</a></li>
                    <li id="pol-stock-tab"><a>VOS POL</a></li>
                    <li id="chu-stock-tab"><a>VOS CHU</a></li>
                </ul>
                <ul id="category-wise-stock" class="uk-switcher uk-margin">
                    <li aria-hidden="false" class="uk-active">
                        <div>
                            <table id="category-wise-stock_table-tky" class="uk-table">
                                <thead>
                                    <tr>
                                        <td>BusinessCategory</td>
                                        <td class="width-100">Stock</td>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </li>
                    <li aria-hidden="true" class="">
                        <div>
                            <table id="category-wise-stock_table-pol" class="uk-table">
                                <thead>
                                    <tr>
                                        <td>BusinessCategory</td>
                                        <td class="width-100">Stock</td>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </li>
                    <li aria-hidden="true" class="">
                        <div>
                            <table id="category-wise-stock_table-chu" class="uk-table">
                                <thead>
                                    <tr>
                                        <td>BusinessCategory</td>
                                        <td class="width-100">Stock</td>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>