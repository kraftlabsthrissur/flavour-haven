@model TradeSuiteApp.Web.Areas.Reports.Models.OpRegisterModel
@{
    ViewBag.ReportTitle = "Bed Occupancy Register";
}

@Scripts.Render("~/Js/Page/BedOccupancyRegister")

<div id="page_content_inner">
    <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-content">
            <div class="section-group">
                <div class="uk-form-row">
                    <div class="uk-grid" data-uk-grid-margin="">
                        <div class="uk-width-medium-2-10 ">
                            <form action="/Reports/AHCMS/BedOccupancyRegister" id="report-filter-form" method="POST" data-name="BedOccupancyRegister">
                                <div class="filters uk-form-row ">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-1">
                                            <div class="uk-input-group">
                                                <label for="uk_dp_start" class="sales-category">@Reports.Month</label>
                                                @Html.DropDownListFor(Model => Model.MonthID, Model.MonthList, "Select", new { @class = "md-input label-fixed" })
                                                @Html.HiddenFor(Model => Model.Month)
                                            </div>

                                            @*<div class="uk-width-medium-1-1">*@
                                            <div class="uk-input-group">
                                                <label for="uk_dp_start" class="sales-category">@Reports.Year</label>
                                                @Html.DropDownListFor(Model => Model.Year, Model.YearList, "Select", new { @class = "md-input label-fixed" })
                                                @Html.HiddenFor(Model => Model.YearID)
                                                @Html.HiddenFor(Model => Model.CurrentYear)
                                                @Html.HiddenFor(Model => Model.YearName)
                                            </div>
                                            @*</div>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin>
                                        <div class="uk-width-medium-1-2">
                                            <div class="md-input-wrapper md-input-filled">
                                                <label>&nbsp;</label>
                                                <button type="submit" class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light" id="report-filter-submit">Show</button>
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-2">
                                            <div class="md-input-wrapper md-input-filled">
                                                <label>&nbsp;</label>
                                                <a class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light " id="Refresh">Reset</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="uk-width-medium-8-10 ">
                            <div class="uk-form-row">
                                <div class="uk-grid" data-uk-grid-margin="" id="report-viewer">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


