@model TradeSuiteApp.Web.Areas.Reports.Models.CounterSaleReportModel
@{
    ViewBag.ReportTitle = "Fast Moving Items Report";
}

@Scripts.Render("~/Js/Page/FastMovingItems")

<div id="page_content_inner">
    <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-content">
            <div class="section-group">
                <div class="uk-form-row">
                    <div class="uk-grid" data-uk-grid-margin="">
                        <div class="uk-width-medium-2-10 ">
                            <form action="/Reports/Sales/FastMovingItemsReport" id="report-filter-form" method="POST" data-name="FastMovingItemsReport">
                                <div class="uk-form-row">
                                    <div class="panel">
                                        <label>Report Type</label>
                                        <div class="">
                                            <div class="uk-form-row">
                                                <div class="uk-width-medium-1-1">
                                                    <input type="radio" name="Type" class="reportType" data-md-icheck checked="" value="Value" /> @Html.Label("Fast Moving Items Value Wise")
                                                </div>
                                            </div>
                                        </div><br />
                                        <div class="uk-form-row">
                                            <div class="uk-width-medium-1-1">
                                                <input type="radio" name="Type" class="reportTypeQuantity" data-md-icheck  value="Monthly" /> @Html.Label("Fast Moving Items Quantity Wise")
                                            </div>
                                            <br />
                                            <div class="uk-form-row" id="Quantity">
                                                <div class="uk-grid" data-uk-grid-margin>
                                                    <div class="uk-width-medium-1-2">
                                                        <input type="radio" name="Mode" class="summary" data-md-icheck checked=""  value="Quantity" /> @Html.Label("Summary")
                                                    </div>
                                                    <div class="uk-width-medium-1-2">
                                                        <input type="radio" name="Mode" class="Detail" data-md-icheck value="Detail" /> @Html.Label("Detail")
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="uk-form-row">
                                            <div class="uk-width-medium-1-1">
                                                <input type="radio" name="Type" class="reportType" data-md-icheck value="NonItem" /> @Html.Label("Non Moving Items")
                                            </div>
                                        </div><br />
                                        <div class="uk-form-row">
                                            <div class="uk-width-medium-1-1">
                                                <input type="radio" name="Type" class="reportType" data-md-icheck value="InventoryLevel" /> @Html.Label("Inventory Level")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="" id="Date">
                                        <div class="uk-width-medium-1-2">
                                            <div class="uk-input-group">
                                                <label for="uk_dp_start">@Reports.Fromdate</label>
                                                @Html.TextBoxFor(model => model.FromDateString, new { @class = "md-input label-fixed  past-date date" })
                                                <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar past-date"></i></span>
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-2">
                                            <div class="uk-input-group">
                                                <label for="uk_dp_start">@Reports.Todate</label>
                                                @Html.TextBoxFor(model => model.ToDateString, new { @class = "md-input label-fixed  past-date date" })
                                                @Html.HiddenFor(model => model.FinYear)
                                                <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar past-date"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin>
                                        <div class="uk-width-medium-1-2">
                                            <div class="md-input-wrapper md-input-filled">
                                                <label>&nbsp;</label>
                                                <button type="submit" class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light" id="report-filter-submit">Show</button>
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-2">
                                            <div class="md-input-wrapper md-input-filled">
                                                <label>&nbsp;</label>
                                                <a class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light " id="Refresh">Reset</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="uk-width-medium-8-10 ">
                            <div class="uk-form-row">
                                <div class="uk-grid" data-uk-grid-margin="" id="report-viewer">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

