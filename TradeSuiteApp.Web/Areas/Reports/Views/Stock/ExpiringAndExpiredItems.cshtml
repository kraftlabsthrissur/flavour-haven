@model TradeSuiteApp.Web.Areas.Reports.Models.StockReportModel
@{
    ViewBag.ReportTitle = "Expiring And Expired Items Report";
}

@Scripts.Render("~/Js/Page/ExpiringAndExpiredItems")

<div id="page_content_inner">
    <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-content">
            <div class="section-group">
                <div class="uk-form-row">
                    <div class="uk-grid" data-uk-grid-margin="">
                        <div class="uk-width-medium-2-10 ">
                            <form action="/Reports/Stock/ExpiringAndExpiredItems" id="report-filter-form" method="POST" data-name="ExpiringAndExpiredItems">
                                <div class="uk-form-row " id="Mode">
                                        <div class="panel">
                                            <label>Mode</label>
                                            <div class="uk-grid" data-uk-grid-margin>
                                                <div class="uk-width-medium-1-2">
                                                    <input type="radio" name="Type" class="Expiring" data-md-icheck checked="" value="Expiring" /> @Html.Label("Expiring Items")
                                                </div>
                                                <div class="uk-width-medium-1-2">
                                                    <input type="radio" name="Type" class="Expired" data-md-icheck value="Expired" /> @Html.Label("Expired Items")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-2 uk-hidden">
                                            <div class="uk-input-group">
                                                <label for="uk_dp_start">@Reports.Date</label>
                                                @Html.TextBoxFor(model => model.FromDateString, new { @class = "md-input label-fixed  past-date date" })
                                                <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar past-date"></i></span>
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-2" id="ExpiryDate">
                                            <div class="uk-input-group">
                                                <label for="uk_dp_start">@Reports.ExpiryDate</label>
                                                @Html.TextBoxFor(model => model.ToDateString, new { @class = "md-input label-fixed  past-date date" })
                                                <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar future-date"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin>
                                        <div class="uk-width-medium-1-2">
                                            <div class="md-input-wrapper md-input-filled">
                                                <label>&nbsp;</label>
                                                <button type="submit" class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light" id="report-filter-submit">Show</button>
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-2">
                                            <div class="md-input-wrapper md-input-filled">
                                                <label>&nbsp;</label>
                                                <a class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light " id="Refresh">Reset</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="uk-width-medium-8-10 ">
                            <div class="uk-form-row">
                                <div class="uk-grid" data-uk-grid-margin="" id="report-viewer">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


