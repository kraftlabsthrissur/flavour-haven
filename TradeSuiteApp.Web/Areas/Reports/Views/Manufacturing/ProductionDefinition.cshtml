@model TradeSuiteApp.Web.Areas.Reports.Models.ProductionDefinitionModel
@{
    ViewBag.ReportTitle = "Production Definition";
}

@Scripts.Render("~/Js/Page/ProductionDefinitionReport")

<div id="page_content_inner">
    <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-content">
            <div class="section-group">
                <div class="uk-form-row">
                    <div class="uk-grid" data-uk-grid-margin="">
                        <div class="uk-width-medium-2-10 ">
                            <form action="/Reports/Manufacturing/ProductionDefinition" id="report-filter-form" method="POST" data-name="ProductionDefinition">
                                <input type="hidden" value="Stock" id="ItemAutoType" />
                                <div class="uk-form-row">
                                    <div class="panel">
                                        <label>Report Type</label>
                                        <div class="uk-grid" data-uk-grid-margin>
                                            <div class="uk-width-medium-1-2">
                                                <input type="radio" name="ReportType" class="ProductionDefinition" data-md-icheck checked="" value="Production" /> @Html.Label("Production")
                                            </div>
                                            <div class="uk-width-medium-1-2">
                                                <input type="radio" name="ReportType" class="ProductionDefinition" data-md-icheck value="Packing" /> @Html.Label("Packing")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin>
                                        <div class="uk-width-medium-1-1">
                                            <div class="uk-autocomplete " id="production-group-autocomplete">
                                                <label for="uk_dp_start">@Reports.ProductionGroupName</label>
                                                @Html.TextBox("ProductionGroupName", "", new { @class = "md-input label-fixed", @ID = "ProductionGroupName" })


                                            </div>
                                        </div>
                                    </div>
                                    @Html.HiddenFor(m => m.ProductionGroupID)
                                </div>
                                <div class="filters uk-form-row Production">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-1">
                                            <label for="uk_dp_start">@Reports.StandardBatchSize</label>
                                            @Html.TextBoxFor(model => model.StandardBatchSize, new { @class = "md-input label-fixed mask-production-qty", @id = "StandardBatchSize", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                                <div class="filters uk-form-row Production">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-1">
                                            <label for="uk_dp_start">@Reports.BatchSize</label>
                                            @Html.TextBoxFor(model => model.ActualBatchSize, new { @class = "md-input label-fixed mask-production-qty", @id = "ActualBatchSize" })
                                        </div>
                                    </div>
                                </div>
                                <div class="filters uk-form-row Packing">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-1">
                                            <label for="uk_dp_start">@Reports.ItemName</label>
                                            @Html.DropDownListFor(Model => Model.PackingItemID, Model.ItemPackingList, new { @class = "md-input label-fixed" })
                                        </div>
                                    </div>
                                </div>

                                <div class="filters uk-form-row Packing">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-1">
                                            <label for="uk_dp_start">@Reports.BatchType</label>
                                            @Html.DropDownListFor(Model => Model.BatchTypeID, Model.BatchTypeList, new { @class = "md-input label-fixed" })
                                        </div>
                                    </div>
                                </div>
                                <div class="filters uk-form-row Packing">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-1">
                                            <label for="uk_dp_start">@Reports.Qty</label>
                                            @Html.TextBoxFor(model => model.Qty, new { @class = "md-input label-fixed mask-production-qty", @id = "txtQty" })
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin>
                                        <div class="uk-width-medium-1-2">
                                            <div class="md-input-wrapper md-input-filled">
                                                <label>&nbsp;</label>
                                                <button type="submit" class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light" id="report-filter-submit">Show</button>
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-2">
                                            <div class="md-input-wrapper md-input-filled">
                                                <label>&nbsp;</label>
                                                <a class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light " id="Refresh">Reset</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="uk-width-medium-8-10 ">
                            <div class="uk-form-row">
                                <div class="uk-grid" data-uk-grid-margin="" id="report-viewer">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
