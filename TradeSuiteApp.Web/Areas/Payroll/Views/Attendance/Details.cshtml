@model TradeSuiteApp.Web.Areas.Payroll.Models.AttendanceModel

@{
    ViewBag.Title = Payroll.AttendanceDetails;

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Payroll.Attendance</h1>
            <span class="uk-text-upper uk-text-small">@Payroll.AttendanceDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Back, "Edit", "Attendance", new { Area = "Payroll" }, new { @class = "md-btn " }))
            
            @Html.HiddenFor(m => m.EmployeeID)
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="details-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div id="calendar_selectable">

                </div>
            </div>
        </div>
    </div>
</div>
</div>
@Scripts.Render("~/Js/Page/Attendance")
<script type="text/javascript">
    Attendance.details();
</script>