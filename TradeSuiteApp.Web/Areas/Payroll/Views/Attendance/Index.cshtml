@model IEnumerable<TradeSuiteApp.Web.Areas.Payroll.Models.AttendanceModel>
@{
    ViewBag.Title = Common.Attendance;
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Payroll.Attendance</h1>
            <span class="uk-text-upper uk-text-small">@Payroll.AttendanceList - @DateTime.Now.Year</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink("Monthly Attendance", "Edit", "Attendance", new { Area = "Payroll" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
