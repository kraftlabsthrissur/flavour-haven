                        <table id="attendance-employee-list" class="uk-table" cellspacing="0">
                            <thead>
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-40">
                                        @Payroll.EmployeeCode
                                    </th>

                                    <th >
                                        @Payroll.EmployeeName
                                    </th>
                                    <th class="width-20">
                                        @Payroll.TotalLeave
                                    </th>
                                    <th class="width-20">
                                        @Payroll.BalanceLeave
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                                {
                                    <tr>
                                        <td>
                                            @item.i
                                            @Html.HiddenFor(model => item.value.ID, new { @class = "ID" })
                                        </td>
                                        <td>
                                            @item.value.EmployeeCode
                                        </td>
                                        <td>
                                            <span>@item.value.EmployeeName</span>
                                        </td>
                                        <td class="uk-text-right">
                                            @item.value.TotalLeave
                                        </td>
                                        <td class="uk-text-right">
                                            @item.value.BalanceLeave
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="uk-width-6-10" id="month-list-wrapper">
                        <table id="attendance-month-list" class="uk-table" cellspacing="0">
