
@model TradeSuiteApp.Web.Areas.Payroll.Models.LeaveApplicationModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.LeaveApplications</h1>
            <span class="uk-text-upper uk-text-small">@Masters.CreateNewLeaveApplication</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn BtnSave'>" + Common.Save + "</a>")
            
            @Html.ActionLink(Common.Close, "Index", "LeaveApplication", new { Area = "Payroll" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-grid" data-uk-grid-margin>

                        @{Html.RenderPartial("/Areas/Payroll/Views/LeaveApplication/Form.cshtml", Model); }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/LeaveApplication")
<script type="text/javascript">
    LeaveApplication.init();
</script>

