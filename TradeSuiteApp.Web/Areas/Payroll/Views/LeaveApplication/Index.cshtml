@model IEnumerable<TradeSuiteApp.Web.Areas.Payroll.Models.LeaveApplicationModel>
@{
    ViewBag.Title = "Leave Applications";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Payroll.LeaveApplications</h1>
            <span class="uk-text-upper uk-text-small">@Payroll.LeaveApplicationList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "LeaveApplication", new { Area = "Payroll" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="leave-application-list" class="uk-table" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="width-30"> @Common.SerialNo</th>
                            <th class="width-20"> @Payroll.EmployeeName</th>
                            <th class="width-40"> @Payroll.EmployeeCategory</th>
                            <th class="width-200">@Payroll.LeaveType</th>
                            <th class="width-120">@Payroll.NoOfDays</th>
                            <th class="width-60"> @Masters.StartDate</th>
                            <th class="width-60"> @Masters.EndDate</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>@Payroll.EmployeeName</th>
                            <th>@Payroll.EmployeeCategory</th>
                            <th>@Payroll.LeaveType</th>
                            <th>@Payroll.NoOfDays</th>
                            <th>@Masters.StartDate</th>
                            <th>@Masters.EndDate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {


                            <tr>
                                <td>
                                    @item.i
                                    @Html.HiddenFor(model => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @item.value.EmployeeName
                                </td>
                                <td>
                                    @item.value.EmpCategory
                                </td>
                                <td>
                                    @item.value.LeaveType
                                </td>
                                <td>
                                    @item.value.NoOfDays
                                </td>
                                <td>
                                    @item.value.StartDateStr
                                </td>
                                <td>
                                    @item.value.EndDateStr
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/LeaveApplication")
