

@model  TradeSuiteApp.Web.Areas.Asset.Models.AssetCorrectionFilterModel
    @{
    }
    <div id="page_content">
        <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
            <div class="heading_title">
                <h1>
                    @Asset.Correction
                </h1>
                <span class="uk-text-upper uk-text-small">@Asset.CorrectionList</span>
            </div>
            <div class="heading_actions">
                @ActionAuthorization.IsAuthorized("Filter", "<a class='md-btn btnFilter'>" + Asset.Filter + "</a>")
                
            </div>
        </div>
        <div id="page_content_inner" class="list-view">
            <div class="md-card uk-margin-medium-bottom">
                <div class="md-card-content">
                    <div class="section-group">
                        <div class="uk-form-row uk-hidden filter">
                            <div class="uk-grid filter" data-uk-grid-margin="">
                                <div class="uk-width-medium-1-10 ">
                                    <div class="uk-autocomplete " id="code-from-autocomplete">
                                        <label for="uk_dp_start">@Asset.AssetCodeFrom</label>
                                        @Html.TextBox("AssetCodeFrom", "", new { @class = "md-input label-fixed" })
                                        <script type="text/autocomplete">
                                            <ul class="uk-nav uk-nav-autocomplete uk-autocomplete-results">
                                                {{~items}}
                                                <li data-value="{{ $item.Code }}"
                                                    data-id="{{$item.ID}}">
                                                    <a>
                                                        {{ $item.Code }}
                                                        @*<div>{{{ $item.ID }}}</div>*@
                                                    </a>
                                                </li>
                                                {{/items}}
                                            </ul>
                                        </script>
                                    </div>
                                </div>
                                <div class="uk-width-medium-1-10 ">
                                    <div class="uk-autocomplete " id="code-to-autocomplete">
                                        <label for="uk_dp_start">@Asset.AssetCodeTo</label>
                                        @Html.TextBox("AssetCodeTo", "", new { @class = "md-input label-fixed" })
                                        <script type="text/autocomplete">
                                            <ul class="uk-nav uk-nav-autocomplete uk-autocomplete-results">
                                                {{~items}}
                                                <li data-value="{{ $item.Code }}"
                                                    data-id="{{$item.ID}}">
                                                    <a>
                                                        {{ $item.Code }}
                                                        @*<div>{{{ $item.ID }}}</div>*@
                                                    </a>
                                                </li>
                                                {{/items}}
                                            </ul>
                                        </script>
                                    </div>
                                </div>
                                <div class="uk-width-medium-1-10 ">
                                    <label for="uk_dp_start">@Asset.AssetNameFrom</label>
                                    @Html.DropDownListFor(Model => Model.AssetNameFrom, Model.AssetNameRangeList, "Select", new { @class = "md-input label-fixed", @id = "FromAssetRange" })
                                </div>
                                <div class="uk-width-medium-1-10 ">
                                    <label for="uk_dp_start">@Asset.AssetNameTo</label>
                                    @Html.DropDownListFor(Model => Model.AssetNameTo, Model.AssetNameRangeList, "Select", new { @class = "md-input label-fixed", @id = "ToAssetRange" })
                                </div>
                                <div class="uk-width-medium-2-10 ">
                                    <div class="uk-autocomplete " id="asset-name-autocomplete">
                                        <label for="uk_dp_start">@Asset.AssetName</label>
                                        @Html.TextBox("AssetName", "", new { @class = "md-input label-fixed" })
                                        <script type="text/autocomplete">
                                            <ul class="uk-nav uk-nav-autocomplete uk-autocomplete-results">
                                                {{~items}}
                                                <li data-value="{{ $item.Code }}"
                                                    data-id="{{$item.ID}}">
                                                    <a>
                                                        {{ $item.Code }}
                                                        @*<div>{{{ $item.ID }}}</div>*@
                                                    </a>
                                                </li>
                                                {{/items}}
                                            </ul>
                                        </script>
                                    </div>
                                </div>

                                <div class="uk-width-medium-1-10">
                                    <div class="md-input-wrapper md-input-filled">
                                        <label>&nbsp;</label>
                                        <button class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light" id="btnSubmit">@Asset.Submit</button>
                                    </div>
                                </div>
                                <div class="uk-width-medium-1-10">
                                    <div class="md-input-wrapper md-input-filled">
                                        <label>&nbsp;</label>
                                        <button class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light" id="btnReset">@Asset.Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="section-group">
                        <div class="uk-form-row">
                            <div class="uk-grid">
                                <div class="uk-width-1-1">
                                    <table id="asset-items-list" class="uk-table" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Common.SerialNo
                                                </th>
                                                <th>
                                                    @Asset.TransNo
                                                </th>
                                                <th>
                                                    @Asset.AssetCode
                                                </th>
                                                <th>
                                                    @Asset.AssetName
                                                </th>
                                                <th>
                                                    @Asset.ItemName
                                                </th>
                                                <th>
                                                    @Asset.SupplierName
                                                </th>
                                                <th>
                                                    @Asset.AssetValue
                                                </th>

                                            </tr>
                                        </thead>
                                        <thead class="search">
                                            <tr>
                                                <th>
                                                    @Common.SerialNo
                                                </th>
                                                <th>
                                                    @Asset.TransNo
                                                </th>
                                                <th>
                                                    @Asset.AssetCode
                                                </th>
                                                <th>
                                                    @Asset.AssetName
                                                </th>
                                                <th>
                                                    @Asset.ItemName
                                                </th>
                                                <th>
                                                    @Asset.SupplierName
                                                </th>
                                                <th>
                                                    @Asset.AssetValue
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/Js/Page/correction")

    <script type="text/javascript">
        correction.list();
    </script>

