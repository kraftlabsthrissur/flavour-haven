@model List<TradeSuiteApp.Web.Areas.Purchase.Models.SRNViewModel>
@{
    ViewBag.Title = Purchase.SRNList;

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Purchase.SRN</h1>
            <span class="uk-text-upper uk-text-small">@Purchase.SRNList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "ServiceSRN", new { Area = "Purchase" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <ul class="uk-tab" data-uk-tab="{connect:'#tabs-srn-content',animation:'slide-horizontal'}" id="tabs-srn">
                    <li class="uk-active" data-tab="draft"><a>@Purchase.Draft</a></li>
                    <li data-tab="to-be-invoiced"><a>@Purchase.ToBeInvoiced</a></li>
                    <li data-tab="partially-invoiced"><a>@Purchase.PartiallyInvoiced</a></li>
                    <li data-tab="invoiced"><a>@Purchase.Invoiced</a></li>
                    <li data-tab="cancelled"><a>@Purchase.Cancelled</a></li>
                </ul>
                <ul id="tabs-srn-content" class="uk-switcher uk-margin">
                    <li>
                        <table id="srn-draft-list" class="uk-table">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-60">@Purchase.TransNo</th>
                                    <th class="width-80">@Purchase.TransDate</th>
                                    <th>@Purchase.SupplierName</th>
                                    <th class="width-80">@Purchase.ChallanNo</th>
                                    <th class="width-80">@Purchase.ChallanDate</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th>@Common.SerialNo</th>
                                    <th>@Purchase.TransNo</th>
                                    <th>@Purchase.TransDate</th>
                                    <th>@Purchase.SupplierName</th>
                                    <th>@Purchase.ChallanNo</th>
                                    <th>@Purchase.ChallanDate</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                    <li>
                        <table id="srn-to-be-invoiced-list" class="uk-table">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-60">@Purchase.TransNo</th>
                                    <th class="width-80">@Purchase.TransDate</th>
                                    <th>@Purchase.SupplierName</th>
                                    <th class="width-80">@Purchase.ChallanNo</th>
                                    <th class="width-80">@Purchase.ChallanDate</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th>@Common.SerialNo</th>
                                    <th>@Purchase.TransNo</th>
                                    <th>@Purchase.TransDate</th>
                                    <th>@Purchase.SupplierName</th>
                                    <th>@Purchase.ChallanNo</th>
                                    <th>@Purchase.ChallanDate</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                    <li>
                        <table id="srn-partially-invoiced-list" class="uk-table">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-60">@Purchase.TransNo</th>
                                    <th class="width-80">@Purchase.TransDate</th>
                                    <th>@Purchase.SupplierName</th>
                                    <th class="width-80">@Purchase.ChallanNo</th>
                                    <th class="width-80">@Purchase.ChallanDate</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th>@Common.SerialNo</th>
                                    <th>@Purchase.TransNo</th>
                                    <th>@Purchase.TransDate</th>
                                    <th>@Purchase.SupplierName</th>
                                    <th>@Purchase.ChallanNo</th>
                                    <th>@Purchase.ChallanDate</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                    <li>
                        <table id="srn-invoiced-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-60">@Purchase.TransNo</th>
                                    <th class="width-80">@Purchase.TransDate</th>
                                    <th>@Purchase.SupplierName</th>
                                    <th class="width-80">@Purchase.ChallanNo</th>
                                    <th class="width-80">@Purchase.ChallanDate</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th>@Common.SerialNo</th>
                                    <th>@Purchase.TransNo</th>
                                    <th>@Purchase.TransDate</th>
                                    <th>@Purchase.SupplierName</th>
                                    <th>@Purchase.ChallanNo</th>
                                    <th>@Purchase.ChallanDate</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                    <li>
                        <table id="srn-cancelled-list" class="uk-table">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-60">@Purchase.TransNo</th>
                                    <th class="width-80">@Purchase.TransDate</th>
                                    <th>@Purchase.SupplierName</th>
                                    <th class="width-80">@Purchase.ChallanNo</th>
                                    <th class="width-80">@Purchase.ChallanDate</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th>@Common.SerialNo</th>
                                    <th>@Purchase.TransNo</th>
                                    <th>@Purchase.TransDate</th>
                                    <th>@Purchase.SupplierName</th>
                                    <th>@Purchase.ChallanNo</th>
                                    <th>@Purchase.ChallanDate</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/ServiceSRN")

<script type="text/javascript">
    SRN.list();
</script>