<div class="uk-modal" id="select-source" aria-hidden="true" style="display: none; overflow-y: scroll;">
    <div class="uk-modal-dialog uk-modal-dialog-large" style="">
        <div class="uk-modal-header">
            <h3 class="uk-modal-title">Select Purchase Return Order / Purchase Return<i class="material-icons"></i></h3>
        </div>
        <ul class="uk-tab" data-uk-tab="{connect:'#tabs-source-content',animation:'slide-horizontal'}" id="tabs-source">
            <li class="uk-active"><a>@Purchase.PurchaseReturnOrder</a></li>
            <li><a>@Purchase.PurchaseReturn</a></li>
        </ul>
        <ul id="tabs-source-content" class="uk-switcher uk-margin">
            <li>
                <table id="pro-popup-list" class="uk-table" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="width-30">@Common.SerialNo</th>
                            <th class="width-20"></th>
                            <th class="width-40">@Purchase.ReturnNumber</th>
                            <th class="width-40">@Purchase.ReturnDate</th>
                            <th class="width-40">@Purchase.GrossAmount</th>

                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-30">@Common.SerialNo</th>
                            <th class="width-20"></th>
                            <th class="width-40">@Purchase.ReturnNumber</th>
                            <th class="width-40">@Purchase.ReturnDate</th>
                            <th class="width-40">@Purchase.GrossAmount</th>

                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div class="uk-modal-footer uk-text-right">
                    <button type="button" class="md-btn uk-modal-close">Close</button>
                    <button type="button" class="md-btn md-btn-primary uk-modal-close" id="btnOkPRO">Ok</button>
                </div>
            </li>
            <li>
                <table id="rrg-popup-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-30">@Common.SerialNo</th>
                            <th class="width-20"></th>
                            <th class="width-40">@Purchase.TransNo</th>
                            <th class="width-40">@Purchase.TransDate</th>
                            <th class="width-40">@Purchase.GrossAmount</th>

                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-30">@Common.SerialNo</th>
                            <th class="width-20"></th>
                            <th class="width-40">@Purchase.TransNo</th>
                            <th class="width-40">@Purchase.TransDate</th>
                            <th class="width-40">@Purchase.GrossAmount</th>
                        </tr>

                    </thead>
                    <tbody></tbody>
                </table>
                <div class="uk-modal-footer uk-text-right">
                    <button type="button" class="md-btn uk-modal-close">Close</button>
                    <button type="button" class="md-btn md-btn-primary uk-modal-close" id="btnOkRRG">Ok</button>
                </div>
            </li>
        </ul>
    </div>
</div>
