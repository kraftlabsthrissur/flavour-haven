
@model IEnumerable<TradeSuiteApp.Web.Areas.Purchase.Models.InterCompanyPurchaseInvoiceModel>
@{
    ViewBag.Title = "Inter Company Purchase Invoice Stock Items";

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Purchase.InterCompanyPurchaseInvoice</h1>
            <span class="uk-text-upper uk-text-small">@Purchase.InterCompanyPurchaseInvoiceList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "InterCompanyPurchaseInvoice", new { Area = "Purchase" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="purchase-invoice-list" class="uk-table">
                    <thead>
                        <tr>
                            <th class="width-20">
                                @Common.SerialNo
                            </th>
                            <th class="width-60">
                                @Purchase.TransNo
                            </th>
                            <th class="width-80">
                                @Purchase.TransDate
                            </th>
                            <th class="width-60">
                                @Purchase.SalesInvoiceNo
                            </th>
                            <th class="width-80">
                                @Purchase.SalesInvoiceDate
                            </th>
                            <th>
                                @Purchase.SupplierName
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-20">
                                @Common.SerialNo
                            </th>
                            <th class="width-60">
                                @Purchase.TransNo
                            </th>
                            <th class="width-80">
                                @Purchase.TransDate
                            </th>
                            <th class="width-60">
                                @Purchase.SalesInvoiceNo
                            </th>
                            <th class="width-80">
                                @Purchase.SalesInvoiceDate
                            </th>
                            <th>
                                @Purchase.SupplierName
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/InterCompanyPurchaseInvoice")

<script type="text/javascript">
    InterCompanyPurchaseInvoice.list();
</script>

