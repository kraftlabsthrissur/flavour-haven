@model TradeSuiteApp.Web.Areas.Purchase.Models.ServicePRViewModel

@{
    ViewBag.Title = "Create Service Purchase Requisition ";

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Purchase.PurchaseRequisitionForService</h1>
            <span class="uk-text-upper uk-text-small">@Purchase.CreatePurchaseRequisition</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", "<a class='md-btn btnSaveSPr'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("Create", "<a class='md-btn btnSaveSPrNew'>" + Common.SaveAndNew + "</a>")
            @ActionAuthorization.IsAuthorized("Create", "<a class='md-btn btnSaveSPrDraft'>" + Common.SaveAsDraft + "</a>")
           
            @Html.ActionLink(Common.Close, "Index", "ServicePurchaseRequisition", new { Area = "Purchase" }, new { @class = "md-btn " })

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Purchase/Views/ServicePurchaseRequisition/_form.cshtml", Model); }
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/ServicePurchaseRequisition")
@Scripts.Render("~/Js/Page/Item")
@Html.Partial("~/Areas/Masters/Views/Item/ItemList.cshtml")



<script type="text/javascript">
    service_purchase_requisition.init();
</script>
