@model IEnumerable<TradeSuiteApp.Web.Areas.Purchase.Models.PurchaseReturnModel>
@{
    ViewBag.Title = Purchase.PurchaseReturnList;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Purchase.PurchaseReturn</h1>
            <span class="uk-text-upper uk-text-small">@Purchase.PurchaseReturnList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "PurchaseReturnOrder", new { Area = "Purchase" }, new { @class = "md-btn" }))
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Process, "Create", "PurchaseReturnProcessing", new { Area = "Purchase" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <ul class="uk-tab hai" data-uk-tab="{connect:'#tabs-purchase-return-order',animation:'slide-horizontal'}" id="tabs-PurchaseReturnOrder">
                    <li class="uk-active" data-tab="draft"><a>@Purchase.Draft</a></li>
                    <li class="" data-tab="purchase-return-order"><a>@Purchase.SavedPurchaseReturn</a></li>
                </ul>
                <ul id="tabs-purchase-return-order" class="uk-switcher uk-margin">
                    <li>
                        <table id="draft-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Purchase.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Stock.TransDate
                                    </th>
                                    <th>
                                        @Purchase.SupplierName
                                    </th>

                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Purchase.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Stock.TransDate
                                    </th>
                                    <th>
                                        @Purchase.SupplierName
                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                    <li>
                        <table id="purchase-return-order-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Purchase.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Stock.TransDate
                                    </th>
                                    <th>
                                        @Purchase.SupplierName
                                    </th>

                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Purchase.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Stock.TransDate
                                    </th>
                                    <th>
                                        @Purchase.SupplierName
                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/PurchaseReturnOrder")
<script type="text/javascript">
    purchase_return_order.list();
</script>