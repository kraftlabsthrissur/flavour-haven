@model TradeSuiteApp.Web.Areas.Purchase.Models.PurchaseInvoiceModel

@Html.HiddenFor(m => m.SupplierID)
@Html.HiddenFor(m => m.StateID)
@Html.HiddenFor(m => m.IsGSTRegistered)
@{
    ViewBag.Title = @Purchase.CreateNewPurchaseInvoice;
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Purchase.PurchaseInvoiceForStockItems</h1>
            <span class="uk-text-upper uk-text-small">@Purchase.CreateNewPurchaseInvoice</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("ApproveSave", "<a class='md-btn approve'>" + Common.Approve + "</a>")


            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveInvoice'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("SaveAsDraft", "<a class='md-btn btnSaveAsDraftInvoice'>" + Common.SaveAsDraft + "</a>")
            @*@ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSaveAndNew'>" + Common.SaveAndNew + "</a>")*@
            @Html.ActionLink(Common.Close, "Index", "PurchaseInvoice", new { Area = "Purchase" }, new { @class = "md-btn " })

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("/Areas/Purchase/Views/PurchaseInvoice/Form.cshtml", Model); }
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Supplier")
@Scripts.Render("~/Js/Page/PurchaseInvoice")
<script type="text/javascript">
    purchase_invoice.init();
</script>