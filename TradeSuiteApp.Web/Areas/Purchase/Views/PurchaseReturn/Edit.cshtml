@model TradeSuiteApp.Web.Areas.Purchase.Models.PurchaseReturnModel
@{
    ViewBag.Title = Purchase.EditPurchaseReturn;
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Purchase.EditPurchaseReturn</h1>
            <span class="uk-text-upper uk-text-small">@Purchase.EditPurchaseReturn</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", "<a class='md-btn btnSaveAndNew'>" + Common.Save + "</a>")
            @ActionAuthorization.IsAuthorized("Create", "<a class='md-btn btnSaveASDraft'>" + Common.SaveAsDraft + "</a>")         
            @Html.ActionLink(Common.Close, "Index", "PurchaseReturn", new { Area = "Purchase" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @{Html.RenderPartial("_form", Model); }
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/Masters/Views/Supplier/PartialList.cshtml")
@Html.Partial("~/Areas/Masters/Views/Item/StockableList.cshtml")
@Html.Partial("~/Areas/Purchase/Views/PurchaseReturnOrder/GetPRO.cshtml")

@Scripts.Render("~/Js/Page/Supplier")
@Scripts.Render("~/Js/Page/Item")
@Scripts.Render("~/Js/Page/PurchaseReturn")
<script type="text/javascript">
    purchase_return.init();
    purchase_return.get_invoice();
</script>
