                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-80">
                                        @Purchase.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Purchase.PurchaseOrderDate
                                    </th>
                                    <th>
                                        @Purchase.Supplier
                                    </th>
                                    <th>
                                        @Purchase.NetAmount
                                    </th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-80">
                                        @Purchase.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Purchase.PurchaseOrderDate
                                    </th>
                                    <th>
                                        @Purchase.Supplier
                                    </th>
                                    <th>
                                        @Purchase.NetAmount
                                    </th>
                                </tr>
