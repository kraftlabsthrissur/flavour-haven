@{
    ViewBag.Title = "Purchase Invoice List";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Purchase.PurchaseInvoice</h1>
            <span class="uk-text-upper uk-text-small">@Purchase.PurchaseInvoiceList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "DirectPurchaseInvoice", new { Area = "Purchase" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <ul class="uk-tab" data-uk-tab="{connect:'#tabs-purchase-order-content',animation:'slide-horizontal'}" id="tabs-directpurchase">
                    <li class="uk-active" data-tab="draft"><a>@Purchase.Draft</a></li>
                    <li data-tab="Purchased"><a>Purchased</a></li>
                    <li data-tab="cancelled"><a>Cancelled</a></li>
                </ul>
                <ul id="tabs-purchase-order-content" class="uk-switcher uk-margin">
                    <li>
                        <table id="direct-purchase-draft-list" class="uk-table">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-80">
                                        @Purchase.TransNo
                                    </th>
                                    <th class="width-80">
                                        @Purchase.PurchaseOrderDate
                                    </th>
                                    <th>
                                        @Purchase.Supplier
                                    </th>
                                    <th>
                                        @Purchase.NetAmount
                                    </th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
