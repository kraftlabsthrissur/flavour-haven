@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.ItemModel>
@{
    ViewBag.Title = "List of Service Items";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.ServiceItem</h1>
            <span class="uk-text-upper uk-text-small">@Masters.ServiceItemList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "ServiceItem", new { Area = "Masters" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="tbl-item-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-60">@Common.SerialNo</th>
                            <th class="width-40">@Masters.Code</th>
                            <th class="">@Masters.ItemName</th>
                            <th class="width-40">@Masters.Rate</th>
                            <th class="width-120">@Masters.ItemCategory</th>
                            <th class="width-120">@Masters.SalesCategory</th>
                            <th class="width-120">@Masters.AccountsCategory</th>
                            <th class="width-40">@Common.Stock</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>@Masters.Code</th>
                            <th>@Masters.ItemName</th>
                            <th>@Masters.Rate</th>
                            <th>@Masters.ItemCategory</th>
                            <th>@Masters.SalesCategory</th>
                            <th>@Masters.AccountsCategory</th>
                            <th>@Common.Stock</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/ServiceItem")
<script type="text/javascript">
    ServiceItem.list();
</script>
