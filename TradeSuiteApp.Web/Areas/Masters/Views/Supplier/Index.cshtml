@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.SupplierModel>
@{
    ViewBag.Title = "Suppliers";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Suppliers</h1>
            <span class="uk-text-upper uk-text-small">@Masters.SuppliersList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "Supplier", new { Area = "Masters" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <ul class="uk-tab" data-uk-tab="{connect:'#tabs-supplier-content',animation:'slide-horizontal'}" id="tabs-supplier">

                    <li class="uk-active" data-tab="saved-supplier"><a>@Masters.SavedSuppliers</a></li>
                    <li class="" data-tab="draft"><a>@Masters.Draft</a></li>
                </ul>
                @Html.Hidden("List-Type", "SupplierList")
                <ul id="tabs-supplier-content" class="uk-switcher uk-margin">

                    <li>
                        <table id="saved-supplier-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-40">@Masters.Code</th>
                                    <th>@Masters.SupplierName</th>
                                    <th class="width-120">@Masters.Location</th>
                                    <th class="width-120">@Masters.SupplierCategory</th>
                                    <th>@Masters.ItemCategory</th>
                                    <th class="width-80">@Masters.OldCode</th>
                                    <th class="width-40">@Masters.IsGSTRegistered</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-40">@Masters.Code</th>
                                    <th>@Masters.SupplierName</th>
                                    <th class="width-80">@Masters.Location</th>
                                    <th class="width-80">@Masters.SupplierCategory</th>
                                    <th>@Masters.ItemCategory</th>
                                    <th class="width-80">@Masters.OldCode</th>
                                    <th class="width-40">@Masters.IsGSTRegistered</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                    <li>
                        <table id="draft-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-40">@Masters.Code</th>
                                    <th>@Masters.SupplierName</th>
                                    <th class="width-120">@Masters.Location</th>
                                    <th class="width-120">@Masters.SupplierCategory</th>
                                    <th>@Masters.ItemCategory</th>
                                    <th class="width-80">@Masters.OldCode</th>
                                    <th class="width-40">@Masters.IsGSTRegistered</th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-40">@Masters.Code</th>
                                    <th>@Masters.SupplierName</th>
                                    <th class="width-80">@Masters.Location</th>
                                    <th class="width-80">@Masters.SupplierCategory</th>
                                    <th>@Masters.ItemCategory</th>
                                    <th class="width-80">@Masters.OldCode</th>
                                    <th class="width-40">@Masters.IsGSTRegistered</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
    </div>

</div>
@Scripts.Render("~/Js/Page/Supplier")
<script type="text/javascript">
    supplier.index_list();
</script>