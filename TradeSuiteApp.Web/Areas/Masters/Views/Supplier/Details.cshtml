                                                                                            @Html.TextBoxFor(m => m.BankName, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
                                                                                        <div class="uk-width-medium-1-8">
                                                                                            <label>@Masters.BranchName</label>
                                                                                            @Html.TextBoxFor(m => m.BranchName, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
                                                                                        <div class="uk-width-medium-1-8">
                                                                                            <label>@Masters.AccountNumber</label>
                                                                                            @Html.TextBoxFor(m => m.AcNo, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
                                                                                        <div class="uk-width-medium-1-8">
                                                                                            <label>@Masters.IFSC</label>
                                                                                            @Html.TextBoxFor(m => m.IfscNo, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
                                                                                        <div class="uk-width-medium-2-8">
                                                                                            <label>@Masters.TradeLegalName </label>
                                                                                            @Html.TextBoxFor(m => m.TradeLegalName, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
