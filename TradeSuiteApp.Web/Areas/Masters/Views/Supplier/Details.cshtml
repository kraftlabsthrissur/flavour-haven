                                                        <td>
                                                            Fax : @item.Fax <br />Phone : @item.LandLine1 @if (item.LandLine1 != "")
                                                                    { <span>,</span> } @item.LandLine2 <br>Email ID: @item.Email
                                                                </td>
                                                                <td class="uk-text-center">@item.MobileNo</td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>*@
                                                                            </div>
                                                                            <div id="item-details-tblContainer">
                                                                            </div>
                                                                        </li>
                                                                        <li aria-hidden="true" class="" style="width:100%">
                                                                            <div>
                                                                                <div class="uk-width-medium-1-1">
                                                                                    <div class="uk-grid" data-uk-grid-margin>
                                                                                        <div class="uk-width-medium-1-8 uk-hidden">
                                                                                            <label>@Masters.SupplierAccountCategory</label>
                                                                                            @Html.TextBoxFor(m => m.SupplierAccountsCategoryName, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
                                                                                        <div class="uk-width-medium-1-8 uk-hidden">
                                                                                            <label>@Masters.SupplierTaxCategory</label>

                                                                                            @Html.TextBoxFor(m => m.SupplierTaxCategoryName, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
                                                                                        <div class="uk-width-medium-2-8 uk-hidden">
                                                                                            <label>@Masters.SupplierTaxSubCategory</label>
                                                                                            @Html.TextBoxFor(m => m.SupplierTaxSubCategoryName, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
                                                                                        <div class="uk-width-medium-1-8 uk-hidden">
                                                                                            <label>@Masters.PaymentMethod</label>
                                                                                            @Html.TextBoxFor(m => m.PaymentMethodName, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
                                                                                        <div class="uk-width-medium-1-8 uk-hidden">
                                                                                            <label>@Masters.PaymentGroup</label>
                                                                                            @Html.TextBoxFor(m => m.PaymentGroupName, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
                                                                                        <div class="uk-width-medium-2-8">
