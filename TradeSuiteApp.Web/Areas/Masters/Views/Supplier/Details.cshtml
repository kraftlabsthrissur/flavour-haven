@model TradeSuiteApp.Web.Areas.Masters.Models.SupplierModel

@{
    ViewBag.Title = "Supplier Details";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Suppliers</h1>
            <span class="uk-text-upper uk-text-small">@Masters.SupplierDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "edit", "Supplier", new { Area = "Masters", @id = Model.ID }, new { @class = "md-btn " }))
