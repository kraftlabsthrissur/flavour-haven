                                                    @Html.TextBoxFor(m => m.AdhaarCardNo, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                </div>
                                                <div class="uk-width-medium-2-8">
                                                    <label>@Masters.PanCardNo</label>
                                                    @Html.TextBoxFor(m => m.PanCardNo, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
