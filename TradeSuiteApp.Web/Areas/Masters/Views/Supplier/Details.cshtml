                                                                                        </div>
                                                                                        <div class="uk-width-medium-2-8">
                                                                                            <label>@Masters.EmployeeName</label>
                                                                                            @Html.TextBoxFor(m => m.EmployeeName, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </li>
                                                                        <li aria-hidden="true" class="" style="width:100%">
                                                                            <div class="supplier-itemCategory">
                                                                                <div class="uk-width-medium-1-1">
                                                                                    <div class="uk-grid" data-uk-grid-margin id="Item-Category-Detail-Container">
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </li>
                                                                        <li aria-hidden="true" class="" style="width:100%">
                                                                            <div class="supplier-location">
                                                                                <div class="uk-width-medium-1-1">
                                                                                    <div class="uk-grid" data-uk-grid-margin>
                                                                                        @foreach (var location in Model.LocationList)
                                                                                        {
                                                                                            <div class="uk-width-medium-2-8 Locationdiv">
                                                                                                <input class="md-input label-fixed" type="text" value="@location.Text" disabled />
                                                                                            </div>
                                                                                        }
                                                                                    </div>
                                                                                    <input type="hidden" id="Supplier-Location-Mapping" value="0">
                                                                                </div>
                                                                            </div>
                                                                        </li>
                                                                        <li aria-hidden="true" class="" style="width:100%">
                                                                            <div class="uk-form-row">
                                                                                <table id="related-supplier-list" class="uk-table " cellspacing="0" width=100">
