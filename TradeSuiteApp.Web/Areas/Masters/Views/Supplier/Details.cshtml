            {
                @ActionAuthorization.IsAuthorized("Delete", "<a class='md-btn btnDelete'>" + Common.Delete + "</a>")
            }
            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Back, "Index", "Supplier", new { Area = "Masters" }, new { @class = "md-btn " })
