                                    </div>
                                    <div class="uk-width-medium-1-1">
                                        <div class="uk-grid" data-uk-grid-margin>
                                            <label>&nbsp;</label>
                                        </div>
                                        @Html.HiddenFor(m => m.IsBlockForPurcahse)
                                        <input type="checkbox" class="icheckbox IsBlockForPurcahse" data-md-icheck disabled />&nbsp;@Html.Label("Block Purchase")
                                    </div>
                                    <div class="uk-width-medium-1-1">
                                        <div class="uk-grid" data-uk-grid-margin>
                                            <label>&nbsp;</label>
                                        </div>
                                        @Html.HiddenFor(m => m.IsBlockForPayment)
                                        <input type="checkbox" class="icheckbox IsBlockForPayment" data-md-icheck disabled />&nbsp;@Html.Label("Block Payment")
                                    </div>
                                    <div class="uk-width-medium-1-1">
                                        <div class="uk-grid" data-uk-grid-margin>
                                            <label>&nbsp;</label>
                                        </div>
                                        @Html.HiddenFor(m => m.IsBlockForReceipt)
                                        <input type="checkbox" class="icheckbox IsBlockForReceipt" data-md-icheck disabled />&nbsp;@Html.Label("Block Receipt")
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
