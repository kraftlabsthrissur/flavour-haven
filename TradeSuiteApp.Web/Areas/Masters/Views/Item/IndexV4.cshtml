@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.ItemModel>
@{
    ViewBag.Title = "List of Items";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Item</h1>
            <span class="uk-text-upper uk-text-small">@Masters.ItemList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "CreateV4", "Item", new { Area = "Masters" }, new { @class = "md-btn" }))            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="tbl-item-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-60">@Common.SerialNo</th>
                            <th class="width-40">@Masters.Code</th>
                            <th class="width-120">@Masters.Category</th>
                            <th class="">@Masters.Description</th>
                            <th class="width-120 uk-hidden" >@Masters.PartsNo</th>
                            <th class="width-120 uk-hidden">@Masters.PartsClass</th>
                            <th class="width-120 uk-hidden">@Masters.PartsGroup</th>
                            <th class="width-120">@Masters.Remarks</th>
                            <th class="width-120 uk-hidden">@Masters.Model</th>
                            <th class="width-40">@Common.Stock</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>@Masters.Code</th>
                            <th>@Masters.Category</th>
                            <th>@Masters.Description</th>
                            <th class="uk-hidden">@Masters.PartsNo</th>
                            <th class="uk-hidden">@Masters.PartsClass</th>
                            <th class="uk-hidden">@Masters.PartsGroup</th>
                            <th>@Masters.Remarks</th>
                            <th class="uk-hidden">@Masters.Model</th>
                            <th>@Common.Stock</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/ItemV4")
<script type="text/javascript">
    Item.list();
</script>
