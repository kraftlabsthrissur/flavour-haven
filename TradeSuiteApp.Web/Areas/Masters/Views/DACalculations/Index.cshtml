@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.DACalculationsModel>
@{
    ViewBag.Title = "D.A Calculations";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.DACalculations</h1>
            <span class="uk-text-upper uk-text-small">@Masters.DACalculationList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "DACalculations", new { Area = "Masters" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="da-calculation-list" class="uk-table" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="width-30"> @Common.SerialNo</th>
                            <th class="width-20"> @Masters.Code</th>
                            <th class="width-40"> @Masters.EmployeeCategory</th>
                            <th class="width-200">@Masters.EmploymentStatus</th>
                            <th class="width-120">@Masters.PayrollCategory</th>
                            <th class="width-40"> @Masters.Department</th>
                            <th class="width-40"> @Masters.Location</th>
                            <th class="width-40"> @Masters.Month</th>
                            <th class="width-60"> @Masters.StartDate</th>
                            <th class="width-60">@Masters.EndDate</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th> @Common.SerialNo</th>
                            <th> @Masters.Code</th>
                            <th> @Masters.EmployeeCategory</th>
                            <th>@Masters.EmploymentStatus</th>
                            <th>@Masters.PayrollCategory</th>
                            <th> @Masters.Department</th>
                            <th> @Masters.Location</th>
                            <th> @Masters.Month</th>
                            <th> @Masters.StartDate</th>
                            <th>  @Masters.EndDate</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {


                            <tr>
                                <td>
                                    @item.i
                                    @Html.HiddenFor(model => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @item.value.Code
                                </td>
                                <td>
                                    @item.value.EmployeeCategory
                                </td>
                                <td>
                                    @item.value.EmployeeStatus
                                </td>
                                <td>
                                    @item.value.PayrollCategory
                                </td>
                                <td>
                                    @item.value.Department
                                </td>
                                <td>
                                    @item.value.Location
                                </td>
                                <td>
                                    @item.value.Month
                                </td>
                                <td>
                                    @item.value.StartDateStr
                                </td>
                                <td>
                                    @item.value.EndDateStr
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/DACalculation")
