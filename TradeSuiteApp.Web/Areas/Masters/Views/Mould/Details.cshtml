
@model TradeSuiteApp.Web.Areas.Masters.Models.MouldModel
@{
    ViewBag.Title = "Mould Details";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Mould</h1>
            <span class="uk-text-upper uk-text-small">@Masters.MouldDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "Mould", new { Area = "Masters", @id = Model.ID }, new { @class = "md-btn " }))

            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Back, "Index", "Mould", new { Area = "Masters" }, new { @class = "md-btn " })
            <form action="/Reports/Item/Print/@Model.ID" method="POST">
                @ActionAuthorization.IsAuthorized("Print", "<input type='submit' class='md-btn' value='Print' />")

            </form>
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    
        <div class="md-card uk-margin-medium-bottom remove-box-shadow">
            <div class="md-card-content">



                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-8-10">
                        <div class="md-card">
                            <div class="md-card-content master-card-padding">

                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin>
                                        <div class="uk-width-medium-1-1">
                                            <div class="uk-grid" data-uk-grid-margin>
                                                <div class="uk-width-medium-1-8">
                                                    <label>@Masters.Code*</label>
                                                    @Html.TextBoxFor(m => m.Code, new { @class = "md-input", @disabled = "disabled" })
                                                </div>
                                                <div class="uk-width-medium-1-8">
                                                    <label>@Masters.MouldName*</label>
                                                    @Html.TextBoxFor(m => m.MouldName, "", new { maxlength = 100, @class = "md-input label-fixed", @disabled = "disabled" })
                                                </div>
                                                <div class="uk-width-medium-1-8">
                                                    <div class="uk-input-group">
                                                        <label>@Masters.InceptionDate*</label>
                                                        @Html.TextBoxFor(m => m.InceptionDate, new { @class = "md-input label-fixed future-date date", @disabled = "disabled" })
                                                        <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar future-date"></i></span>
                                                    </div>
                                                </div>
                                                <div class="uk-width-medium-1-8">
                                                    <div class="uk-input-group">
                                                        <label>@Masters.ExpairyDate*</label>
                                                        @Html.TextBoxFor(m => m.ExpairyDate, new { @class = "md-input label-fixed future-date date", @disabled = "disabled" })
                                                        <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar future-date"></i></span>
                                                    </div>
                                                </div>
                                                <div class="uk-width-medium-1-4">
                                                    <label>MandatoryMaintenanceTime (InDays)*</label>
                                                    @Html.TextBoxFor(m => m.MandatoryMaintenanceTime, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                </div>
                                                <div class="uk-width-medium-1-8">
                                                    <label>ManufacturedBy</label>
                                                    @Html.TextBoxFor(m => m.ManufacturedBy, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin>
                                        <div class="uk-width-medium-1-1">
                                            <div class="uk-grid" data-uk-grid-margin>
                                                <div class="uk-width-medium-1-8">
                                                    <label>@Masters.CurrentLocation<span>*</span></label>
                                                        @Html.TextBoxFor(m => m.CurrentLocationName, new { @class = "md-input", @disabled = "disabled" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin>
                                        <div class="uk-width-1-1">
                                            <div class="section-group">
                                                <div class="uk-form-row">
                                                    <ul class="uk-tab" data-uk-tab="{connect:'#tabs_1_content'}">
                                                        <li class="uk-active" aria-expanded="true"><a>ITEM DETAILS</a></li>
                                                        <li aria-expanded="true"><a>MACHINE DETAILS</a></li>
                                                    </ul>
                                                    <ul id="tabs_1_content" class="uk-switcher uk-margin" style="width:100%">
                                                        <li aria-hidden="false" class="uk-active" style="width:100%">
                                                            <div class="uk-form-row">
                                                                <div class="uk-grid" data-uk-grid-margin>
                                                                    <div class="uk-width-medium-1-1">
                                                                        <div class="uk-grid" data-uk-grid-margin>


                                                                            <div class="uk-width-medium-1-1">
                                                                                <div class="uk-grid" data-uk-grid-margin>
                                                                                    <div class="uk-width-medium-1-1">
                                                                                        <table id="tbl-Item" class="uk-table" cellspacing="0" width="100%">
                                                                                            <thead>
                                                                                                <tr>
                                                                                                    <th class="width-10">Sl.No</th>
                                                                                                    <th class="width-10">@Masters.Item</th>
                                                                                                    <th class="width-10">@Masters.NoOfCavities</th>
                                                                                                    <th class="width-10">Standard Time For Single Shot(In Days)</th>
                                                                                                    <th class="width-10">Standard Weight For Single Shot</th>
                                                                                                    <th class="width-10">Std.Running Waste Of Single Shot</th>
                                                                                                    <th class="width-10">Std.Shooting Waste Of Single Shot</th>
                                                                                                    <th class="width-10">Std.Grinding Waste Of Single Shot</th>
                                                                                                </tr>
                                                                                            </thead>
                                                                                            <tbody>
                                                                                                @foreach (var item in Model.Items)
                                                                                                {
                                                                                                    <tr>
                                                                                                        <td class="uk-text-center">@(1 + @Model.Items.IndexOf(item))</td>
                                                                                                        <td>@item.ItemName</td>
                                                                                                        <td>@item.NoOfCavity</td>
                                                                                                        <td>@item.StdTime</td>
                                                                                                        <td>@item.StdWeight</td>
                                                                                                        <td>@item.StdRunningWaste</td>
                                                                                                        <td>@item.StdShootingWaste</td>
                                                                                                        <td>@item.StdGrindingWaste</td>
                                                                                                    </tr>
                                                                                                }

                                                                                            </tbody>
                                                                                        </table>
                                                                                    </div>
                                                                                </div>

                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </li>

                                                        <li aria-hidden="false" class="uk-active" style="width:100%">
                                                            <div class="uk-form-row">
                                                                <div class="uk-grid" data-uk-grid-margin>
                                                                    @foreach (var machines in Model.Machines)
                                                                    {
                                                                        <div class="uk-width-medium-2-8">
                                                                            <h5>
                                                                                <input type="checkbox" class="icheckbox check-box machines" data-md-icheck value=@machines.ID @machines.check disabled/>
                                                                                @machines.Machine
                                                                            </h5>
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </div>
                                                            <div class="uk-form-row">
                                                                <div class="uk-grid" data-uk-grid-margin>




                                                                </div>
                                                            </div>
                                                            <div class="uk-form-row">
                                                                <div class="uk-grid" data-uk-grid-margin>
                                                                    <div class="uk-width-medium-2-8">
                                                                        <div class="uk-grid" data-uk-grid-margin>




                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </li>

                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>





