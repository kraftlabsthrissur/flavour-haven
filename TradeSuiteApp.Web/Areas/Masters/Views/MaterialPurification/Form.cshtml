@model TradeSuiteApp.Web.Areas.Masters.Models.MaterialPurificationModel
@{
    ViewBag.Title = "Form";
}
<div class="uk-form-row">
    <div class="uk-grid" data-uk-grid-margin>
        <div class="uk-width-medium-1-1">
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-medium-1-8">
                    <label>@Stock.ItemCategory</label>
                    @Html.DropDownListFor(Model => Model.ItemCategoryID, Model.CategoryList, "Select", new { @class = "md-input label-fixed", @id = "DDLItemCategory" })
                </div>
                <input type="hidden" value="Stock" id="type" />
                @Html.HiddenFor(m => m.ID)
                <div class="uk-width-medium-2-8">
                    <div class="uk-autocomplete " id="Item-autocomplete">
                        <div class="uk-input-group">
                            <label>@Masters.ItemName<span>*</span></label>
                            @Html.TextBoxFor(m => m.ItemName, "", new { @class = "md-input label-fixed" })
                            <span class="uk-input-group-addon">
                                <a data-uk-modal="{target:'#select-item', center:false}">
                                    <i class="uk-input-group-icon uk-icon-search"></i>
                                </a>
                            </span>
                            <script type="text/autocomplete">
                                <ul class="uk-nav uk-nav-autocomplete uk-autocomplete-results">
                                    {{~items}}
                                    <li data-value="{{ $item.Name }}"
                                        data-itemid="{{$item.ID}}"
                                        data-unitid="{{$item.UnitID}}"
                                        data-stock="{{$item.Stock}}"
                                        data-unit="{{$item.Unit}}"
                                        data-processid="{{$item.ProcessID}}"
                                        data-processname="{{$item.Activity}}">
                                        <a>
                                            {{ $item.Name }} ({{{ $item.Unit }}})
                                            @*<div>{{{ $item.Activity }}}</div>*@
                                        </a>
                                    </li>
                                    {{/items}}
                                </ul>
                            </script>
                        </div>
                    </div>
                    @Html.Hidden("ItemID")
                    @Html.Hidden("UnitID")
                </div>
                <div class="uk-width-medium-1-8">
                    <label for="uk_dp_item">@Masters.Unit</label>
                    @Html.TextBoxFor(m => m.Unit, "",new { @class = "md-input", @readonly = "readonly" })
                </div>
            </div>
            <br />
            <div class="uk-grid" data-uk-grid-margin>
                <div class="uk-width-medium-1-8">
                    <label>@Masters.PurificationProcess<span>*</span></label>
                    @Html.DropDownListFor(Model => Model.ProcessID, Model.MaterialPurificationProcessList, "Select", new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-medium-2-8">
                    <div class="uk-autocomplete " id="Purification-Item-autocomplete">
                        <div class="uk-input-group">
                            <label>@Masters.PurificationItemName<span>*</span></label>
                            @Html.TextBoxFor(m => m.PurificationItemName, "", new { @class = "md-input label-fixed" })
                            <span class="uk-input-group-addon">
                                <a data-uk-modal="{target:'#select-material-purification-item', center:false}">
                                    <i class="uk-input-group-icon uk-icon-search"></i>
                                </a>
                            </span>
                            <script type="text/autocomplete">
                                <ul class="uk-nav uk-nav-autocomplete uk-autocomplete-results">
                                    {{~items}}
                                    <li data-value="{{ $item.Name }}"
                                        data-itemid="{{$item.ID}}"
                                        data-unitid="{{$item.UnitID}}"
                                        data-stock="{{$item.Stock}}"
                                        data-unit="{{$item.Unit}}"
                                        data-processid="{{$item.ProcessID}}"
                                        data-processname="{{$item.Activity}}">
                                        <a>
                                            {{ $item.Name }} ({{{ $item.Unit }}})
                                            @*<div>{{{ $item.Activity }}}</div>*@
                                        </a>
                                    </li>
                                    {{/items}}
                                </ul>
                            </script>
                        </div>
                    </div>
                    @Html.Hidden("PurificationItemID")
                    @Html.Hidden("PurificationUnitID")
                </div>
                <div class="uk-width-medium-1-8">
                    <label for="uk_dp_item">@Masters.PurificationUnit</label>
                    @Html.TextBoxFor(m => m.PurificationUnit, "", new { @class = "md-input", @readonly = "readonly" })
                </div>
            </div>
        </div>
    </div>
</div>