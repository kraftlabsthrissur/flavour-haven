@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.MaterialPurificationModel>
@{
    ViewBag.Title = "Index";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.MaterialPurification</h1>
            <span class="uk-text-upper uk-text-small">@Masters.MaterialPurificationList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "MaterialPurification", new { Area = "Masters" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">

                <table id="material-purification-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th > @Masters.ItemName</th>
                            <th class="width-80"> @Masters.UnitName</th>
                            <th >@Masters.PurifiedItemName</th>
                            <th class="width-80"> @Masters.PurifiedUnitName</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th> @Common.SerialNo</th>
                            <th> @Masters.ItemName</th>
                            <th> @Masters.UnitName</th>
                            <th> @Masters.PurifiedItemName </th>
                            <th> @Masters.PurifiedUnitName</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => (item.i))
                                    @Html.HiddenFor(a => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.ItemName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.Unit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.PurificationItemName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.PurificationUnit)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/MaterialPurification")
<script type="text/javascript">
    MaterialPurification.list();
</script>