
@model TradeSuiteApp.Web.Areas.Masters.Models.RoomModel
@{
    ViewBag.Title = @Masters.EditRoom;

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Room</h1>
            <span class="uk-text-upper uk-text-small">@Masters.EditRoom</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")

            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Close, "Index", "Room", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Code</label>
                                            @Html.TextBoxFor(m => m.Code, new { @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-6">
                                            <label>@Masters.Name</label>
                                            @Html.TextBoxFor(m => m.RoomName, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.RoomType</label>
                                            @Html.DropDownListFor(Model => Model.RoomTypeID, Model.RoomTypeList, "Select", new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <div class="uk-input-group">
                                                <label>@Masters.StartDate</label>
                                                @Html.TextBoxFor(m => m.StartDate, new { @class = "md-input label-fixed" })
                                                <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar future-date"></i></span>
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <div class="uk-input-group">
                                                <label>@Masters.EndDate</label>
                                                @Html.TextBoxFor(m => m.EndDate, new { @class = "md-input label-fixed" })
                                                <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar future-date"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Rate</label>
                                            @Html.TextBoxFor(m => m.Rate, new { @class = "md-input label-fixed  mask-positive-currency" })
                                        </div>
                                        <div class="uk-width-medium-1-6">
                                            <label>@Masters.Store</label>
                                            @Html.DropDownListFor(Model => Model.StoreID, Model.StoreList, "Select", new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-6">
                                            <label>@Masters.Description</label>
                                            @Html.TextBoxFor(m => m.Description, new { @class = "md-input label-fixed" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Room")
<script type="text/javascript">
    Room.init();
</script>


