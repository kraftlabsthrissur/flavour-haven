@model TradeSuiteApp.Web.Areas.Masters.Models.RoomModel
@{
    ViewBag.Title = "Form";
}
<div class="section-group">
    <div class="uk-form-row">
        <div class="uk-width-medium-1-1">
            <div class="uk-grid" data-uk-grid-margin="">
                <div class="uk-width-medium-1-10">
                    <label>@Masters.RoomCode<span>*</span></label>
                   @Html.TextBoxFor(m => m.Code, new { @class = "md-input label-fixed", @disabled = "disabled" })
                </div>
                <div class="uk-width-medium-1-6">
                    <label>@Masters.Name<span>*</span></label>
                    @Html.TextBoxFor(m => m.RoomName, new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-medium-1-8">
                    <label>@Masters.RoomType<span>*</span></label>
                    @Html.DropDownListFor(Model => Model.RoomTypeID, Model.RoomTypeList, "Select", new { @class = "md-input label-fixed" })
                </div>
              
                <div class="uk-width-medium-1-10">
                    <div class="uk-input-group">
                        <label>@Masters.StartDate*</label>
                        @Html.TextBoxFor(m => m.StartDate, new { @class = "md-input label-fixed  date future-date" })
                        <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar future-date"></i></span>
                    </div>
                </div>
                <div class="uk-width-medium-1-10">
                    <div class="uk-input-group">
                        <label>@Masters.EndDate*</label>
                        @Html.TextBoxFor(m => m.EndDate, new { @class = "md-input label-fixed  date future-date" })
                        <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar future-date"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section-group">
    <div class="uk-form-row">
        <div class="uk-width-medium-1-1">
            <div class="uk-grid" data-uk-grid-margin="">
                <div class="uk-width-medium-1-10">
                        <label>@Masters.Rate *</label>
                        @Html.TextBoxFor(m => m.Rate, new { @class = "md-input label-fixed mask-positive-currency" })
                </div>
                <div class="uk-width-medium-1-6">
                    <label>@Masters.Store<span>*</span></label>
                    @Html.DropDownListFor(Model => Model.StoreID, Model.StoreList, "Select", new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-medium-1-6">
                        <label>@Masters.Description</label>
                        @Html.TextBoxFor(m => m.Description, new { @class = "md-input label-fixed" })
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Room")
<script type="text/javascript">
    Room.init();
</script>






