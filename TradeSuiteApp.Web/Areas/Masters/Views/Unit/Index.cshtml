@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.UnitModel>
@{
    ViewBag.Title = Masters.UnitList;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Units</h1>
            <span class="uk-text-upper uk-text-small">@Masters.UnitList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "Unit", new { Area = "Masters" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
     <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">            
                <table id="unit-list" class="uk-table" >
                    <thead>
                        <tr>
                            <th width="20">@Common.SerialNo</th>
                            <th>
                                @Masters.Name
                            </th>
                            <th class="width-80">
                                @Masters.QOM
                            </th>
                            <th class="width-80">
                                @Masters.UOM
                            </th>
                           
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th width="20">@Common.SerialNo</th>
                            <th>
                                @Masters.Name
                            </th>
                            <th>
                                @Masters.QOM
                            </th>
                            <th>
                                @Masters.UOM
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => (item.i))
                                    @Html.HiddenFor(a => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.Name)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.QOM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.UOM)
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>                
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Unit")
