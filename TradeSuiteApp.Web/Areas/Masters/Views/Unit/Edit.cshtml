@model TradeSuiteApp.Web.Areas.Masters.Models.UnitModel

@{
    ViewBag.Title = @Masters.EditUnit;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Units</h1>
            <span class="uk-text-upper uk-text-small">@Masters.EditUnit</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", "<a class='md-btn btnUpdate'>" + Common.Save + "</a>")
            
            @Html.ActionLink(Common.Close, "Index", "Unit", new { Area = "Masters" }, new { @class = "md-btn " })
            @Html.HiddenFor(m => m.ID)
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Name</label>
                                            @Html.TextBoxFor(m => m.Name, "", new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.QOM</label>
                                            @Html.TextBoxFor(m => m.QOM, "", new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.UOM</label>
                                            @Html.TextBoxFor(m => m.UOM, "", new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.CF</label>
                                            @Html.TextBoxFor(m => m.CF, "", new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.PackSize </label>
                                            @Html.TextBoxFor(m => m.PackSize, "", new { @class = "md-input label-fixed " })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="uk-width-medium-2-10">
                <div class="uk-form-row">
                    <div class="uk-grid" data-uk-grid-margin="">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Unit")
