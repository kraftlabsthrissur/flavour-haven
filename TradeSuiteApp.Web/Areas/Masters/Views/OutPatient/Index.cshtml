@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.OutPatientModel>
@{
    ViewBag.Title = "Patient";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Patient</h1>
            <span class="uk-text-upper uk-text-small">@Masters.PatientList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "OutPatient", new { Area = "Masters" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">

                <table id="Out-Patient-list" class="uk-table">
                    <thead>
                        <tr>
                            <th class="width-40">
                                @Common.SerialNo
                            </th>
                            <th class="width-100">
                                @Masters.Code
                            </th>
                            <th>
                                @Masters.Name
                            </th>
                            <th class="width-100">
                                @Masters.CustomerCategory
                            </th>
                            <th class="width-80 uk-text-center">
                                @Masters.IsGSTRegistered
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-40">
                                @Common.SerialNo
                            </th>
                            <th class="width-100">
                                @Masters.Code
                            </th>
                            <th>
                                @Masters.Name
                            </th>
                            <th class="width-100">
                                @Masters.CustomerCategory
                            </th>
                            <th class="width-80 uk-text-center">
                                @Masters.IsGSTRegistered
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @item.i
                                    @Html.HiddenFor(a => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @item.value.Code
                                </td>
                                <td>
                                    @item.value.Name
                                </td>
                                <td>
                                   @item.value.Category
                                </td>
                                <td class="uk-text-center">
                                    @item.value.Registered
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/OutPatient")
<script type="text/javascript">
    OutPatient.list();
</script>


