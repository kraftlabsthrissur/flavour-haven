@model TradeSuiteApp.Web.Areas.Masters.Models.BrandModel
@{
    ViewBag.Title = @Masters.EditBrand;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>Brand</h1>
            <span class="uk-text-upper uk-text-small">Edit Brand</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnUpdate'>" + Common.Save + "</a>")

            @Html.ActionLink(Common.Close, "Index", "Brand", new { Area = "Masters" }, new { @class = "md-btn " })
            @Html.HiddenFor(m => m.Id)
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        @*<div class="uk-grid-width-medium-1-10">*@


                                        <div class="uk-width-medium-1-10">
                                            <label>Brand Id<span>*</span></label>
                                            @Html.TextBoxFor(m => m.BrandId, "", new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-10">
                                            <label>Code<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Code, "", new { @class = "md-input label-fixed" })
                                            @Html.HiddenFor(m => m.Id, new { @class = "md-input" })
                                        </div>
                                        <div class="uk-width-medium-1-10">
                                            <label>Brand Name<span>*</span></label>
                                            @Html.TextBoxFor(m => m.BrandName, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-10">
                                            <label>Upload Files</label>
                                            <input type="file" id="NegotiationFiles" name="files" multiple class="md-input label-fixed" title="Upload Files" />
                                            @*@Html.TextBoxFor(m => m.Path, new { @class = "md-input", @disabled = "disabled" })*@

                                        </div>
                                        @Html.HiddenFor(m => m.Path)
                                        @Html.HiddenFor(m => m.image)


                                        @*</div>*@
                                    </div>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@Scripts.Render("~/Js/Page/Brand")
