@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.LocationModel>
@{
    ViewBag.Title = Masters.LocationList;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Common.Location</h1>
            <span class="uk-text-upper uk-text-small">@Masters.LocationList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "Location", new { Area = "Masters" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table class="uk-table" id="location-list" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th class="width-40">@Masters.Code</th>
                            <th>@Masters.Name</th>
                            <th>@Masters.CountryName</th>
                            <th>@Masters.CurrencyName</th>

                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>@Masters.Code</th>
                            <th>@Masters.Name</th>
                            <th>@Masters.CountryName</th>
                            <th>@Masters.CurrencyName</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => (item.i))
                                    @Html.HiddenFor(a => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.Code)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.CountryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.CurrencyName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Location")
<script type="text/javascript">
    Location.list();
</script>