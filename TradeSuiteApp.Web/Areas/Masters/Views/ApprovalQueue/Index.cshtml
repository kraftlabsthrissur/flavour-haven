@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.ApprovalQueueModel>
@{
    ViewBag.Title = @Approvals.ApprovalQueue;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <div class="heading_title">
            <h1>@Approvals.ApprovalQueue</h1>
            <span class="uk-text-upper uk-text-small">@Approvals.ApprovalQueueList</span>
        </div>
        <div class="heading_actions">
            @Html.ActionLink(Common.Create, "Create", "ApprovalQueue", new { Area = "Masters" }, new { @class = "md-btn" })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a href="#">@Common.Action</a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="approval-queue-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-20">
                                @Common.SerialNo
                            </th>
                            <th class="width-80">
                                @Approvals.ApprovalQueue
                            </th>
                            <th >
                                @Common.Location
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>
                                @Common.SerialNo
                            </th>
                            <th>
                                @Approvals.ApprovalQueue
                            </th>
                            <th>
                                @Common.Location
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr class="@item.value.Status">
                                <td>
                                    @Html.DisplayFor(modelItem => (item.i))
                                    @Html.HiddenFor(model => item.value.ID, new { @class = "ID" })
                                </td>
                                <td> @Html.DisplayFor(model => item.value.QueueName)</td>
                                <td>@Html.DisplayFor(model => item.value.Location)</td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/ApprovalQueue")
<script type="text/javascript">
    ApprovalQueue.list();
</script>