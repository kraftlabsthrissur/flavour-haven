@model TradeSuiteApp.Web.Areas.Masters.Models.ContactModel
@{
    ViewBag.Title = @Masters.CreateNewContact;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Contacts</h1>
            <span class="uk-text-upper uk-text-small">@Masters.CreateNewContact</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")

            @Html.ActionLink(Common.Close, "Index", "Contact", new { Area = "Masters" }, new { @class = "md-btn " })
            @Html.HiddenFor(m => m.ID)
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.FirstName<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Firstname, "", new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.LastName<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Lastname, "", new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Phone<span>*</span></label>
                                            @Html.TextBoxFor(m => m.ContactNo, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.AlternateNo</label>
                                            @Html.TextBoxFor(m => m.AlternateNo, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Email<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "md-input label-fixed" })
                                        </div>

                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Address1 *</label>
                                            @Html.TextBox("Address1", "", new { maxlength = 512, @class = "md-input label-fixed" })
                                            <input type="hidden" id="FormIndex" />
                                            <input type="hidden" id="AddressID" />
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Address2 </label>
                                            @Html.TextBox("Address2", "", new { maxlength = 512, @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Address3</label>
                                            @Html.TextBox("Address3", "", new { maxlength = 512, @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Designation<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Designation, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <div class="uk-autocomplete " id="customer-autocomplete">
                                                <div class="uk-input-group">
                                                    <label>@Masters.Company<span>*</span></label>
                                                    @Html.TextBoxFor(model => model.Company, new { @class = "md-input label-fixed" })
                                                    <span class="uk-input-group-addon">
                                                        <a data-uk-modal="{target:'#select-customer', center:false}">
                                                            <i class="uk-input-group-icon uk-icon-search"></i>
                                                        </a>
                                                    </span>
                                                    <script type="text/autocomplete">
                                            <ul class="uk-nav uk-nav-autocomplete uk-autocomplete-results">
                                                {{~items}}
                                                <li data-value="{{ $item.Name }}"
                                                    data-id="{{$item.ID}}"
                                                    data-code="{{$item.Code}}"
                                                    data-state-id="{{$item.StateID}}"
                                                    data-scheme-id="{{$item.SchemeID}}"
                                                    data-price-list-id="{{$item.PriceListID}}"
                                                    data-customer-category="{{$item.CustomerCategory}}"
                                                    data-CustomerCategoryID="{{$item.CustomerCategoryID}}"
                                                    data-cash-discount-percentage="{{$item.CashDiscountPercentage}}"
                                                    data-max-credit-limit="{{$item.MaxCreditLimit}}"
                                                    data-min-credit-limit="{{$item.MinimumCreditLimit}}"
                                                    data-is-gst-registered="{{$item.IsGSTRegistered}}">
                                                    <a>
                                                        {{ $item.Name }} ({{{ $item.Code }}})
                                                        <div>{{{ $item.Location }}}</div>
                                                    </a>
                                                </li>
                                                {{/items}}
                                            </ul>
                                                    </script>
                                                </div>
                                            </div>
                                        </div>
                                        @Html.HiddenFor(model => model.CustomerID)
                                        @Html.HiddenFor(model => model.StateID)
                                        @Html.HiddenFor(model => model.PriceListID)
                                        @Html.HiddenFor(model => model.IsGSTRegistered)
                                        @Html.HiddenFor(model => model.SchemeID)
                                        @Html.HiddenFor(model => model.LocationStateID)
                                        @Html.HiddenFor(model => model.CheckStock)
                                        @Html.HiddenFor(model => model.CustomerCategory)
                                        @Html.HiddenFor(model => model.StoreID)
                                        @Html.HiddenFor(model => model.CashDiscountPercentage)
                                        @Html.HiddenFor(model => model.MinCreditLimit)
                                        @Html.HiddenFor(model => model.MaxCreditLimit)
                                        @Html.HiddenFor(model => model.CreditAmount)
                                        @Html.Hidden("TotalFreightAmt")
                                        @Html.HiddenFor(model => model.FreightTax)
                                        @Html.HiddenFor(model => model.CurrencyID)
                                        @Html.HiddenFor(model => model.CurrencyName)
                                        @Html.HiddenFor(model => model.CurrencyExchangeRate)
                                        @Html.HiddenFor(model => model.IsGST)
                                        @Html.HiddenFor(model => model.IsVat)
                                        @Html.HiddenFor(model => model.TaxTypeID)
                                        @Html.HiddenFor(model => model.CountryID)
                                        @Html.Hidden("FreightTaxAmt")
                                        @Html.Hidden("HistoryItemID")
                                    </div>
                                </div>
                            </div>
                            <div class="uk-width-medium-1-5">
                                <label>@Masters.IsActive</label>
                                <div class="uk-grid uk-margin-small-top" data-uk-grid-margin="">
                                    @Html.HiddenFor(m => m.IsActive)
                                    <div class="uk-input-group">
                                        <input type="checkbox" class="icheckbox IsReceipt" data-md-icheck checked />
                                    </div>
                                </div>
                            </div>
                            <div class="uk-width-medium-2-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/Masters/Views/Customer/CustomerPartialList.cshtml")
@Scripts.Render("~/Js/Page/Contact")
@Scripts.Render("~/Js/Page/Customer")

<script type="text/javascript">

    Contact.init();

</script>
