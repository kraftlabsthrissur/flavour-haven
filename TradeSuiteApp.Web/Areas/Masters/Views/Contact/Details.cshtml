@model TradeSuiteApp.Web.Areas.Masters.Models.ContactModel
@{
    ViewBag.Title = @Masters.ContactDetails;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Contacts</h1>
            <span class="uk-text-upper uk-text-small">@Masters.ContactDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "Contact", new { Area = "Masters", ID = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn " }))

            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Back, "Index", "Contact", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="details-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-2-10">
                                            <label>@Masters.FirstName<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Firstname, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.LastName</label>
                                            @Html.TextBoxFor(m => m.Lastname, new { @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-5">
                                            <label>@Masters.Phone</label>
                                            @Html.TextBoxFor(m => m.ContactNo, new { @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-4">
                                            <label>@Masters.AlternateNo<span>*</span></label>
                                            @Html.TextBoxFor(m => m.AlternateNo, new { @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-5">
                                            <label>@Masters.Email<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Address1 *</label>
                                            @Html.TextBoxFor(m => m.Address1, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                            <input type="hidden" id="FormIndex" />
                                            <input type="hidden" id="AddressID" />
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Address2 *</label>
                                            @Html.TextBoxFor(m => m.Address2, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Address3</label>
                                            @Html.TextBoxFor(m => m.Address3, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Designation<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Designation, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-5">
                                            <label>@Masters.Company<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Company, new { @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-5">
                                            <label>@Masters.IsActive</label>
                                            <div class="uk-grid uk-margin-small-top" data-uk-grid-margin="">
                                                @Html.HiddenFor(m => m.IsActive)
                                                <div class="uk-input-group">
                                                    <input type="checkbox" class="icheckbox IsReceipt" data-md-icheck @(Model.IsActive ? "checked" : "") disabled />
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Contact")
@Scripts.Render("~/Js/Page/Customer")
<script type="text/javascript">

    Contact.init();

</script>


