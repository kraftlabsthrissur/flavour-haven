
@model TradeSuiteApp.Web.Areas.Masters.Models.AccountGroupModel
@{
    ViewBag.Title = @Masters.AccountHeadDetails;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.AccountHead</h1>
            <span class="uk-text-upper uk-text-small">@Masters.AccountHeadDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("EditV3", Html.ActionLink(Common.Edit, "EditV3", "AccountHead", new { Area = "Masters", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn " }))

            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Close, "IndexV3", "AccountHead", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="details-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-1-1">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">

                                        <div class="uk-width-medium-2-10">
                                            <div class="uk-autocomplete " id="group-name-autocomplete">
                                                <label>@Masters.Group</label>
                                                @Html.TextBoxFor(model => model.AccountGroupName, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                @Html.HiddenFor(model => model.AccountGroupID)
                                            </div>
                                        </div>


                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.AccountID</label>
                                            @Html.TextBoxFor(model => model.AccountID, new { @class = "md-input label-fixed" , @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-2-10">
                                            <label>@Masters.Account</label>
                                            @Html.TextBoxFor(model => model.AccountName, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.OpeningAmount</label>
                                            @Html.TextBoxFor(model => model.OpeningAmount, new { @class = "md-input label-fixed mask-currency", @disabled = "disabled" })
                                        </div>

                                        <div class="uk-width-medium-1-8">
                                            <label>Debit/Credit</label>
                                            @Html.TextBoxFor(model => model.OpeningAmountType, new { @class = "md-input label-fixed" , @disabled = "disabled" })
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/AccountHead")




