@model TradeSuiteApp.Web.Areas.Masters.Models.DriverModel
@{
    ViewBag.Title = Masters.EditDriver;
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Driver</h1>
            <span class="uk-text-upper uk-text-small">@Masters.EditDriver</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            
            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Close, "Index", "Driver", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Code<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Code, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Name<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Name, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Address<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Address, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.LicenseNo<span>*</span></label>
                                            @Html.TextBoxFor(m => m.LicenseNo, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Phone<span>*</span></label>
                                            @Html.TextBoxFor(m => m.PhoneNo, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-1">
                                            <div class="uk-grid" data-uk-grid-margin>
                                                <label>&nbsp;</label>
                                            </div>
                                            @Html.HiddenFor(m => m.IsActive)
                                            <input type="checkbox" class="icheckbox IsActive" data-md-icheck />&nbsp;@Html.Label("Is Active")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Driver")
<script type="text/javascript">
    Driver.init();
</script>
