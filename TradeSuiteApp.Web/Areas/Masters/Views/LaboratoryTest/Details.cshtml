
@model TradeSuiteApp.Web.Areas.Masters.Models.LaboratoryTestModel
@{
    ViewBag.Title = @Masters.LaboratoryTestDetails;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.LaboratoryTest</h1>
            <span class="uk-text-upper uk-text-small">@Masters.LaboratoryTestDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "LaboratoryTest", new { Area = "Masters", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn " }))

            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Close, "Index", "LaboratoryTest", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="details-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Code</label>
                                            @Html.TextBoxFor(m => m.Code, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.Name</label>
                                            @Html.TextBoxFor(m => m.Name, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <label>@Masters.BiologicalReference</label>
                                            @Html.TextBoxFor(m => m.BiologicalReference, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                        </div>

                                        <div class="uk-width-medium-1-8">
                                            <div class="uk-input-group">
                                                <label>@Masters.Unit</label>
                                                @Html.TextBoxFor(m => m.Unit, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <div class="uk-input-group">
                                                <label>@Accounts.GSTPercentage</label>
                                                @Html.TextBoxFor(m => m.GSTCategory, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-8">
                                            <div class="uk-input-group">
                                                <label>@Masters.Specimen / Sample</label>
                                                @Html.TextBoxFor(m => m.Specimen, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-2-8">
                                            <div class="uk-input-group">
                                                <label>@Masters.Method / Department</label>
                                                @Html.TextBoxFor(m => m.Method, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <div class="uk-input-group">
                                                <label>@Masters.Rate</label>
                                                @Html.TextBoxFor(m => m.Rate, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <div class="uk-input-group">
                                                <label>@Masters.AddedDate</label>
                                                @Html.TextBoxFor(m => m.AddedDate, new { @class = "md-input label-fixed  date future-date", @disabled = "disabled" })
                                            </div>
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Description</label>
                                            @Html.TextBoxFor(m => m.Description, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label></label><br />
                                            <input type="checkbox" class="icheckbox" @(Convert.ToBoolean(Model.IsAlsoGroup) == true ? "checked='checked'" : string.Empty) disabled data-md-icheck id="IsAlsoGroup" />&nbsp; @Html.Label("Is also a Group")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section-group">
                    <div class="tablescroll">
                        <table id="lab-items-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="">@AHCMS.LabTest</th>
                                    <th class="width-20"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null)
                                {
                                    foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td class="uk-text-center serial-no">@(1 + @Model.Items.IndexOf(item))</td>
                                            <td class="item-name">
                                                @item.LabTest<input type="hidden" class="LabTestID" value=@item.LabTestID />
                                            </td>
                                            <td></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <input type="hidden" id="item-count" value="0" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/LaboratoryTest")




