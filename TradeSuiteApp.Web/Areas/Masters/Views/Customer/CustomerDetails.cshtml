@model TradeSuiteApp.Web.Areas.Masters.Models.CustomerModel
@{
    ViewBag.Title = @Masters.CustomerDetailsList;
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.CustomerDetails</h1>
           
            <span class="uk-text-upper uk-text-small">@Masters.CustomerDetailsList</span>
        </div>
        <div class="heading_actions">
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                @Html.Hidden("CustomerID")
                <table id="customer-details-list" class="uk-table">
                    <thead>
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th class="width-50">@Masters.Code</th>
                            <th class="width-200">@Masters.CustomerName</th>
                            <th class="width-50">@Masters.Category</th>
                            <th class="width-50">@Masters.Location</th>
                            <th class="width-50">@Masters.CustomerScheme</th>
                            <th class="width-30">@Masters.Discount%</th>
                            <th class="width-50">@Masters.PriceList</th>
                            <th class="width-30">@Masters.MinBillingAmount</th>
                            <th class="width-30">@Masters.MaxCreditLimit</th>
                            <th class="width-30">@Masters.OutStandingAmount</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th class="width-50">@Masters.Code</th>
                            <th class="width-200">@Masters.CustomerName</th>
                            <th class="width-50">@Masters.Category</th>
                            <th class="width-50">@Masters.Location</th>
                            <th class="width-50">@Masters.CustomerScheme</th>
                            <th class="width-30">@Masters.Discount%</th>
                            <th class="width-50">@Masters.PriceList</th>
                            <th class="width-30">@Masters.MinBillingAmount</th>
                            <th class="width-30">@Masters.MaxCreditLimit</th>
                            <th class="width-30">@Masters.OutStandingAmount</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Areas/Masters/Views/Customer/CustomerItemDetails.cshtml")

@Scripts.Render("~/Js/Page/Customer")
<script type="text/javascript">
    Customer.customer_details_list();
</script>




