@model TradeSuiteApp.Web.Areas.Masters.Models.GSTSubCategoryModel
@{
    ViewBag.Title = @Masters.GSTSubCategory;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.GSTSubCategory</h1>
            <span class="uk-text-upper uk-text-small">@Masters.CreateGSTSubCategory</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @Html.ActionLink(Common.Close, "Index", "GSTSubCategory", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Name<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Name, new { @class = "md-input label-fixed" })
                                        </div>                                      
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Percentage<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Percentage, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Description<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Description, new { @class = "md-input label-fixed" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/GSTSubCategory")
<script type="text/javascript">
    GSTSubCategory.init();
</script>

