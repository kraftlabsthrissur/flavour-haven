
@model TradeSuiteApp.Web.Areas.Masters.Models.WareHouseModel


<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.WareHouse</h1>
            <span class="uk-text-upper uk-text-small">@Masters.WareHouseDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "edit", "Warehouse", new { Area = "Masters", @id = Model.ID }, new { @class = "md-btn " }))

            @Html.ActionLink(Common.Back, "Index", "Warehouse", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <h3 class="heading_a"></h3>
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-1-1">
                        <div class="uk-form-row">
                            <div class="uk-grid" data-uk-grid-margin>
                                <div class="uk-width-medium-2-8">
                                    <label>@Masters.WareHouseCode</label>
                                    @Html.TextBoxFor(m => m.Code, new { @class = "md-input", @disabled = "disabled" })
                                </div>
                                <div class="uk-width-medium-2-8">
                                    <label>@Masters.WareHouseName</label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "md-input", @disabled = "disabled" })
                                </div>
                                <div class="uk-width-medium-2-8">
                                    <label>@Masters.Place</label>
                                    @Html.TextBoxFor(m => m.Place, new { @class = "md-input", @disabled = "disabled" })
                                </div>                                
                            </div>
                        </div>                      
                        <div class="uk-form-row">
                            <div class="uk-grid" data-uk-grid-margin>
                                <div class="uk-width-medium-2-8">
                                    <label>@Masters.ItemCategory</label>
                                    @Html.TextBoxFor(m => m.ItemTypeName, new { @class = "md-input", @disabled = "disabled" })
                                </div>
                                <div class="uk-width-medium-2-8">
                                    <label>@Masters.Location</label>
                                    @Html.TextBoxFor(m => m.LocationName, new { @class = "md-input", @disabled = "disabled" })
                                </div>
                                <div class="uk-width-medium-2-8">
                                    <label>@Masters.Remarks</label>
                                    @Html.TextBoxFor(m => m.Remarks, new { @class = "md-input", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/WareHouse")


