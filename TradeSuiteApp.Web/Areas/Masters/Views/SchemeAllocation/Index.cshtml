@{
    ViewBag.Title = Masters.SchemeAllocation;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.SchemeAllocation</h1>
            <span class="uk-text-upper uk-text-small">@Masters.SchemeAllocationList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "SchemeAllocation", new { Area = "Masters" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="Scheme-allocation-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-20">
                                @Common.SerialNo
                            </th>
                            <th class="width-40">
                                @Masters.Code
                            </th>
                            <th class="width-80">
                                @Masters.Scheme
                            </th>
                            <th>
                                @Masters.CustomerName
                            </th>
                            <th class="width-80">
                                @Masters.CustomerCategory
                            </th>
                            <th  class="width-80">
                                @Masters.State
                            </th>
                            <th class="width-80">
                                @Masters.District
                            </th>
                            <th class="width-80">
                                @Masters.StartDate
                            </th>
                            <th class="width-80">
                                @Masters.EndDate
                            </th>                            
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>
                                @Common.SerialNo
                            </th>
                            <th>
                                @Masters.Code
                            </th>
                            <th>
                                @Masters.Scheme
                            </th>
                            <th>
                                @Masters.CustomerName
                            </th>
                            <th>
                                @Masters.CustomerCategory
                            </th>
                            <th >
                                @Masters.State
                            </th>
                            <th >
                                @Masters.District
                            </th>
                            <th >
                                @Masters.StartDate
                            </th>
                            <th >
                                @Masters.EndDate
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/SchemeAllocation")
<script type="text/javascript">
    SchemeAllocation.list();
</script>