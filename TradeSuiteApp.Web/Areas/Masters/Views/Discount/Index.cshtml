@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.DiscountModel>

@{
    ViewBag.Title = "Discount";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Discount</h1>
            <span class="uk-text-upper uk-text-small">@Masters.DiscountList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "Discount", new { Area = "Masters" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            @Html.Hidden("List-Type", "DiscountList")
            <div class="md-card-content">
                <table id="discount-list" class="uk-table" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th class="width-40">@Masters.Code</th>
                            <th>@Masters.ItemName</th>
                            <th>@Masters.CustomerName</th>
                            <th class="width-80">@Masters.CustomerCategory</th>
                            <th class="width-40">@Masters.State</th>
                            <th class="width-80">@Masters.BusinessCategory</th>
                            <th class="width-80">@Masters.SalesIncentiveCategory</th>
                            <th class="width-80">@Masters.SalesCategory</th>
                            <th class="width-40">@Masters.DiscountCategoryName</th>
                            <th class="width-40">@Masters.DiscountPercentage</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th class="width-40">@Masters.Code</th>
                            <th>@Masters.ItemName</th>
                            <th>@Masters.CustomerName</th>
                            <th class="width-80">@Masters.CustomerCategory</th>
                            <th class="width-40">@Masters.State</th>
                            <th class="width-80">@Masters.BusinessCategory</th>
                            <th class="width-80">@Masters.SalesIncentiveCategory</th>
                            <th class="width-80">@Masters.SalesCategory</th>
                            <th class="width-40">@Masters.DiscountCategoryName</th>
                            <th class="width-40">@Masters.DiscountPercentage</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Discount")
<script type="text/javascript">
    Discount.list();
</script>