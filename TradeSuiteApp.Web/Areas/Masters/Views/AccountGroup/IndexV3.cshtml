

@model TradeSuiteApp.Web.Areas.Masters.Models.AccountGroupModel
@{
    ViewBag.Title = @Masters.AccountGroupList;
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.AccountGroup</h1>
            <span class="uk-text-upper uk-text-small">@Masters.AccountGroupList</span>
        </div>
        <div class="heading_actions">

            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "CreateV3", "AccountGroup", new { Area = "Masters" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>@Common.Action</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <ul class="uk-tab hai" data-uk-tab="{connect:'#tabs-account-group',animation:'slide-horizontal'}" id="tabs-accountgroup">
                    <li class="uk-active" data-tab="accountgroup"><a>@Masters.AccountGroup</a></li>
                </ul>
                <ul id="tabs-account-group" class="uk-switcher uk-margin">
                    <li>
                        <table id="account-group-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-10">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Masters.AccountGroup
                                    </th>
                                    <th class="width-80">
                                        @Masters.AccountHead
                                    </th>
                                    <th class="width-10">

                                    </th>
                                </tr>
                            </thead>
                            <thead class="search">
                                <tr>
                                    <th class="width-10">
                                        @Common.SerialNo
                                    </th>
                                    <th class="width-80">
                                        @Masters.AccountGroup
                                    </th>
                                    <th class="width-80">
                                        @Masters.AccountHead
                                    </th>
                                    <th class="width-10">
                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/AccountGroup")
<script type="text/javascript">
    AccountGroup.list();
    AccountGroup.init();
</script>