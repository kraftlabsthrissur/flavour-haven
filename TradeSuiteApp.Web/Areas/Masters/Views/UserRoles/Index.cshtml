@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.UserRolesModel>
@{
    ViewBag.Title = "Index";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.UserRoles</h1>
            <span class="uk-text-upper uk-text-small">@Masters.UserRoles</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "UserRoles", new { Area = "Masters" }, new { @class = "md-btn" }))


            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">

                <table id="UserRole" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-40">
                                @Common.SerialNo
                            </th>
                            <th class="width-50">
                                @Masters.UserCode
                            </th>
                            <th class="width-200">
                                @Masters.UserName
                            </th>
                            <th>
                                @Masters.Roles
                            </th>

                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>
                                @Common.SerialNo
                            </th>
                            <th>
                                @Masters.UserCode
                            </th>
                            <th>
                                @Masters.UserName
                            </th>
                            <th>
                                @Masters.Roles
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @item.i
                                    @Html.HiddenFor(a => item.value.UserID, new { @class = "UserID" })
                                    @Html.HiddenFor(m => item.value.ID)
                                </td>
                                <td>
                                    @item.value.Code
                                </td>
                                <td>
                                    @item.value.UserName
                                </td>
                                <td>
                                    @item.value.RoleName
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/UserRole")
<script type="text/javascript">
    UserRole.list();
</script>

