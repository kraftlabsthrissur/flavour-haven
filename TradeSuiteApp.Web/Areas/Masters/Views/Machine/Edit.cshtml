@model TradeSuiteApp.Web.Areas.Masters.Models.MachineModel
@{
    ViewBag.Title = @Masters.EditMachine;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Machine</h1>
            <span class="uk-text-upper uk-text-small">@Masters.EditMachine</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Update + "</a>")

            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Close, "Index", "Machine", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.MachineCode<span>*</span></label>
                                            @Html.TextBoxFor(m => m.MachineCode, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <div class="uk-input-group">
                                                <label>@Masters.InsulationDate<span>*</span></label>
                                                @Html.TextBoxFor(m => m.InsulationDate, @DateTime.Now.ToString("dd-MM-yyyy"), new { @class = "md-input label-fixed past-date date" })
                                                <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar past-date"></i></span>
                                            </div>
                                        </div>

                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Model<span>*</span></label>
                                            @Html.TextBoxFor(m => m.Model, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Location<span>*</span></label>
                                            @Html.DropDownListFor(Model => Model.LocationID, new SelectList(Model.LocationList, "Value", "Text"), "Select", new { @class = "md-input label-fixed", @id = "LocationID" })
                                        </div>
                                        <div class="uk-width-medium-1-6">
                                            <label>@Masters.MachineName<span>*</span></label>
                                            @Html.TextBoxFor(m => m.MachineName, new { @class = "md-input label-fixed" })
                                        </div>
                                        <div class="uk-form-row">
                                            <div class="uk-grid" data-uk-grid-margin="">
                                                <div class="uk-width-medium-1-6">
                                                    <label>@Masters.Process<span>*</span></label>
                                                    @Html.DropDownListFor(Model => Model.ID, new SelectList(Model.ProcessTypeList, "Value", "Text"), "Select", new { @class = "md-input label-fixed", @id = "ProcessID" })
                                                </div>
                                                <div class="uk-width-medium-1-6">
                                                    <label>@Masters.Motor<span>*</span></label>
                                                    @Html.TextBoxFor(m => m.Motor, new { @class = "md-input label-fixed" })
                                                </div>

                                                <div class="uk-width-medium-1-6">
                                                    <label>@Masters.PowerConsumption<span>*</span></label>
                                                    @Html.TextBoxFor(m => m.PowerConsumptionPerHour, new { @class = "md-input label-fixed" })
                                                </div>
                                                <div class="uk-width-medium-1-6">
                                                    <label>@Masters.SoftwareVersion<span>*</span></label>
                                                    @Html.TextBoxFor(m => m.SoftwareVersion, new { @class = "md-input label-fixed" })
                                                </div>
                                                <div class="uk-width-medium-1-6">
                                                    <label>@Masters.MachineNumber<span>*</span></label>
                                                    @Html.TextBoxFor(m => m.MachineNumber, new { @class = "md-input label-fixed" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="uk-width-1-1">
                                            <div class="section-group">
                                                <div class="uk-form-row">
                                                    <div class="uk-grid">
                                                        <div class="uk-width-medium-1-6">
                                                            <label>@Masters.Manufacturer<span>*</span></label>
                                                            @Html.TextBoxFor(m => m.Manufacturer, new { @class = "md-input label-fixed" })
                                                        </div>
                                                        <div class="uk-width-medium-1-8">
                                                            <label>@Masters.NumberOfOperator<span>*</span></label>
                                                            @Html.TextBoxFor(m => m.OperatorCount, new { @class = "md-input label-fixed" })
                                                        </div>
                                                        <div class="uk-width-medium-1-8">
                                                            <label>@Masters.NumberOfHelper<span>*</span></label>
                                                            @Html.TextBoxFor(m => m.HelperCount, new { @class = "md-input label-fixed" })
                                                        </div>
                                                        <div class="uk-width-medium-1-8">
                                                            <label>@Masters.MaintenancePeriod<span>*</span></label>
                                                            @Html.TextBoxFor(m => m.MaintenancePeriod, new { @class = "md-input label-fixed" })
                                                        </div>
                                                        <div class="uk-width-medium-1-8">
                                                            <label>@Masters.AverageCostPerHour</label>
                                                            @Html.TextBoxFor(m => m.AverageCostPerHour, new { @class = "md-input label-fixed" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Machine")
<script type="text/javascript">
    machine.init();
</script>