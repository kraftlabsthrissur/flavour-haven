@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.MachineModel>
@{
    ViewBag.Title = "Index";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Machine</h1>
            <span class="uk-text-upper uk-text-small">@Masters.Machine List</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "Machine", new { Area = "Masters" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table class="uk-table" id="machine-list" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="width-60">@Common.SerialNo</th>
                            <th class="width-100">@Masters.MachineCode</th>
                            <th class="width-100">@Masters.MachineName</th>
                            <th class="width-120">@Masters.InsulationDate</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>@Masters.MachineCode</th>
                            <th>@Masters.MachineName</th>
                            <th>@Masters.InsulationDate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => (item.i))
                                    @Html.HiddenFor(a => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.MachineCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.MachineName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.InsulationDate)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Machine")
<script type="text/javascript">
    machine.list();
</script>