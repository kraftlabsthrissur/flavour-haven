@{
    ViewBag.Title = @Masters.SalesBudgetList;
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.SalesBudget</h1>
            <span class="uk-text-upper uk-text-small">@Masters.SalesBudgetList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "SalesBudget", new { Area = "Masters" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">

                <table id="Sales-Budget-list" class="uk-table">
                    <thead>
                        <tr>
                            <th width="20">
                                @Common.SerialNo
                            </th>
                            <th class="width-40">
                                @Masters.ItemCode
                            </th>
                            <th>
                                @Masters.ItemName
                            </th>
                            <th class="width-80">
                                @Masters.Month
                            </th>
                            <th class="width-80">
                                @Masters.SalesCategory
                            </th>
                            <th class="width-80">
                                @Masters.BatchType
                            </th>
                            <th class="width-80">
                                @Masters.Branch
                            </th>
                            <th class="width-40">
                                @Masters.BudgetQtyInNos

                            </th>
                            <th class="width-40">
                                @Masters.BudgetQtyInKgs
                            </th>
                            <th class="width-40">
                                @Masters.BudgetGrossRevenue
                            </th>
                            <th class="width-40">
                                @Masters.ActualQtyInNos
                            </th>
                            <th class="width-40">
                                @Masters.ActualQtyInKgs

                            </th>
                            <th class="width-40">
                                @Masters.ActualGrossRevenue
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>
                                @Common.SerialNo
                            </th>
                            <th>
                                @Masters.ItemCode
                            </th>
                            <th>
                                @Masters.ItemName
                            </th>
                            <th>
                                @Masters.Month
                            </th>
                            <th>
                                @Masters.SalesCategory
                            </th>
                            <th>
                                @Masters.BatchType
                            </th>
                            <th>
                                @Masters.Branch
                            </th>
                            <th>
                                @Masters.BudgetQtyInNos

                            </th>
                            <th>
                                @Masters.BudgetQtyInKgs
                            </th>
                            <th>
                                @Masters.BudgetGrossRevenue
                            </th>
                            <th>
                                @Masters.ActualQtyInNos
                            </th>
                            <th>
                                @Masters.ActualQtyInKgs

                            </th>
                            <th>
                                @Masters.ActualGrossRevenue
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/SalesBudget")
<script type="text/javascript">
    SalesBudget.list();
</script>




