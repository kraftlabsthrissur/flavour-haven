@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.MouldSettingsModel>
@{
    ViewBag.Title = "MouldSettings Index";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.MouldSettings</h1>
            <span class="uk-text-upper uk-text-small">@Masters.MouldSettingsList</span>
        </div>
        <div class="heading_actions">
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>@Common.Action</a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="mouldsettings-Machine-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-10">
                                @Common.SerialNo
                            </th>
                            <th class="width-40">
                                @Masters.Code
                            </th>
                            <th class="width-120">
                                @Masters.Machine
                            </th>
                            <th class="width-60">
                                @Masters.Mould
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-10">
                                @Common.SerialNo
                            </th>
                            <th class="width-40">
                                @Masters.Code
                            </th>
                            <th class="width-120">
                                @Masters.Machine
                            </th>
                            <th class="width-60">
                                @Masters.Mould
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                       {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => (item.i))
                                @Html.HiddenFor(model => item.value.ID, new { @class = "ID" })
                            </td>
                            <td> @Html.DisplayFor(model => item.value.MachineCode)</td>
                            <td>@Html.DisplayFor(model => item.value.MachineName)</td>
                            <td>@Html.DisplayFor(model => item.value.MouldName)</td>
                        </tr>
                       }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/Js/Page/MouldSettings")
<script type="text/javascript">
    MouldSettings.list();
    MouldSettings.bind_events();
</script>