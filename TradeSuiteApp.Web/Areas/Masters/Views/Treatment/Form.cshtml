
@model TradeSuiteApp.Web.Areas.Masters.Models.TreatmentModel
@{
    ViewBag.Title = "Form";
}
<div class="section-group">
    <div class="uk-form-row">
        <div class="uk-width-medium-1-1">
            <div class="uk-grid" data-uk-grid-margin="">
                <div class="uk-width-medium-1-10">
                    <label>@Masters.TreatmentCode<span>*</span></label>
                    @Html.TextBoxFor(m => m.TreatmentCode, new { @class = "md-input label-fixed", @disabled = "disabled" })
                </div>
                <div class="uk-width-medium-1-6">
                    <label>@Masters.TreatmentName<span>*</span></label>
                    @Html.TextBoxFor(m => m.TreatmentName, new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-medium-1-8 uk-hidden">
                    <label>@Masters.TreatmentGroup<span>*</span></label>
                    @Html.DropDownListFor(Model => Model.TreatmentGroupID, Model.TreatmentGroupList, "Select", new { @class = "md-input label-fixed" })
                </div>
                <div class="uk-width-medium-1-10">
                    <div class="uk-input-group">
                        <label>@Masters.AddedDate*</label>
                        @Html.TextBoxFor(m => m.AddedDate, new { @class = "md-input label-fixed  date future-date" })
                        <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar future-date"></i></span>
                    </div>
                </div>
                <div class="uk-width-medium-1-6">
                    <div class="uk-input-group">
                        <label>@Masters.Description *</label>
                        @Html.TextBoxFor(m => m.Description, new { @class = "md-input label-fixed" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Treatment")
<script type="text/javascript">
    treatment.init();
</script>





