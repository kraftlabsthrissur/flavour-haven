@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.FSOModel>
@{
    ViewBag.Title = "FSO List";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.SalesRepresentatives</h1>
            <span class="uk-text-upper uk-text-small">@Masters.SalesRepresentativesList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "FSO", new { Area = "Masters" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table class="uk-table" id="fso-list" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th>@Masters.FSOName</th>
                            <th class="width-100">@Masters.SalesManager</th>
                            <th class="width-100">@Masters.RegionalSalesManager</th>
                            <th class="width-100">@Masters.ZonalManager</th>
                            <th class="width-100">@Masters.AreaManager</th>
                            <th class="width-100">@Masters.RouteCode</th>
                          
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>@Masters.FSOName</th>
                            <th>@Masters.SalesManager</th>
                            <th>@Masters.RegionalSalesManager</th>
                            <th>@Masters.ZonalManager</th>
                            <th>@Masters.AreaManager</th>
                            <th>@Masters.RouteCode</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => (item.i))
                                    @Html.HiddenFor(a => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.FSOName)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.SalesManager)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.RegionalSalesManager)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.ZonalManager)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.AreaManager)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.RouteCode)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/FSO")
<script type="text/javascript">
    FSO.list();
</script>
