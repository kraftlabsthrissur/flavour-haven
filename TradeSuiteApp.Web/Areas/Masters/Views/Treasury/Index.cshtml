
@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.TreasuryModel>

@{
    ViewBag.Title = Masters.TreasuryList;

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Treasury</h1>
            <span class="uk-text-upper uk-text-small">@Masters.TreasuryList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "Treasury", new { Area = "Masters" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table class="uk-table" id="treasury-list" >
                    <thead>
                        <tr>
                            <th width="20">@Common.SerialNo</th>
                            <th class="width-40">
                                @Masters.Type
                            </th>
                            <th class="width-40">
                                @Masters.AccountCode
                            </th>
                            <th>
                                @Masters.BankName
                            </th>
                            @*<th>
                                @Masters.AliasName
                            </th>
                            <th>
                                @Masters.CoBranchName
                            </th>
                            <th>
                                @Masters.BankBranchName
                            </th>
                            <th>
                                @Masters.AccountType1
                            </th>*@
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>
                                @Masters.Type
                            </th>
                            <th>
                                @Masters.AccountCode
                            </th>
                            <th>
                                @Masters.BankName
                            </th>
                            @*<th>
                                @Masters.AliasName
                            </th>
                            <th>
                                @Masters.CoBranchName
                            </th>
                            <th>
                                @Masters.BankBranchName
                            </th>
                            <th>
                                @Masters.AccountType1
                            </th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => (item.i))
                                    @Html.HiddenFor(a => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.Type)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.AccountCode)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.value.BankName)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.AliasName)

                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.value.CoBranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.BankBranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.AccountType1)
                                </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Treasury")
