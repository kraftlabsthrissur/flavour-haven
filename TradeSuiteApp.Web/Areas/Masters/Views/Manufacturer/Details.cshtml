
@model TradeSuiteApp.Web.Areas.Masters.Models.ManufacturerModel
@{
    ViewBag.Title = @Masters.ManufacturerDetails;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Manufacturer</h1>
            <span class="uk-text-upper uk-text-small">@Masters.ManufacturerDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "Manufacturer", new { Area = "Masters", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn " }))

            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Close, "Index", "Manufacturer", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="details-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-width-medium-1-1">
                            <div class="uk-grid" data-uk-grid-margin="">
                                <div class="uk-width-medium-1-10">
                                    <label>@Masters.Code</label>
                                    @Html.TextBoxFor(m => m.Code, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                </div>
                                <div class="uk-width-medium-1-6">
                                    <label>@Masters.Name</label>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                </div>
                                <div class="uk-width-medium-1-6">
                                    <label>@Masters.AddressLine1</label>
                                    @Html.TextBoxFor(m => m.AddressLine1, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                </div>
                                <div class="uk-width-medium-1-6">
                                    <label>@Masters.AddressLine2</label>
                                    @Html.TextBoxFor(m => m.AddressLine2, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-width-medium-1-1">
                            <div class="uk-grid" data-uk-grid-margin="">
                                <div class="uk-width-medium-1-10">
                                    <label>@Masters.State</label>
                                    @Html.TextBoxFor(m=>m.State, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                </div>
                                <div class="uk-width-medium-1-6">
                                    <label>@Masters.Place</label>
                                    @Html.TextBoxFor(m => m.Place, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                </div>
                                <div class="uk-width-medium-1-6">
                                    <div class="uk-input-group">
                                        <label>@Masters.Phone</label>
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                    </div>
                                </div>
                                <div class="uk-width-medium-1-6">
                                    <label>@Masters.Description</label>
                                    @Html.TextBoxFor(m => m.Description, new { @class = "md-input label-fixed", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Manufacturer")




