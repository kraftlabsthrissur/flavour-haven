
@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.AgeingBucketModel>
@{
    ViewBag.Title =Masters.AgeingBucket;

}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.AgeingBucket</h1>
            <span class="uk-text-upper uk-text-small">@Masters.AgeingBucketList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "AgeingBucket", new { Area = "Masters" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="ageing-bucket-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-20 uk-text-center">
                                @Common.SerialNo
                            </th>
                            <th class="width-40">
                                @Masters.Code
                            </th>
                            <th>
                                @Masters.BucketName
                            </th>
                           
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-20">
                                @Common.SerialNo
                            </th>
                            <th class="width-40">
                                @Masters.Code
                            </th>
                            <th>
                                @Masters.BucketName
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr >
                                <td>
                                    @Html.DisplayFor(modelItem => (item.i))
                                    @Html.HiddenFor(a => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @item.value.Code
                                </td>
                                <td>
                                    @item.value.Name
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/AgeingBucket")

<script type="text/javascript">
    AgeingBucket.init();
</script>


