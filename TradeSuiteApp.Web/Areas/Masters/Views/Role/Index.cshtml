@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.RoleModel>
@{
    ViewBag.Title = Masters.RoleList;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.Role</h1>
            <span class="uk-text-upper uk-text-small">@Masters.RoleList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "Role", new { Area = "Masters" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table class="uk-table" id="role-list" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="width-40">@Common.SerialNo</th>
                            <th class="width-50">
                                @Masters.Code
                            </th>
                            <th class="width-200">
                                @Masters.RoleName
                            </th>
                            <th  class="width-120">
                                @Masters.Remarks
                            </th>
                            <th>
                                @Masters.Actions
                            </th>
                            <th class="width-200">
                                @Masters.Tabs
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>
                                @Masters.Code
                            </th>
                            <th>
                                @Masters.RoleName
                            </th>
                            <th>
                                @Masters.Remarks
                            </th>
                            <th>
                                @Masters.Actions
                            </th>
                            <th>
                                @Masters.Tabs
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @item.i
                                    @Html.HiddenFor(a => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @item.value.Code
                                </td>
                                <td>
                                    @item.value.RoleName
                                </td>
                                <td>
                                    @item.value.Remarks
                                </td>
                                <td>
                                    @item.value.ActionNames
                                </td>
                                <td>
                                    @item.value.Tabs
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/Role")
<script type="text/javascript">
    Role.init();
</script>
