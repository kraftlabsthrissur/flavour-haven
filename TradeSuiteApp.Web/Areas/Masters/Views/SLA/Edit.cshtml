@model TradeSuiteApp.Web.Areas.Masters.Models.SLAModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.SLA</h1>
            <span class="uk-text-upper uk-text-small">@Masters.EditSLA</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn BtnSave'>" + Common.Save + "</a>")
            
            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Close, "Index", "SLA", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_form_content" class="edit-view">
        <div class="md-card uk-margin-medium-bottom remove-box-shadow">
            <div class="md-card-content">
                <div class="uk-grid" data-uk-grid-margin>
                    @{Html.RenderPartial("/Areas/Masters/Views/SLA/Form.cshtml", Model); }
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/SLAMaster")
<script type="text/javascript">
    SLA.init();
</script>



