@model TradeSuiteApp.Web.Areas.Masters.Models.LeaveTypeModel
@{
    ViewBag.Title = "Leave Type Details";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.LeaveTypes</h1>
            <span class="uk-text-upper uk-text-small">@Masters.LeaveTypeDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "LeaveType", new { Area = "Masters", @id = Model.ID }, new { @class = "md-btn " }))
            
            @Html.HiddenFor(m => m.ID)
            @Html.ActionLink(Common.Back, "Index", "LeaveType", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
   
    <div id="page_content_inner" class="form-view">
        <div class="md-card uk-margin-medium-bottom remove-box-shadow">
            <div class="md-card-content">
                <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-medium-8-10">
                        <div class="md-card">
                            <div class="md-card-content master-card-padding">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin>
                                        <div class="uk-width-medium-1-1">
                                            <div class="uk-grid" data-uk-grid-margin>
                                                <div class="uk-width-medium-1-8">
                                                    <label>@Masters.Code</label>
                                                    @Html.TextBoxFor(m => m.Code, new { @class = "md-input", @disabled = "disabled" })
                                                </div>
                                                <div class="uk-width-medium-2-8">
                                                    <label>@Masters.Name *</label>
                                                    @Html.TextBoxFor(m => m.Name, "", new { maxlength = 100, @class = "md-input label-fixed", @disabled = "disabled" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="uk-width-1-1">
                                    <div class="section-group">
                                        <div class="uk-form-row">
                                            <div class="uk-grid">
                                                <div class="uk-width-1-1">
                                                    <ul class="uk-tab" data-uk-tab="{connect:'#tabs_1_content'}">
                                                        <li class="uk-active" aria-expanded="true"><a >Credit</a></li>
                                                        <li><a > Encashment</a></li>
                                                        <li><a > Rules</a></li>
                                                    </ul>
                                                    <ul id="tabs_1_content" class="uk-switcher uk-margin" style="width:100%">
                                                        <li aria-hidden="false" class="uk-active" style="width:100%">
                                                            <div class="uk-grid" data-uk-grid-margin>
                                                                <div class="uk-width-medium-5-10">
                                                                    <div >
                                                                        <div class="uk-grid" data-uk-grid-margin>

                                                                            <div class="uk-width-medium-2-4">
                                                                                <label>@Masters.CreditFrequency *</label>
                                                                                @Html.TextBoxFor(Model=>Model.CreditFrequecy,"",new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                            </div>
                                                                            <div class="uk-width-medium-2-4">
                                                                                <label>@Masters.NoOfDays *</label>
                                                                                @Html.TextBoxFor(Model => Model.NoOfDays, "", new { maxlength = 512, @class = "md-input label-fixed", @disabled = "disabled" })
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </li>
                                                
                                                        <li aria-hidden="true" class="" style="width:100%">
                                                            <div class="uk-width-medium-1-1">
                                                                <div class="uk-form-row">
                                                                    <div class="uk-grid" data-uk-grid-margin>
                                                                        <div class="uk-width-medium-1-6">
                                                                            @{
                                                                                var CanCarry = Model.CanCarryForward== true ? "Checked=":"";
                                                                            }
                                                                            
                                                                            <label>&nbsp;</label>
                                                                              <input type="checkbox" class="icheckbox" id="CanCarryFroward" disabled="disabled"  data-md-icheck @CanCarry />&nbsp;@Html.Label(" Can Carry Forward?")
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="uk-form-row">
                                                                    <div class="uk-grid" data-uk-grid-margin>
                                                                        <div class="uk-width-medium-1-6">
                                                                            @{
                                                                                var Encash = Model.IsEncashable == true ? "Checked=" : "";
                                                                            }
                                                                            <label>&nbsp;</label>
                                                                            <input type="checkbox" class="icheckbox" id="IsEncashable" disabled="disabled"  data-md-icheck @Encash />&nbsp;@Html.Label(" Is Encashable?")
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </li>
                                                        <li aria-hidden="true" class="" style="width:100%">
                                                            <div id="Item-Category-Container" class="supplier-itemCategory">
                                                                <div class="uk-width-medium-1-1">
                                                                    <div class="uk-form-row">
                                                                        <div class="uk-grid" data-uk-grid-margin>
                                                                            <div class="uk-width-medium-1-4">
                                                                                <label>Min. Service period before leave can be applied (days) </label>
                                                                                @Html.TextBoxFor(Model => Model.MinServicePeriod, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                            </div>
                                                                            <div class="uk-width-medium-1-4">
                                                                                <label>Max. Leave balance</label>
                                                                                @Html.TextBoxFor(Model => Model.MaxLeaveBalance, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                &nbsp;&nbsp;
                                                                <div class="uk-form-row">
                                                                    <div class="uk-grid" data-uk-grid-margin>
                                                                        <div class="uk-width-medium-1-4">
                                                                            <label>Min/Instance (days)</label>
                                                                            @Html.TextBoxFor(Model => Model.MinInstanceDays, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                        </div>
                                                                        <div class="uk-width-medium-1-4">
                                                                            <label>Max/Instance (days)</label>
                                                                            @Html.TextBoxFor(Model => Model.MaxInstanceDays, "", new { @class = "md-input label-fixed", @disabled = "disabled" })
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="uk-form-row">
                                                                    <div class="uk-grid" data-uk-grid-margin>
                                                                        <div class="uk-width-medium-1-4">
                                                                            <label>&nbsp;</label>
                                                                            @{
                                                                                var IsLeaveWeekly = Model.IsEncashable == true ? "Checked=" : "";
                                                                            }
                                                                            <input type="checkbox" class="icheckbox" disabled="disabled" id="CanCarryFroward" data-md-icheck @IsLeaveWeekly/>&nbsp;@Html.Label(" Is Leave part of weekly off?")
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="uk-form-row">
                                                                    <div class="uk-grid" data-uk-grid-margin>
                                                                        <div class="uk-width-medium-1-4">
                                                                            <label>&nbsp;</label>
                                                                            @{
                                                                                var IsLeaveHoliday = Model.IsEncashable == true ? "Checked=" : "";
                                                                            }
                                                                            <input type="checkbox" class="icheckbox" id="IsEncashable" disabled="disabled" data-md-icheck @IsLeaveWeekly/>&nbsp;@Html.Label(" Is Leave part of Holiday?")
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </li>

                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@Scripts.Render("~/Js/Page/LeaveType")
<script type="text/javascript">
    LeaveType.init();
</script>
