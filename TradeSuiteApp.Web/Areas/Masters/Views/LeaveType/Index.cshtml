@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.LeaveTypeModel>
@{
    ViewBag.Title = "Leave Types";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.LeaveTypes</h1>
            <span class="uk-text-upper uk-text-small">@Masters.LeaveTypeList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create",Html.ActionLink(Common.Create, "Create", "LeaveType", new { Area = "Masters" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            @*@Html.Hidden("List-Type", "SupplierList")*@
            <div class="md-card-content">
                <table id="leavetype-list" class="uk-table" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="width-30">@Common.SerialNo</th>
                            <th class="width-40">@Masters.Code</th>
                            <th class="width-200">@Masters.Name</th>
                            <th class="width-120">@Masters.EnCashable</th>
                            <th class="width-40">@Masters.CanBeCarriedForward</th>
                            <th class="width-40">@Masters.CreditAt</th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>@Common.SerialNo</th>
                            <th>@Masters.Code</th>
                            <th>@Masters.Name</th>
                            <th>@Masters.EnCashable</th>
                            <th>@Masters.CanBeCarriedForward</th>
                            <th>@Masters.CreditAt</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/LeaveType")
<script type="text/javascript">
    LeaveType.list();
</script>