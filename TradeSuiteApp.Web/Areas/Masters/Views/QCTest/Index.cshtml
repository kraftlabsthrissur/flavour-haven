@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.QctestModel>
@{
    ViewBag.Title = "Index";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.QCTest</h1>
            <span class="uk-text-upper uk-text-small">@Masters.QCTestList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "QCTest", new { Area = "Masters" }, new { @class = "md-btn" }))
            
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">

                <table id="QCTest-list" class="uk-table">
                    <thead>
                        <tr>
                            <th class="width-20">
                                @Common.SerialNo
                            </th>
                            <th>
                                @Masters.Name
                            </th>
                            <th>
                                @Masters.Type
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th width="30">
                                @Common.SerialNo
                            </th>
                            <th>
                                @Masters.Name
                            </th>
                            <th>
                                @Masters.Type
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @item.i
                                    @Html.HiddenFor(a => item.value.ID, new { @class = "ID" })
                                </td>
                                <td>
                                    @item.value.TestName
                                </td>
                                <td>
                                    @item.value.Type
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Js/Page/QCTest")