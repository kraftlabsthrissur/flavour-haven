@model TradeSuiteApp.Web.Areas.Masters.Models.EmployeeModel
@{
    ViewBag.Title = @Masters.EditEmployee;
}
@Styles.Render("~/Css/Employee")
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Common.Employee</h1>
            <span class="uk-text-upper uk-text-small">@Masters.EditEmployee</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Save", "<a class='md-btn btnSave'>" + Common.Save + "</a>")
            @Html.ActionLink(Common.Close, "Index", "Employee", new { Area = "Masters" }, new { @class = "md-btn " })
            @Html.HiddenFor(m => m.ID)
            @Html.HiddenFor(m => m.ASPNetUserID)
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="md-card uk-margin-medium-bottom remove-box-shadow">
        <div class="md-card-content">
            <div class="uk-grid" data-uk-grid-margin>
                @{Html.RenderPartial("/Areas/Masters/Views/Employee/Form.cshtml", Model); }
                <div class="uk-width-medium-2-10">
                    <div class="md-card">
                        <div class="md-card-content uk-card-large small-padding">
                            <div class="uk-grid" data-uk-grid-margin>
                                <div class="uk-width-medium-1-1">
                                    <div class="js-upload" uk-form-custom>
                                        <input type="file" class="dropify" data-default-file="../../Assets/img/avatars/user.png" />
                                    </div>
                                </div>
                                <div class="uk-width-medium-1-1 erpusername uk-hidden">
                                    <label>@Masters.UserName</label>
                                    @Html.TextBox("UserName", Model.UserName, new { @class = "md-input label-fixed"})
                                </div>
                                <div class="uk-width-medium-1-1 erppassword uk-hidden" ">
                                    <label>@Masters.Password</label>
                                    @Html.TextBox("Password", "", new { @class = "md-input label-fixed"})
                                </div>
                                <div class="uk-width-medium-1-1 erpchangepassword uk-hidden">
                                    <input type="checkbox" class="icheckbox" data-md-icheck id="ChangePassword" /> @Html.Label("Change password ")
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="md-card-content">
                        <div class="uk-form-row">
                            <div class="uk-grid" data-uk-grid-margin>
                                <div class="uk-width-medium-5-6">
                                    <label>@Masters.Location</label>
                                    @Html.DropDownListFor(Model => Model.UserLocationID, new SelectList(Model.UserLocationList, "Value", "Text"), "Select", new { @class = "md-input label-fixed" })
                                </div>
                                <div class="uk-width-medium-5-6">
                                    <label>@Masters.DefaultStore</label>
                                    @Html.DropDownListFor(Model => Model.StoreID, new SelectList(Model.DefaultStoreList, "Value", "Text"), "Select", new { @class = "md-input label-fixed" })
                                </div>
                                <div class="uk-width-medium-2-10">
                                    <div class="md-input-wrapper md-input-filled">
                                        <button class="md-btn md-btn-primary md-btn-block md-btn-wave-light waves-effect waves-button waves-light" id="btnAddItem">@Common.Add</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Areas/Masters/Views/Employee/PartialList.cshtml")
@Scripts.Render("~/Js/Page/Employee")
<script type="text/javascript">
    Employee.init();
</script>




