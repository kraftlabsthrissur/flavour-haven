@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.PowerConsumptionModel>
@{
    ViewBag.Title = "Electricity Charges";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.ElectricityCharges</h1>
            <span class="uk-text-upper uk-text-small">@Masters.ElectricityCharges</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "PowerConsumption", new { Area = "Masters" }, new { @class = "md-btn" }))
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table id="Electricity-list" class="uk-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Common.SerialNo
                            </th>
                            <th>
                                @Masters.Location
                            </th>
                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th>
                                @Common.SerialNo
                            </th>
                            <th>
                                @Masters.Location
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @item.i
                                    @Html.HiddenFor(a => item.value.Location, new { @class = "Location" })
                                </td>
                                <td>
                                    @item.value.LocationName
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/Js/Page/PowerConsumption")
<script type="text/javascript">
    PowerConsumption.list();
</script>





