@model IEnumerable<TradeSuiteApp.Web.Areas.Masters.Models.CurrencyConversionModel>
@{
    ViewBag.Title = Masters.CurrencyConversion;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.CurrencyConversion</h1>
            <span class="uk-text-upper uk-text-small">@Masters.CurrencyConversionList</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Create", Html.ActionLink(Common.Create, "Create", "CurrencyConversion", new { Area = "Masters" }, new { @class = "md-btn" }))

            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="list-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <table class="uk-table" id="currencyConvertion-list">
                    <thead>
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th>
                                @Masters.BaseCurrencyCode
                            </th>
                            <th >
                                @Masters.ConversionCurrencyCode
                            </th>
                            <th>
                                @Masters.ExchangeRate
                            </th>
                            <th>
                                @Masters.InverseRate
                            </th>
                            <th>
                                @Masters.Description
                            </th>
                            <th>
                                @Masters.FromDate
                            </th>
                            <th>
                                @Masters.IsActive
                            </th>

                        </tr>
                    </thead>
                    <thead class="search">
                        <tr>
                            <th class="width-20">@Common.SerialNo</th>
                            <th>
                                @Masters.BaseCurrencyCode
                            </th>
                            <th>
                                @Masters.ConversionCurrencyCode
                            </th>
                            <th>
                                @Masters.ExchangeRate
                            </th>
                            <th>
                                @Masters.InverseRate
                            </th>
                            <th>
                                @Masters.Description
                            </th>
                            <th>
                                @Masters.FromDate
                            </th>
                            <th>
                                @Masters.IsActive
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Select((value, i) => new { i = (i + 1), value }))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => (item.i))
                                    @Html.HiddenFor(a => item.value.Id, new { @class = "ID" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.BaseCurrencyCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.ConversionCurrencyCode)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.ExchangeRate)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.value.InverseExchangeRate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.FromDate)
                                </td>
                                <td>
                                    @(item.value.IsActive ? "Active" : "Deactive").
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Js/Page/CurrencyConversion")
