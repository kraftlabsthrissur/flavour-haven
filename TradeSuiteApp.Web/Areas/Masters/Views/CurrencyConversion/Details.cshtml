@model TradeSuiteApp.Web.Areas.Masters.Models.CurrencyConversionModel
@{
    ViewBag.Title = @Masters.CurrencyConversionDetails;
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.CurrencyConversion</h1>
            <span class="uk-text-upper uk-text-small">@Masters.CurrencyConversionDetails</span>
        </div>
        <div class="heading_actions">
            @Html.HiddenFor(m => m.Id)
            @Html.ActionLink(Common.Back, "Index", "CurrencyConversion", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="details-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-3">
                                            <label>@Masters.BaseCurrency<span>*</span></label>
                                            @Html.TextBoxFor(m => m.BaseCurrencyCode, new { @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-3">
                                            <label>@Masters.ConverionCurrency</label>
                                            @Html.TextBoxFor(m => m.ConversionCurrencyCode, new { @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-3">
                                            <label>@Masters.FromDate</label>
                                            @Html.TextBoxFor(m => m.FromDate, new { @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-2-5">
                                            <label>@Masters.Description<span>*</span></label>
                                            @Html.TextAreaFor(m => m.Description, new { @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-3-5">
                                            <label class="uk-form-label" for="form-label-inline"> @Masters.ExchangeRate<b>*&nbsp;&nbsp;One @Html.DisplayFor(m => m.BaseCurrencyCode) = </b></label>
                                            @Html.TextBoxFor(m => m.ExchangeRate, new { @class = "uk-input", @disabled = "disabled" })&nbsp;&nbsp;<b> @Html.DisplayFor(m => m.ConversionCurrencyCode)</b>
                                            <br />
                                            <label class="uk-form-label" for="form-label-inline">@Masters.InverseRate<b><span>*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;One </span> @Html.DisplayFor(m => m.ConversionCurrencyCode) = </b></label>
                                            @Html.TextBoxFor(m => m.InverseExchangeRate, new { @class = "uk-input", @disabled = "disabled" })&nbsp;&nbsp;<b> @Html.DisplayFor(m => m.BaseCurrencyCode)</b>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


