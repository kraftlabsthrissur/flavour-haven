@model TradeSuiteApp.Web.Areas.Masters.Models.PriceListModel
@{
    ViewBag.Title = "BasePriceList Details";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.BasePriceListDetails</h1>
            <span class="uk-text-upper uk-text-small">@Masters.BasePriceListDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "PriceList", new { Area = "Masters", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn " }))


            @Html.ActionLink(Common.Back, "Index", "PriceList", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="details-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Name</label>
                                            @Html.TextBoxFor(m => m.Name, "", new { maxlength = 10, @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.FromDate</label>
                                            @Html.TextBoxFor(m => m.FromDate, "", new { maxlength = 10, @class = "md-input", @disabled = "disabled" })
                                        </div>
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.ToDate</label>
                                            @Html.TextBoxFor(m => m.ToDate, "", new { maxlength = 10, @class = "md-input", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="section-group">
                        <div class="tablescroll">
                            <table id="PriceList" class="uk-table " cellspacing="0" width=100">
                                <thead>
                                    <tr>
                                        <th class="width-10">@Common.SerialNo</th>
                                        <th class="width-100">@Masters.ItemCode</th>
                                        <th class="width-100">@Masters.ItemName</th>
                                        <th class="width-100">@Masters.SalesUnit</th>
                                        <th class="width-100">@Masters.Price</th>
                                        <th class="width-100">@Masters.PackingPrice</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if(Model.Items!=null){
                                    foreach (var item in Model.Items.Select((value, i) => new { i = (i + 1), value }))
                                    {
                                    <tr>
                                        <td class="uk-text-center">
                                            @item.i
                                            <input type="hidden" class="ItemID" value="@item.value.ItemID" />
                                            <input type="hidden" class="ID" value="@item.value.ID" />
                                        </td>
                                        <td>
                                            @item.value.ItemCode
                                        </td>
                                        <td> @item.value.ItemName</td>
                                        <td>@item.value.Unit</td>
                                        <td class="uk-text-right"> @item.value.ISKMRP</td>
                                        <td class="uk-text-right">@item.value.ISKLoosePrice</td>
                                    </tr>
                                    }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



