
@model TradeSuiteApp.Web.Areas.Masters.Models.TurnOverDiscountModel
@{
    ViewBag.Title = "Turn Over Discount";
}
<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.TurnOverDiscount</h1>
            <span class="uk-text-upper uk-text-small">@Masters.TurnOverDiscountDetails</span>
        </div>
        <div class="heading_actions">
            @ActionAuthorization.IsAuthorized("Edit", Html.ActionLink(Common.Edit, "Edit", "TurnOverDiscount", new { Area = "Masters", id = (Model != null) ? Model.ID : 0 }, new { @class = "md-btn " }))
            @Html.HiddenFor(m => m.ID)

            @Html.ActionLink(Common.Back, "Index", "TurnOverDiscount", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="page_content_inner" class="details-view">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-8-10">
                                <div class="uk-form-row">
                                    <div class="uk-grid" data-uk-grid-margin="">
                                        <div class="uk-width-medium-1-8">
                                            <label>@Masters.Date</label>
                                           @Html.TextBoxFor(m => m.Date, new { @class = "md-input", @disabled = "disabled" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="section-group">
                    <div class="tablescroll">
                        <table id="TurnOverDiscount" class="uk-table " cellspacing="0" width=100">
                            <thead>
                                <tr>
                                    <th class="width-20">@Common.SerialNo</th>
                                    <th class="width-50">@Masters.Code</th>
                                    <th class="width-150">@Masters.CustomerName</th>
                                    <th class="width-50">@Masters.TurnOverDiscounts</th>
                                    <th class="width-80">@Masters.FromDate</th>
                                    <th class="width-80">@Masters.ToDate</th>
                                    <th class="width-80">@Masters.Month</th>
                                    <th class="width-80">@Masters.Location</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null)
                                {
                                    foreach (var item in Model.Items.Select((value, i) => new { i = (i + 1), value }))
                                    {
                                        <tr>
                                            <td class="uk-text-center">
                                                @item.i
                                                <input type="hidden" class="ItemID" value="@item.value.CustomerID" />
                                                <input type="hidden" class="ID" value="@item.value.ID" />
                                            </td>
                                            <td>
                                                @item.value.Code    
                                            </td>
                                            <td> @item.value.CustomerName</td>
                                            <td class="uk-text-right">@item.value.TurnOverDiscount </td>
                                            <td> @item.value.FromDate </td>
                                            <td>@item.value.ToDate</td>
                                            <td>@item.value.Month</td>
                                            <td>@item.value.Location</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/Js/Page/TurnOverDiscount")

<script type="text/javascript">
    TurnOverDiscounts.init();
</script>
