@model TradeSuiteApp.Web.Areas.Masters.Models.ConsultationScheduleModel
@{
    ViewBag.Title = "Consultation Schedule Detail";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
        <div class="heading_title">
            <h1>@Masters.ConsultationSchedule</h1>
            <span class="uk-text-upper uk-text-small">@Masters.ConsultationScheduleDetails</span>
        </div>
        <div class="heading_actions">
            @Html.ActionLink(Common.Edit, "Edit", "ConsultationSchedule", new { Area = "Masters", ID = Model.ID }, new { @class = "md-btn Edit" })
            @Html.ActionLink(Common.Close, "Index", "ConsultationSchedule", new { Area = "Masters" }, new { @class = "md-btn " })
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a>Print</a></li>
                    </ul>
                </div>
            </div>
        </div> 
    </div>
    <div id="page_content_inner">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="section-group">
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-2-10">
                                <label>@Masters.Doctor</label>
                                @Html.TextBoxFor(m => m.DoctorName, new { @class = "md-input", @disabled = "disabled" })
                            </div>
                            <div class="uk-width-medium-1-10">
                                <label>@Masters.ConsultationFee</label>
                                @Html.TextBoxFor(m => m.ConsultationFee, new { @class = "md-input mask-numeric", @disabled = "disabled" })
                            </div>
                            <div class="uk-width-medium-1-10">
                                <label>@Masters.ConsultationFeeValidity</label>
                                @Html.TextBoxFor(m => m.ConsultationFeeValidity, new { @class = "md-input mask-numeric", @disabled = "disabled" })
                            </div>
                            <div class="uk-width-medium-1-10">
                                <label>@Masters.TimeSlot</label>
                                @Html.TextBoxFor(m => m.TimeSlot, new { @class = "md-input mask-numeric", @disabled = "disabled" })
                            </div>                            
                        </div>
                        <br />
                    </div>
                </div>
                <div class="section-group">
                    <div class="uk-form-row">
                        <table id="consultation-schedule-list" class="uk-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="width-10">@Common.SerialNo</th>
                                    <th class="width-200">@Masters.ScheduleDays</th>
                                    <th class="width-200">@Masters.StartTime</th>
                                    <th class="width-200">@Masters.EndTime</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null)
                                {
                                    foreach (var item in Model.Items.Select((value, i) => new { i = (i + 1), value }))
                                    {
                                        <tr>
                                            <td class="uk-text-center">
                                                @item.i
                                            </td>
                                            <td> @item.value.WeekDay</td>
                                            <td> @item.value.StartTime</td>
                                            <td> @item.value.EndTime </td>
                                        </tr>;
                                    }
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



