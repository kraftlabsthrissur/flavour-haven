@model TradeSuiteApp.Web.Models.ManageRolePermissionViewModel
@{
    ViewBag.Title = "Access Permission";
}

<div id="page_content">
    <div id="page_heading" data-uk-sticky="{ top: 48, media: 960 }">
        <div class="heading_actions">
            <a  data-uk-tooltip="{pos:'bottom'}" title="Print"><i class="md-icon material-icons">&#xE8AD;</i></a>
            <div data-uk-dropdown>
                <i class="md-icon material-icons">&#xE5D4;</i>
                <div class="uk-dropdown uk-dropdown-small">
                    <ul class="uk-nav">
                        <li><a >@Common.Action</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <span class="uk-text-upper uk-text-small"><h3>Manage Access Permission</h3></span>
    </div>
    <div id="page_content_inner">
        <div class="md-card uk-margin-medium-bottom">
            <div class="md-card-content">
                <div class="row">
                    <div class="col-md-8">
                        @using (Html.BeginForm("UpdateRoleAccessPermission", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()

                            <div class="form-group">
                                @Html.LabelFor(m => m.RoleID)
                                <div class="uk-width-medium-1-5">
                                    @Html.DropDownListFor(m => m.RoleID, (SelectList)ViewBag.Roles, "Select", new { @class = "md-input label-fixed ddlRole", @id = "ddlRole" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Area)
                                <div class="uk-width-medium-1-5">
                                    @Html.DropDownListFor(m => m.Area, (SelectList)ViewBag.Areas, "Select", new { @class = "md-input label-fixed ddlArea", @id = "ddlArea" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Controller)
                                <div class="uk-width-medium-1-5">
                                    @Html.DropDownListFor(m => m.Controller, new SelectList(Enumerable.Empty<SelectListItem>(), "Text", "Value"), "Select", new { @class = "md-input label-fixed ddlController", @id = "ddlController" })
                                </div>
                            </div>
                            <div class="roleModuleContainer" id="roleModuleContainer">
                                @{ Html.RenderPartial("_roleModuleList", Model);}
                            </div>
                            <div class="form-group">
                                <input type="submit" class="md-btn" value="Save" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/Js/Common")
    @Scripts.Render("~/Js/DataTable")
    @Scripts.Render("~/Js/Page/ManageAccessPermission")
}
