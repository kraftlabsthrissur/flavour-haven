@model TradeSuiteApp.Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<div id="page_content">
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div id="page_heading" data-uk-sticky="{ top: 54, media: 960 }">
            <div class="heading_title">
                <h1>@Common.ChangePassword</h1>
                <span class="uk-text-upper uk-text-small">@Common.ChangePassword</span>
            </div>
            <div class="heading_actions">
                <input type="submit" value="Change" class="btn btn-default" />
                <div data-uk-dropdown>
                    <i class="md-icon material-icons">&#xE5D4;</i>
                    <div class="uk-dropdown uk-dropdown-small">
                        <ul class="uk-nav"></ul>
                    </div>
                </div>
            </div>
        </div>

        <div id="page_content_inner" class="form-view">
            <div class="md-card uk-margin-medium-bottom">
                <div class="md-card-content">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-2-10">
                                @Html.LabelFor(m => m.OldPassword)
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "md-input" })
                            </div>
                        </div>
                    </div>

                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-2-10">
                                @Html.LabelFor(m => m.NewPassword)
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "md-input" })
                            </div>
                        </div>
                    </div>

                    <div class="uk-form-row">
                        <div class="uk-grid" data-uk-grid-margin="">
                            <div class="uk-width-medium-2-10">
                                @Html.LabelFor(m => m.ConfirmPassword)
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "md-input" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>